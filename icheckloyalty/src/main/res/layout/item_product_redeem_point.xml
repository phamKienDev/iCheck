<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_stroke_01_gray"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgProduct"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_gravity="center"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="@dimen/size_16"
        android:layout_marginRight="52dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_12"
        android:drawableLeft="@drawable/ic_loyalty_14px"
        android:drawablePadding="@dimen/size_5"
        android:fontFamily="@font/roboto_bold"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginRight="@dimen/size_12"
        android:gravity="center"
        android:background="@drawable/bg_text_product_redeem_point"
        android:paddingLeft="@dimen/size_12"
        android:paddingTop="@dimen/size_4"
        android:paddingRight="@dimen/size_12"
        android:paddingBottom="@dimen/size_4"
        android:textColor="#AF8A32"
        android:textSize="16sp"
        tools:text="125,000" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNameProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_12"
        android:layout_marginTop="@dimen/size_6"
        android:layout_marginRight="@dimen/size_12"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_regular"
        android:includeFontPadding="false"
        android:maxLines="2"
        android:minLines="2"
        android:textColor="#434343"
        tools:text="Viên uống DHC chống lão hóa 30 (tối đa 2 dòng)..." />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/colorAccentRed"
        android:layout_marginBottom="@dimen/size_6"
        android:textSize="10sp"
        android:background="@drawable/bg_corner_4_05_no_solid"
        android:paddingTop="@dimen/size_3"
        android:paddingBottom="@dimen/size_3"
        android:paddingRight="@dimen/size_6"
        android:layout_marginLeft="@dimen/size_12"
        android:paddingLeft="@dimen/size_6"
        android:layout_marginTop="@dimen/size_6"
        tools:text="Nhận tại cửa hàng" />
</LinearLayout>
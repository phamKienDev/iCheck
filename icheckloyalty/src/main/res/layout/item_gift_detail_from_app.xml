<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgGift"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/size_12"
        android:layout_marginEnd="@dimen/size_12"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/imgGift">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgAvatar"
            android:layout_width="@dimen/size_60"
            android:layout_height="@dimen/size_60"
            android:layout_gravity="center"
            android:layout_marginTop="233dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNameShop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/colorSecondary"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/imgAvatar"
            tools:text="Hoàng Hà Mobile" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNameGift"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_16"
            android:ellipsize="end"
            android:gravity="center"
            android:fontFamily="@font/roboto_medium"
            android:maxLines="2"
            android:minLines="1"
            android:textColor="@color/darkGray1"
            android:textSize="16sp"
            tools:text="Mã Ưu đãi giảm 10% khi đặt mâm cúng giỗ tổ ngành sân khấu (tên quà dài không giới hạn...)" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_3"
            android:layout_marginTop="@dimen/size_6"
            android:background="@drawable/line_dotted_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_20"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:fontFamily="@font/roboto_bold"
                android:includeFontPadding="false"
                android:text="Loại quà"
                android:textColor="@color/darkGray1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCategoryGift"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_regular"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textColor="@color/darkGray1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_12"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:fontFamily="@font/roboto_bold"
                android:includeFontPadding="false"
                android:text="Trạng thái"
                android:textColor="@color/darkGray1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_regular"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textColor="@color/darkGray1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_12"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitleDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:fontFamily="@font/roboto_bold"
                android:includeFontPadding="false"
                android:text="Hạn nhận quà"
                android:textColor="@color/darkGray1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTimeGift"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_regular"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textColor="@color/darkGray1" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_20"
            android:fontFamily="@font/roboto_bold"
            android:text="Thông tin quà"
            android:textColor="@color/darkGray1" />

        <WebView
            android:id="@+id/webViewUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8" />

        <LinearLayout
            android:id="@+id/layoutMaDuThuong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_20"
            android:background="@drawable/bg_outline_gray_1_corners_4"
            android:orientation="vertical"
            tools:visibility="visible">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_12"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:text="Mã nhận thưởng của bạn"
                android:textColor="@color/darkGray1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_6"
                android:layout_marginTop="@dimen/size_12"
                android:layout_marginEnd="@dimen/size_6"
                android:layout_marginBottom="@dimen/size_6"
                android:background="@drawable/bg_light_blue_15_corner_4dp"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:letterSpacing="0.15"
                android:paddingTop="@dimen/size_36"
                android:paddingBottom="@dimen/size_36"
                android:singleLine="true"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp"
                tools:targetApi="lollipop"
                tools:text="ABCXYZ" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutStatusGift"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_20"
            android:background="#F5F5F5"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="@dimen/size_12">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvStatusGift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_medium"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textColor="#EB5757"
                android:textSize="16sp"
                tools:text="Bạn đã từ chối nhận quà này" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageView6"
        android:layout_width="0dp"
        android:scaleType="fitXY"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_full_bg_game" />

    <SeekBar
        android:id="@+id/loading_game_progress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="32dp"
        android:paddingEnd="24dp"
        android:paddingStart="24dp"
        android:max="100"
        android:paddingRight="24dp"
        android:progressDrawable="@drawable/progress_loading_game_drawable"
        android:splitTrack="false"
        android:thumb="@drawable/ic_loading_thumb"
        android:thumbOffset="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:progress="100" />

    <TextView
        android:id="@+id/tv_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/loading_game_progress"
        app:layout_constraintTop_toTopOf="@+id/loading_game_progress"
        tools:text="50%" />

</androidx.constraintlayout.widget.ConstraintLayout>
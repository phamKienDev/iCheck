<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/banner"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <LinearLayout
        android:id="@+id/group_end_event"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="185dp"
        android:background="@drawable/rounded_dialog"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_marginTop="32dp"
            android:textColor="#434343"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:id="@+id/tv_event_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="“Vui trung thu cùng bé ( tên sự kiện - không giới hạn dòng - đảm bảo cách lề 12)”"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/tv_end_event"
            android:layout_marginTop="12dp"
            android:textSize="16sp"
            android:textColor="#FF0000"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đã kết thúc."
            android:gravity="center_horizontal" />

        <TextView
            android:layout_marginTop="12dp"
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:text="Cảm ơn bạn đã tham gia sự kiện này. Hy vọng bạn sẽ đồng hành cùng chúng tôi  trong nhiều sự kiện sắp tới!"
            android:textAlignment="center"
            android:textColor="#434343" />

        <Button

            android:id="@+id/btn_wares"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_btn_blue_corner_4"
            android:text="Xem kho quà"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
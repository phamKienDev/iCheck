<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size_12"
    android:background="@drawable/bg_white_corners_10">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appCompatTextView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginTop="@dimen/size_14"
        android:fontFamily="@font/roboto_regular"
        android:includeFontPadding="false"
        android:text="@string/ma_code"
        android:textColor="#828282"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCode"
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_8"
        android:layout_marginTop="@dimen/size_9"
        android:layout_marginRight="@dimen/size_12"
        android:ellipsize="end"
        android:gravity="right"
        android:includeFontPadding="false"
        android:letterSpacing="0.3"
        android:singleLine="true"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/appCompatTextView14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/appCompatTextView14"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appCompatTextView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_12"
        android:layout_marginBottom="@dimen/size_12"
        android:fontFamily="@font/roboto_regular"
        android:includeFontPadding="false"
        android:text="@string/thoi_gian_nhap"
        android:textColor="#828282"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/appCompatTextView14"
        app:layout_constraintTop_toBottomOf="@id/appCompatTextView14" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTime"
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_regular"
        android:gravity="right"
        android:singleLine="true"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/size_5"
        app:layout_constraintBottom_toBottomOf="@id/appCompatTextView15"
        app:layout_constraintEnd_toEndOf="@id/tvCode"
        app:layout_constraintStart_toEndOf="@id/appCompatTextView15"
        app:layout_constraintTop_toTopOf="@id/appCompatTextView15" />
</androidx.constraintlayout.widget.ConstraintLayout>
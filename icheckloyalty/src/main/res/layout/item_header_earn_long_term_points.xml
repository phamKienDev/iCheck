<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgBanner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0"
        app:layout_constraintDimensionRatio="H, 375:150"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@color/orange" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/imgBanner">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_12"
            android:layout_marginEnd="@dimen/size_12"
            android:layout_marginBottom="@dimen/size_20"
            android:elevation="@dimen/size_4"
            app:cardCornerRadius="@dimen/size_10"
            app:layout_constraintDimensionRatio="H, 351:168">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_8"
                    android:layout_marginTop="@dimen/size_8"
                    android:layout_marginEnd="@dimen/size_8"
                    android:background="@drawable/bg_corner_8_blue_vip_opacity_10"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="@dimen/size_0"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/size_8"
                        android:layout_marginTop="@dimen/size_12"
                        android:layout_marginBottom="@dimen/size_12"
                        android:layout_weight="1.5"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvNameUser"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/roboto_medium"
                            android:includeFontPadding="false"
                            android:singleLine="true"
                            android:text="Chào"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_4"
                            android:ellipsize="end"
                            android:fontFamily="@font/roboto_regular"
                            android:includeFontPadding="false"
                            android:singleLine="true"
                            android:text="Điểm thành viên của bạn:"
                            android:textColor="@color/darkG1ray1"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/size_0"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/size_8"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvPoint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="end"
                            android:includeFontPadding="false"
                            android:singleLine="true"
                            android:textColor="@color/blueVip"
                            android:textSize="24sp"
                            tools:text="14,100,000" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvCategoryPoint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="end"
                            android:includeFontPadding="false"
                            android:singleLine="true"
                            android:textColor="@color/blueVip"
                            android:textSize="12sp"
                            tools:text="Hòa Phát88" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_8"
                    android:layout_marginTop="@dimen/size_20"
                    android:layout_marginEnd="@dimen/size_8"
                    android:layout_marginBottom="@dimen/size_12"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/btnCampaign"
                        android:layout_width="@dimen/size_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_vip_information_40px"
                        android:drawablePadding="@dimen/size_10"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center_horizontal"
                        android:text="Chương trình"
                        android:textColor="@color/blueVip"
                        android:textSize="12sp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/btnStore"
                        android:layout_width="@dimen/size_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_vip_store_40px"
                        android:drawablePadding="@dimen/size_10"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center_horizontal"
                        android:text="Cửa hàng\nquà tặng"
                        android:textColor="@color/blueVip"
                        android:textSize="12sp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/btnMyGift"
                        android:layout_width="@dimen/size_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_vip_my_gift_40px"
                        android:drawablePadding="@dimen/size_10"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center_horizontal"
                        android:text="Lịch sử\nđổi quà"
                        android:textColor="@color/blueVip"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
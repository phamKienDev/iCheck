<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/size_36"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="@dimen/size_8"
    card_view:cardElevation="@dimen/size_4"
    card_view:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_24"
            android:layout_marginTop="@dimen/size_20"
            android:layout_marginEnd="@dimen/size_24"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="@string/icheck_thong_bao"
            android:textColor="#424242"
            android:textSize="18sp"
            android:textStyle="normal" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/txtMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_24"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginEnd="@dimen/size_24"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:textColor="#343434"
            android:textSize="14sp"
            android:textStyle="normal"
            tools:text="Bạn chắc chắn bỏ qua khảo sát này chứ?" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_0_5"
            android:layout_marginTop="@dimen/size_20"
            android:background="#33000000" />

        <vn.icheck.android.ichecklibs.view.ButtonSecondary
            android:id="@id/btnDone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_45"
            android:background="?android:attr/selectableItemBackground"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="@string/ok"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="normal" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
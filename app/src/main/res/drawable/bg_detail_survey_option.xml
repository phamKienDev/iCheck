<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/blue" />
                    <corners android:radius="@dimen/size_5" />
                </shape>
            </item>
            <item android:left="@dimen/size_8">
                <shape>
                    <solid android:color="@android:color/white" />
                    <corners android:bottomLeftRadius="@dimen/size_0" android:bottomRightRadius="@dimen/size_5" android:topLeftRadius="@dimen/size_0" android:topRightRadius="@dimen/size_5" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <shape>
            <solid android:color="@android:color/white" />
            <corners android:radius="@dimen/size_5" />
        </shape>
    </item>
</selector>
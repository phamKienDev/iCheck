<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="-3dp"
        android:left="-3dp"
        android:top="-3dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1.5dp"
                android:color="#d8d8d8"
                android:dashWidth="1.5dp"
                android:dashGap="5dp" />
        </shape>
    </item>
</layer-list>



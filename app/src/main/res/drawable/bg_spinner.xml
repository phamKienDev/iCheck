<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <layer-list>

            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="#ffffff" android:startColor="#ffffff" android:type="linear" />

                    <stroke android:width="1dp" android:color="#d8d8d8" />

                    <corners android:radius="40dp" />

                    <padding android:bottom="10dp" android:left="3dp" android:right="11dp" android:top="10dp" />
                </shape>
            </item>

            <item android:right="5dp">

                <bitmap android:gravity="center_vertical|right" android:src="@drawable/ic_down_blue_18px" />

            </item>

        </layer-list>

    </item>

</selector>
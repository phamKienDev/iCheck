<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#161434" />
            <corners android:radius="@dimen/size_40" />
            <stroke
                android:width="@dimen/size_1"
                android:color="#3C5A99" />
            <size android:height="@dimen/size_20"/>
        </shape>
    </item>
    <!-- Define the progress properties like start color, end color etc -->
    <item
        android:id="@android:id/progress"
        android:bottom="@dimen/size_1"
        android:left="@dimen/size_1"
        android:drawable="@color/transparent"
        android:right="@dimen/size_1"
        android:top="@dimen/size_1"
        android:height="@dimen/size_20">

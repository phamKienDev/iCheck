<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/lightBlue" />

                    <corners android:bottomLeftRadius="@dimen/size_0" android:bottomRightRadius="@dimen/size_0" android:topLeftRadius="@dimen/size_4" android:topRightRadius="@dimen/size_4"/>
                </shape>
            </item>
            <item android:bottom="@dimen/size_3">
                <shape>
                    <solid android:color="@color/white" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <shape>
            <solid android:color="@color/transparent" />
        </shape>
    </item>
</selector>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:layout_marginBottom="-10dp"
    android:background="@android:color/white"
    app:cardCornerRadius="@dimen/size_10"
    app:cardElevation="@dimen/size_10">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_16">

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_8"
            android:layout_marginTop="@dimen/size_8"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_18"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintEnd_toStartOf="@+id/tv_distance"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Số nhà 18, chung cư 125A Nguyễn Ngọc Vũ, P. Trung Hoà, Q. Cầu Giấy, Hà Nội" />


        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_12"
            android:textColor="#35384B"
            android:textSize="@dimen/font_18"
            app:layout_constraintBottom_toBottomOf="@+id/tv_shop_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_shop_name"
            app:layout_constraintTop_toTopOf="@+id/tv_shop_name"
            tools:text="(4.5km)" />

        <TextView
            android:id="@+id/tv_shop_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_12"
            android:layout_marginTop="@dimen/size_8"
            android:layout_marginEnd="@dimen/size_12"
            android:drawableStart="@drawable/ic_locale"
            android:drawablePadding="@dimen/size_8"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="@dimen/font_14"
            android:textColor="#35384B"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_shop_name"
            tools:text="Số nhà 18, chung cư 125A Nguyễn Ngọc Vũ, P. Trung Hoà, Q. Cầu Giấy, Hà Nội" />

        <Button
            android:id="@+id/btn_guide"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_32"
            android:layout_marginTop="@dimen/size_40"
            android:layout_marginEnd="@dimen/size_32"
            android:layout_marginBottom="@dimen/size_20"
            android:background="@drawable/bg_blue_corners_40"
            android:text="Chỉ đường"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_shop_address" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@id/imgCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/size_4"
            android:layout_marginLeft="@dimen/size_4"
            android:background="?android:attr/selectableItemBackground"
            android:padding="@dimen/size_8"
            android:src="@drawable/ic_cancel_light_blue_24dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/barlow_semi_bold"
            android:includeFontPadding="false"
            android:paddingTop="@dimen/size_10"
            android:paddingBottom="@dimen/size_10"
            android:text="@string/bao_cao_bai_viet"
            android:textColor="#057dda"
            android:textSize="@dimen/font_18" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="@color/gray" />

    <FrameLayout
        android:id="@id/layoutLoading"
        android:minHeight="200dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@id/layoutMessage"
            layout="@layout/item_message_short"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <LinearLayout
        android:id="@id/layoutContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_16"
        android:orientation="vertical" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@id/edtContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_12"
        android:layout_marginEnd="@dimen/size_12"
        android:background="@drawable/bg_outline_gray_1_corners_4"
        android:fontFamily="@font/barlow_medium"
        android:gravity="top"
        android:hint="@string/mo_ta_noi_dung_khac"
        android:includeFontPadding="false"
        android:maxLines="6"
        android:minLines="3"
        android:paddingStart="@dimen/size_10"
        android:paddingTop="@dimen/size_6"
        android:paddingEnd="@dimen/size_10"
        android:paddingBottom="@dimen/size_6"
        android:textAlignment="gravity"
        android:textColor="@color/collection_product_name"
        android:textColorHint="@color/darkGray2"
        android:textSize="@dimen/font_14"
        android:visibility="gone" />

    <vn.icheck.android.component.view.ButtonLightBlueCorners4
        android:id="@id/btnDone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_36"
        android:layout_marginStart="@dimen/size_12"
        android:layout_marginTop="@dimen/size_10"
        android:layout_marginEnd="@dimen/size_12"
        android:layout_marginBottom="@dimen/size_10"
        android:paddingStart="@dimen/size_10"
        android:paddingTop="@dimen/size_6"
        android:paddingEnd="@dimen/size_10"
        android:paddingBottom="@dimen/size_6"
        android:text="@string/gui_bao_cao"
        android:visibility="gone" />
</LinearLayout>
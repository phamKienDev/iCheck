<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size_10"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/size_16"
    android:paddingBottom="@dimen/size_16">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/barlow_medium"
        android:paddingStart="@dimen/size_12"
        android:paddingEnd="@dimen/size_12"
        android:text="@string/loc_theo_cua_hang"
        android:textColor="#212121"
        android:textSize="@dimen/font_14" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_2"
        android:layout_marginStart="@dimen/size_4"
        android:layout_marginEnd="@dimen/size_4" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMoreType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="@dimen/size_7"
        android:drawableEnd="@drawable/ic_arrow_down_gray_10dp"
        android:drawablePadding="@dimen/size_4"
        android:fontFamily="@font/barlow_medium"
        android:text="@string/hien_thi_them"
        android:textColor="#757575"
        android:textSize="@dimen/font_12" />

</LinearLayout>
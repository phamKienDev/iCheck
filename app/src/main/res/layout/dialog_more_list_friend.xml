<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="51dp"
        android:layout_height="6dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_line_bottom_sheet"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_corners_top_16"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:paddingBottom="@dimen/size_20">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutUnfollow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:paddingStart="@dimen/size_4"
            android:paddingTop="@dimen/size_8"
            android:paddingEnd="@dimen/size_4"
            android:paddingBottom="@dimen/size_8"
            android:visibility="gone">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgUnfollow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_unfollow_40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNameUnfollow"
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_10"
                android:layout_marginLeft="@dimen/size_10"
                android:ellipsize="end"
                android:fontFamily="@font/barlow_medium"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textColor="@color/collection_product_name"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/imgUnfollow"
                app:layout_constraintTop_toTopOf="@id/imgUnfollow"
                tools:text="Bỏ theo dõi Tùng Thanh" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_4"
                android:ellipsize="end"
                android:fontFamily="@font/barlow_medium"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:text="Khi bỏ theo dõi, các bài viết của người này sẽ không hiển thị trên trang chủ của bạn nữa."
                android:textColor="@color/fast_survey_gray"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@id/tvNameUnfollow"
                app:layout_constraintStart_toStartOf="@id/tvNameUnfollow"
                app:layout_constraintTop_toBottomOf="@id/tvNameUnfollow" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutUnFriend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:paddingStart="@dimen/size_4"
            android:paddingTop="@dimen/size_8"
            android:paddingEnd="@dimen/size_4"
            android:paddingBottom="@dimen/size_8">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgUnfriend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_unfriend_40px"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvUnfriend"
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_10"
                android:layout_marginLeft="@dimen/size_10"
                android:ellipsize="end"
                android:fontFamily="@font/barlow_medium"
                android:includeFontPadding="false"
                android:singleLine="true"
                tools:text="Hủy kết bạn Tùng Thanh"
                android:textColor="@color/collection_product_name"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/imgUnfriend"
                app:layout_constraintTop_toTopOf="@id/imgUnfriend" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_4"
                android:ellipsize="end"
                android:fontFamily="@font/barlow_medium"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:text="Tất cả các hoạt động của người này sẽ không hiển thị tới bạn. "
                android:textColor="@color/fast_survey_gray"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@id/tvUnfriend"
                app:layout_constraintStart_toStartOf="@id/tvUnfriend"
                app:layout_constraintTop_toBottomOf="@id/tvUnfriend" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutReportUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:paddingStart="@dimen/size_4"
            android:paddingTop="@dimen/size_8"
            android:paddingEnd="@dimen/size_4"
            android:paddingBottom="@dimen/size_8">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgReportUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_report_40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvReportUser"
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_10"
                android:layout_marginLeft="@dimen/size_10"
                android:ellipsize="end"
                android:fontFamily="@font/barlow_medium"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="Báo cáo người dùng"
                android:textColor="@color/collection_product_name"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/imgReportUser"
                app:layout_constraintTop_toTopOf="@id/imgReportUser" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_4"
                android:fontFamily="@font/barlow_medium"
                android:includeFontPadding="false"
                android:text="Bạn nhận thấy người dùng này có những hoạt động mang nội dung spam, nhạy cảm? Hãy cho chúng tôi biết."
                android:textColor="@color/fast_survey_gray"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@id/tvReportUser"
                app:layout_constraintStart_toStartOf="@id/tvReportUser"
                app:layout_constraintTop_toBottomOf="@id/tvReportUser" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
    
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:paddingTop="@dimen/size_20">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layoutKeyboard"
        android:layout_alignParentTop="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <vn.icheck.android.ui.edittext.FocusableEditText
                android:id="@+id/edt_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_62"
                android:layout_marginLeft="@dimen/size_62"
                android:layout_marginTop="@dimen/size_28"
                android:layout_marginEnd="@dimen/size_62"
                android:layout_marginRight="@dimen/size_62"
                android:digits="0123456789"
                android:ems="10"
                android:focusableInTouchMode="true"
                android:hint="@string/nhap_so_dien_thoai"
                android:inputType="number"
                android:paddingBottom="@dimen/size_20"
                android:textAlignment="center"
                android:textColor="#212121"
                android:textSize="@dimen/font_16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <vn.icheck.android.ui.edittext.FocusableEditText
                android:id="@id/edtPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_62"
                android:layout_marginTop="@dimen/size_16"
                android:layout_marginEnd="@dimen/size_62"
                android:ems="10"
                android:focusableInTouchMode="true"
                android:hint="@string/nhap_mat_khau"
                android:inputType="numberPassword"
                android:paddingStart="@dimen/size_24"
                android:paddingBottom="@dimen/size_20"
                android:textAlignment="center"
                android:textColor="#212121"
                android:textSize="@dimen/font_16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_phone" />

            <vn.icheck.android.ui.EnableButton
                android:id="@+id/btn_login"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_36"
                android:layout_marginStart="@dimen/size_62"
                android:layout_marginLeft="@dimen/size_62"
                android:layout_marginTop="@dimen/size_32"
                android:layout_marginEnd="@dimen/size_62"
                android:layout_marginRight="@dimen/size_62"
                android:includeFontPadding="false"
                android:text="@string/dang_nhap"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtPassword" />

            <TextView
                android:id="@+id/btn_forgot_pw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_62"
                android:layout_marginLeft="@dimen/size_62"
                android:layout_marginTop="@dimen/size_16"
                android:fontFamily="@font/barlow_medium"
                android:text="@string/quen_mat_khau"
                android:textColor="#757575"
                android:textSize="@dimen/font_12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_login" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_4"
                android:layout_marginLeft="@dimen/size_4"
                app:layout_constraintBottom_toBottomOf="@+id/btn_forgot_pw"
                app:layout_constraintStart_toEndOf="@+id/btn_forgot_pw"
                app:layout_constraintTop_toTopOf="@+id/btn_forgot_pw"
                app:srcCompat="@drawable/ic_bulkhead_12px" />

            <TextView
                android:id="@+id/tv_problem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_4"
                android:layout_marginLeft="@dimen/size_4"
                android:fontFamily="@font/barlow_medium"
                android:text="@string/ban_gap_van_de_voi_dang_nhap"
                android:textColor="#757575"
                android:textSize="@dimen/font_12"
                app:layout_constraintBottom_toBottomOf="@+id/btn_forgot_pw"
                app:layout_constraintStart_toEndOf="@+id/imageView6"
                app:layout_constraintTop_toTopOf="@+id/btn_forgot_pw" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_login_otp"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_36"
                android:layout_marginStart="@dimen/size_62"
                android:layout_marginLeft="@dimen/size_62"
                android:layout_marginTop="@dimen/size_50"
                android:layout_marginEnd="@dimen/size_62"
                android:layout_marginRight="@dimen/size_62"
                android:background="@drawable/bg_login_otp"
                android:fontFamily="@font/barlow_semi_bold"
                android:text="@string/dang_nhap_bang_otp"
                android:textAllCaps="false"
                android:textColor="#057DDA"
                android:textSize="@dimen/font_16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_problem" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_32"
                android:fontFamily="@font/barlow_medium"
                android:text="Hoặc đăng nhập bằng"
                android:textSize="@dimen/font_12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_login_otp" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/size_1"
                android:layout_marginStart="@dimen/size_62"
                android:layout_marginLeft="@dimen/size_62"
                android:layout_marginEnd="@dimen/size_10"
                android:layout_marginRight="@dimen/size_10"
                android:background="#B4B4B4"
                app:layout_constraintBottom_toBottomOf="@+id/textView27"
                app:layout_constraintEnd_toStartOf="@+id/textView27"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView27" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/size_1"
                android:layout_marginStart="@dimen/size_10"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_marginEnd="@dimen/size_62"
                android:layout_marginRight="@dimen/size_62"
                android:background="#B4B4B4"
                app:layout_constraintBottom_toBottomOf="@+id/textView27"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView27"
                app:layout_constraintTop_toTopOf="@+id/textView27" />

            <ImageView
                android:id="@+id/btn_login_facebook"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_40"
                android:layout_marginTop="@dimen/size_22"
                android:layout_marginBottom="@dimen/size_24"
                android:background="@drawable/bg_btn_facebook"
                android:paddingStart="@dimen/size_16"
                android:paddingTop="@dimen/size_10"
                android:paddingEnd="@dimen/size_16"
                android:paddingBottom="@dimen/size_10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView27"
                app:srcCompat="@drawable/ic_facebook" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <FrameLayout
        android:id="@id/layoutKeyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorBackgroundGray">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/btnKeyboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/size_12"
            android:drawableStart="@drawable/ic_keyboard_black_18dp"
            android:drawablePadding="@dimen/size_8"
            android:paddingTop="@dimen/size_4"
            android:paddingBottom="@dimen/size_4"
            android:text="@string/doi_ban_phiim"
            android:textColor="@color/colorNormalText"
            android:visibility="gone" />
    </FrameLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="@dimen/size_50"
        android:layout_height="@dimen/size_6"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_white_corners_10" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_12"
        android:background="@drawable/bg_white_corners_top_16">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@id/imgAvatar"
            android:layout_width="@dimen/size_40"
            android:layout_height="@dimen/size_40"
            android:layout_marginTop="@dimen/size_8"
            app:avatarSize="@dimen/size_56"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvRank"
            app:rankSize="@dimen/size_24"
            tools:src="@drawable/ic_circle_avatar_default" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/tvRank"
            android:layout_width="@dimen/size_16"
            android:layout_height="@dimen/size_16"
            android:layout_marginStart="@dimen/size_26"
            android:layout_marginLeft="@dimen/size_34"
            android:layout_marginTop="@dimen/size_10"
            app:layout_constraintStart_toStartOf="@id/imgAvatar"
            app:layout_constraintTop_toTopOf="parent"
            tools:drawableEnd="@drawable/ic_avatar_rank_silver_16dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_23"
            android:layout_marginLeft="@dimen/size_23"
            android:layout_marginTop="@dimen/size_27"
            app:layout_constraintStart_toStartOf="@id/imgAvatar"
            app:layout_constraintTop_toTopOf="@id/imgAvatar"
            tools:drawableEnd="@drawable/ic_notification_comment_20dp" />

        <vn.icheck.android.ichecklibs.view.normal_text.TextNormalBarlowMedium
            android:id="@id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_18"
            android:layout_marginTop="@dimen/size_14"
            android:layout_marginEnd="@dimen/size_18"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:textSize="@dimen/font_14"
            app:layout_constraintTop_toBottomOf="@id/imgAvatar"
            tools:text="Hà Linh vừa bình luận về bài đánh giá bạn đang theo dõi (giới hạn 3 dòng)" />

        <View
            android:id="@id/viewLine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_0_5"
            android:layout_marginStart="@dimen/size_12"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginEnd="@dimen/size_12"
            android:background="@color/colorBackgroundPopup"
            app:layout_constraintTop_toBottomOf="@id/tvTitle" />

        <LinearLayout
            android:id="@id/layoutContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_2"
            android:layout_marginBottom="@dimen/size_12"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewLine">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Interactive_Option_Item"
                android:drawableStart="@drawable/ic_read_40dp"
                android:drawableLeft="@drawable/ic_read_40dp"
                android:text="@string/danh_dau_da_doc" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Interactive_Option_Item"
                android:drawableStart="@drawable/ic_turn_off_notification_40dp"
                android:drawableLeft="@drawable/ic_turn_off_notification_40dp"
                android:text="Tắt thông báo cho đối tượng này" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Interactive_Option_Item"
                android:drawableStart="@drawable/ic_unfollow_40dp"
                android:drawableLeft="@drawable/ic_unfollow_40dp"
                android:text="@string/xoa_thong_bao_nay" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
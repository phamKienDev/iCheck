<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgAvaPage"
            android:layout_width="@dimen/size_70"
            android:layout_height="@dimen/size_70"
            android:layout_marginStart="@dimen/size_12"
            android:layout_marginLeft="@dimen/size_12"
            android:layout_marginTop="@dimen/size_16"
            app:civ_border_color="#D8D8D8"
            app:civ_border_width="@dimen/size_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@color/colorPrimary" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@id/imgEditAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_50"
            android:src="@drawable/ic_edit_img_26px"
            app:layout_constraintEnd_toEndOf="@id/imgAvaPage"
            app:layout_constraintTop_toTopOf="@id/imgAvaPage" />

        <LinearLayout
            android:id="@+id/layoutName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_12"
            android:layout_marginLeft="@dimen/size_12"
            android:layout_marginEnd="@dimen/size_12"
            android:layout_marginRight="@dimen/size_12"
            app:layout_constraintBottom_toTopOf="@id/tvNameTypePage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgAvaPage"
            app:layout_constraintTop_toTopOf="@id/imgAvaPage">

            <vn.icheck.android.ichecklibs.view.TextBarlowSemiBold
                android:id="@id/tvNamePage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:textSize="@dimen/font_20"
                tools:text="Unilever Vietnam Official Unilever Vietnam Official  Unilever Vietnam Official Unilever Vietnam Official  " />
        </LinearLayout>

        <vn.icheck.android.ichecklibs.view.secondary.TextBarlowMediumSecondary
            android:id="@+id/tvNameTypePage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Doanh nghiệp"
            android:textSize="@dimen/font_12"
            app:layout_constraintBottom_toBottomOf="@id/imgAvaPage"
            app:layout_constraintStart_toStartOf="@id/layoutName"
            app:layout_constraintTop_toBottomOf="@id/layoutName" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_12"
        android:layout_marginTop="@dimen/size_16"
        android:layout_marginEnd="@dimen/size_12"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btnChinh"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_40"
            android:layout_weight="1"
            android:background="@drawable/bg_corners_4_light_blue_solid"
            android:gravity="center">

            <vn.icheck.android.ichecklibs.view.TextBarlowSemiBold
                android:id="@+id/tvChinh"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:drawablePadding="6.3dp"
                android:fontFamily="@font/barlow_semi_bold"
                android:gravity="center"
                android:text="@string/theo_doi"
                android:textColor="#ffffff"
                android:textSize="@dimen/font_16" />

        </LinearLayout>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnPhu"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_40"
            android:layout_marginStart="@dimen/size_8"
            android:layout_marginLeft="@dimen/size_8"
            android:drawableStart="@drawable/ic_phone_blue_16dp"
            android:drawableLeft="@drawable/ic_phone_blue_16dp"
            android:gravity="center"
            android:paddingStart="@dimen/size_23"
            android:paddingEnd="@dimen/size_23" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnMore"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_40"
            android:layout_marginStart="@dimen/size_8"
            android:layout_marginLeft="@dimen/size_8"
            android:drawableStart="@drawable/ic_more_blue_16"
            android:drawableLeft="@drawable/ic_more_blue_16"
            android:gravity="center"
            android:paddingStart="@dimen/size_23"
            android:paddingEnd="@dimen/size_23" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/size_12"
        android:layout_marginTop="@dimen/size_14"
        android:layout_marginEnd="@dimen/size_12"
        android:gravity="center"
        android:orientation="horizontal">

        <vn.icheck.android.component.view.ListAvatar
            android:id="@+id/img_list_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />

        <vn.icheck.android.ichecklibs.view.second_text.TextSecondBarlowMedium
            android:id="@id/tv_number_follow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_10"
            android:layout_marginLeft="@dimen/size_10"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="@dimen/font_14"
            tools:text="Huy, Quân, Hoàng và 3.000 người khác theo dõi trang này " />
    </LinearLayout>

    <View
        android:id="@id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0_5"
        android:layout_marginTop="11.5dp"
        android:background="@color/placeholder_bg" />

    <LinearLayout
        android:id="@+id/containerOverview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_12"
        android:layout_marginBottom="@dimen/size_12"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/containerProduct"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <vn.icheck.android.ichecklibs.view.secondary.TextBarlowSemiBoldSecondary
                android:id="@id/tvCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_20"
                tools:text="10" />

            <vn.icheck.android.ichecklibs.view.secondary.TextBarlowSemiBoldSecondary
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sản phẩm"
                android:textSize="@dimen/font_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <vn.icheck.android.ichecklibs.view.secondary.TextBarlowSemiBoldSecondary
                android:id="@id/tvRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_20"
                tools:text="4.5/5" />

            <vn.icheck.android.ichecklibs.view.secondary.TextBarlowSemiBoldSecondary
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đánh giá"
                android:textSize="@dimen/font_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <vn.icheck.android.ichecklibs.view.secondary.TextBarlowSemiBoldSecondary
                android:id="@+id/tvCountScan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_20"
                tools:text="186.820" />

            <vn.icheck.android.ichecklibs.view.secondary.TextBarlowSemiBoldSecondary
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lượt quét"
                android:textSize="@dimen/font_14" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/viewbg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_10"
        android:background="@color/darkGray6" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerCreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <vn.icheck.android.ichecklibs.view.secondary.TextBarlowMediumSecondary
            android:id="@+id/textView36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_12"
            android:layout_marginTop="@dimen/size_10"
            android:text="Đăng bài mới"
            android:textSize="@dimen/font_18"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_avatar"
            android:layout_width="@dimen/size_40"
            android:layout_height="@dimen/size_40"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginBottom="@dimen/size_18"
            android:src="@drawable/ic_business_v2"
            app:civ_border_color="@color/gray"
            app:civ_border_width="@dimen/size_0_5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView36"
            app:layout_constraintTop_toBottomOf="@+id/textView36" />


        <TextView
            android:id="@+id/textView45"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/size_8"
            android:layout_marginLeft="@dimen/size_8"
            android:layout_marginEnd="@dimen/size_8"
            android:layout_marginRight="@dimen/size_8"
            android:gravity="center_vertical"
            android:text="Hãy chia sẻ những thông tin hữu ích nào!"
            android:textColor="#B4B4B4"
            app:layout_constraintBottom_toBottomOf="@+id/user_avatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/user_avatar"
            app:layout_constraintTop_toTopOf="@+id/user_avatar" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
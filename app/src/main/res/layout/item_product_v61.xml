<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingStart="@dimen/size_12"
    android:paddingTop="@dimen/size_12"
    android:paddingEnd="@dimen/size_12"
    android:paddingBottom="@dimen/size_16">

    <vn.icheck.android.ichecklibs.view.second_text.TextSecondBarlowSemiBold
        android:id="@id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/dang_cap_nhat"
        android:textSize="@dimen/font_20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="90,000đ" />

    <vn.icheck.android.ichecklibs.view.normal_text.TextNormalBarlowSemiBold
        android:id="@id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8"
        android:hint="@string/dang_cap_nhat"
        android:textSize="@dimen/font_16"
        app:layout_constraintTop_toBottomOf="@+id/tvPrice"
        tools:text="Điện thoại IPHONE 7 PLUS hàng nguyên hộp chưa active - 100% NEW (không giới hạn dòng)" />

    <vn.icheck.android.ichecklibs.view.second_text.TextSecondBarlowMedium
        android:id="@id/tvBarcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_10"
        android:drawableStart="@drawable/ic_barcode_dark_gray_3_18px"
        android:drawablePadding="@dimen/size_8"
        android:gravity="center_vertical"
        android:hint="@string/dang_cap_nhat"
        android:textSize="@dimen/font_14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvName"
        tools:text="09293938383" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@id/imgCountry"
        android:layout_width="@dimen/size_18"
        android:layout_height="@dimen/size_18"
        android:layout_marginEnd="@dimen/size_8"
        app:layout_constraintBottom_toBottomOf="@+id/tvCountry"
        app:layout_constraintEnd_toStartOf="@+id/tvCountry"
        app:layout_constraintTop_toTopOf="@+id/tvCountry" />

    <vn.icheck.android.ichecklibs.view.second_text.TextSecondBarlowMedium
        android:id="@id/tvCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_14"
        app:layout_constraintBottom_toBottomOf="@+id/tvBarcode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvBarcode"
        tools:text="Hàn Quốc" />
</androidx.constraintlayout.widget.ConstraintLayout>
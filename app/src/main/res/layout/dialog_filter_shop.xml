<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:layout_marginLeft="@dimen/size_13"
    android:layout_marginRight="@dimen/size_13"
    android:background="@drawable/bg_white_corners_8">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@id/imgClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/size_15"
        android:paddingTop="@dimen/size_10"
        android:paddingBottom="@dimen/size_10"
        app:layout_constraintBottom_toBottomOf="@id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close_blue_24" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appCompatTextView26"
        android:layout_width="@dimen/size_0"
        android:layout_height="@dimen/size_0"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/bo_loc"
        android:textColor="@color/colorSecondary"
        android:textSize="@dimen/font_18"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@id/view"
        app:layout_constraintEnd_toStartOf="@+id/tvSuccess"
        app:layout_constraintStart_toEndOf="@+id/imgClose"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSuccess"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_0"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:includeFontPadding="false"
        android:paddingEnd="@dimen/size_15"
        android:text="@string/xong"
        android:textColor="@color/green2"
        android:textSize="@dimen/font_18"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/collection_product_sale"
        app:layout_constraintTop_toBottomOf="@id/imgClose" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:includeFontPadding="false"
        android:paddingStart="@dimen/size_25"
        android:paddingTop="@dimen/size_20"
        android:text="@string/gia"
        android:textColor="@color/darkGray1"
        android:textSize="@dimen/font_14"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtBegin"
        android:layout_width="@dimen/size_0"
        android:layout_height="@dimen/size_36"
        android:layout_marginStart="@dimen/size_13"
        android:layout_marginTop="@dimen/size_7"
        android:layout_marginEnd="@dimen/size_12"
        android:background="@drawable/bg_outline_gray_1_corners_18"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/size_16"
        android:maxLength="18"
        android:singleLine="true"
        android:digits="0123456789"
        android:hint="@string/tu_colon"
        android:inputType="numberDecimal"
        android:textSize="@dimen/font_14"
        android:textStyle="normal"
        app:layout_constraintEnd_toStartOf="@+id/edtEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPrice" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtEnd"
        android:layout_width="@dimen/size_0"
        android:layout_height="@dimen/size_36"
        android:layout_marginTop="@dimen/size_7"
        android:layout_marginEnd="@dimen/size_13"
        android:background="@drawable/bg_outline_gray_1_corners_18"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:digits="0123456789"
        android:maxLength="18"
        android:singleLine="true"
        android:paddingStart="@dimen/size_16"
        android:hint="@string/den_colon"
        android:inputType="numberDecimal"
        android:textSize="@dimen/font_14"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edtBegin"
        app:layout_constraintTop_toBottomOf="@id/tvPrice" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@id/txtReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:paddingStart="@dimen/size_25"
        android:paddingTop="@dimen/size_20"
        android:text="@string/danh_gia"
        android:visibility="gone"
        android:textColor="@color/darkGray1"
        android:textSize="@dimen/font_14"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtBegin" />

    <LinearLayout
        android:id="@id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/size_16"
        android:visibility="gone"
        android:paddingEnd="@dimen/size_13"
        app:layout_constraintTop_toBottomOf="@id/txtReview">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:includeFontPadding="false"
                android:text="5 sao"
                android:textColor="@color/black"
                android:textSize="@dimen/font_14"
                android:textStyle="normal" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:includeFontPadding="false"
                android:text="4 sao"
                android:textColor="@color/black"
                android:textSize="@dimen/font_14"
                android:textStyle="normal" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:includeFontPadding="false"
                android:text="3 sao"
                android:textColor="@color/black"
                android:textSize="@dimen/font_14"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:includeFontPadding="false"
                android:text="2 sao"
                android:textColor="@color/black"
                android:textSize="@dimen/font_14"
                android:textStyle="normal" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:includeFontPadding="false"
                android:text="1 sao"
                android:textColor="@color/black"
                android:textSize="@dimen/font_14"
                android:textStyle="normal" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:layout_weight="1"
                android:enabled="true"
                android:fontFamily="sans-serif"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:textSize="@dimen/font_14"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCategory"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:includeFontPadding="false"
        android:paddingStart="@dimen/size_25"
        android:paddingTop="@dimen/size_20"
        android:text="@string/danh_muc"
        android:textColor="@color/darkGray1"
        android:textSize="@dimen/font_14"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/radioGroup" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical"
        android:paddingStart="@dimen/size_16"
        android:paddingEnd="@dimen/size_13"
        android:paddingBottom="@dimen/size_20"
        app:layout_constraintTop_toBottomOf="@id/tvCategory">


        <androidx.appcompat.widget.AppCompatRadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:fontFamily="sans-serif"
            android:includeFontPadding="false"
            android:text="@string/my_pham"
            android:textColor="@color/black"
            android:textSize="@dimen/font_14"
            android:textStyle="normal" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:fontFamily="sans-serif"
            android:includeFontPadding="false"
            android:text="@string/hang_moi_ve"
            android:textColor="@color/black"
            android:textSize="@dimen/font_14"
            android:textStyle="normal" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:fontFamily="sans-serif"
            android:includeFontPadding="false"
            android:text="@string/hang_thanh_ly"
            android:textColor="@color/black"
            android:textSize="@dimen/font_14"
            android:textStyle="normal" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:fontFamily="sans-serif"
            android:includeFontPadding="false"
            android:text="@string/sale_giam_gia_5"
            android:textColor="@color/black"
            android:textSize="@dimen/font_14"
            android:textStyle="normal" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:fontFamily="sans-serif"
            android:includeFontPadding="false"
            android:text="@string/tui_sach"
            android:textColor="@color/black"
            android:textSize="@dimen/font_14"
            android:textStyle="normal" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnTryAgain"
        android:layout_width="@dimen/size_100"
        android:layout_height="@dimen/size_36"
        android:layout_marginTop="@dimen/size_20"
        android:layout_marginEnd="@dimen/size_20"
        android:layout_marginBottom="@dimen/size_20"
        android:background="@drawable/bg_blue_border_18"
        android:includeFontPadding="false"
        android:text="@string/thiet_lap_lai"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtBegin" />
</androidx.constraintlayout.widget.ConstraintLayout>
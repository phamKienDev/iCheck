<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="vn.icheck.android.screen.user.contribute_product.IckContributeProductActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_back_blue_v2_24px" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:fontFamily="@font/barlow_medium"
            android:gravity="center"
            android:focusableInTouchMode="true"
            android:text="Đóng góp thông tin"
            android:textColor="#057DDA"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/root_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/barlow_medium"
                android:text="Thông tin sản phẩm"
                android:textColor="#3C5A99"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="14dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/first_image"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:layout_marginEnd="26dp"
                    android:layout_marginRight="26dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_first"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="4dp"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_front_image_holder" />

                        <TextView
                            android:id="@+id/tv_img_first"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="12dp"
                            android:layout_weight="0"
                            android:fontFamily="@font/barlow_semi_bold"
                            android:gravity="center_horizontal"
                            android:text="+ Ảnh mặt trước"
                            android:textColor="#00BAF2"
                            android:textSize="12sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/second_image"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_second"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="4dp"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_back_image_holder" />

                        <TextView
                            android:id="@+id/tv_img_second"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="12dp"
                            android:layout_weight="0"
                            android:fontFamily="@font/barlow_semi_bold"
                            android:gravity="center_horizontal"
                            android:text="+ Ảnh mặt sau"
                            android:textColor="#85C440"
                            android:textSize="12sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/barlow_medium"
                android:gravity="center_horizontal"
                android:text="(*)Ảnh sản phẩm là bắt buộc. Vui lòng chụp đúng theo mô tả."
                android:textColor="#757575"
                android:textSize="12sp"
                tools:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:visibility="gone"

                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_add_more_image"
                tools:visibility="visible" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/barlow_medium"
                android:text="Mã sản phẩm (*) "
                android:textColor="#212121"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/edt_barcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/bg_edt_ick_contribute_product_disabled"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:fontFamily="@font/barlow_medium"
                android:padding="8dp"
                android:textColor="#757575"
                android:textSize="14sp"
                tools:text="0204104494041" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/barlow_medium"
                android:text="Tên sản phẩm (*)"
                android:textColor="#212121"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/edt_name_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/bg_edt_ick_contribute_product"
                android:ems="10"
                android:fontFamily="@font/barlow_medium"
                android:hint="Nhập tên sản phẩm"
                android:padding="8dp"
                android:textColor="#212121"
                android:textColorHint="#B4B4B4"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/barlow_medium"
                android:text="Giá sản phẩm"
                android:textColor="#212121"
                android:textSize="12sp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/bg_edt_ick_contribute_product"
                android:maxLines="1"
                android:fontFamily="@font/barlow_medium"
                android:inputType="number"
                android:hint="Nhập giá sản phẩm"
                android:maxLength="11"
                android:padding="8dp"
                android:textColor="#212121"
                android:textColorHint="#B4B4B4"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/barlow_medium"
                android:text="Danh mục"
                android:textColor="#212121"
                android:textSize="12sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/bg_edt_ick_contribute_product">

                <EditText
                    android:id="@+id/edt_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawableEnd="@drawable/ic_arrow_down_blue_24px"
                    android:drawableRight="@drawable/ic_arrow_down_blue_24px"
                    android:ems="10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/barlow_medium"
                    android:hint="Chọn danh mục"
                    android:padding="8dp"
                    android:textColor="#212121"
                    android:textSize="14sp" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/group_attributes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_text" />

            <View
                android:id="@+id/divider7"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="10dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/barlow_medium"
                android:text="Thông tin doanh nghiệp"
                android:textColor="#3C5A99"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/barlow_medium"
                android:text="Tên doanh nghiệp"
                android:textColor="#212121"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/edt_name_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/bg_edt_ick_contribute_product"
                android:ems="10"
                android:fontFamily="@font/barlow_medium"
                android:hint="Nhập tên doanh nghiệp"
                android:padding="8dp"
                android:textColor="#212121"
                android:textColorHint="#B4B4B4"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/barlow_medium"
                android:text="Địa chỉ "
                android:textColor="#212121"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/edt_address_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/bg_edt_ick_contribute_product"
                android:ems="10"
                android:fontFamily="@font/barlow_medium"
                android:hint="Nhập địa chỉ"
                android:padding="8dp"
                android:textColor="#212121"
                android:textColorHint="#B4B4B4"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/barlow_medium"
                android:text="Số điện thoại"
                android:textColor="#212121"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/edt_phone_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/bg_edt_ick_contribute_product"
                android:digits="0123456789"
                android:ems="10"
                android:fontFamily="@font/barlow_medium"
                android:hint="Nhập số điện thoại"
                android:inputType="phone"
                android:padding="8dp"
                android:textColor="#212121"
                android:textColorHint="#B4B4B4"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/barlow_medium"
                android:text="Email"
                android:textColor="#212121"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/bg_edt_ick_contribute_product"
                android:ems="10"
                android:fontFamily="@font/barlow_medium"
                android:hint="Nhập email"
                android:inputType="textEmailAddress"
                android:padding="8dp"
                android:textColor="#212121"
                android:textColorHint="#B4B4B4"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/barlow_medium"
                android:text="Mã số thuế"
                android:textColor="#212121"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/edt_tax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/bg_edt_ick_contribute_product"
                android:digits="0123456789"
                android:ems="10"
                android:fontFamily="@font/barlow_medium"
                android:hint="Nhập mã số thuế"
                android:inputType="number"
                android:padding="8dp"
                android:textColor="#212121"
                android:textColorHint="#B4B4B4"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_search_gg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:drawableStart="@drawable/ic_google_24px"
                android:drawableLeft="@drawable/ic_google_24px"
                android:drawablePadding="10dp"
                android:fontFamily="@font/barlow_medium"
                android:text="Tìm kiếm ngay với Google"
                android:textColor="#3C5A99"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/btn_continue"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="43dp"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="60dp"
                android:background="@drawable/background_button_enable"
                android:fontFamily="@font/barlow_semi_bold"
                android:gravity="center"
                android:text="Hoàn tất"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
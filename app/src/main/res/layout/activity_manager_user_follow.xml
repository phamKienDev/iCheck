<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="vn.icheck.android.screen.user.option_manger_user_follow.ManagerUserFollowActivity">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_44"
                android:background="@color/white"
                android:elevation="@dimen/size_4">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@id/imgBack"
                    android:layout_width="@dimen/size_44"
                    android:layout_height="match_parent"
                    android:background="?android:attr/selectableItemBackground"
                    app:srcCompat="@drawable/ic_back_blue_v2_24px" />

                <vn.icheck.android.ichecklibs.view.primary.TextBarlowSemiBoldPrimary
                    android:id="@id/txtTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/size_44"
                    android:layout_marginEnd="@dimen/size_44"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textSize="@dimen/font_18"
                    tools:text="Tiêu đề" />
            </FrameLayout>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@id/edtSearch"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_34"
                android:layout_marginStart="@dimen/size_12"
                android:layout_marginTop="@dimen/size_10"
                android:layout_marginEnd="@dimen/size_12"
                android:background="@drawable/bg_corner_f0f0f0_4"
                android:drawableStart="@drawable/ic_search_gray_24dp"
                android:drawableLeft="@drawable/ic_search_gray_24dp"
                android:drawablePadding="@dimen/size_8"
                android:gravity="start|center"
                android:hint="Tìm kiếm trong danh sách này"
                android:maxLines="1"
                android:paddingStart="@dimen/size_8"
                android:paddingLeft="@dimen/size_8"
                android:singleLine="true"
                android:textColor="@color/darkGray1"
                android:textColorHint="#b4b4b4" />

            <vn.icheck.android.ichecklibs.view.secondary.TextBarlowSemiBoldSecondary
                android:id="@+id/tvCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_12"
                android:layout_marginTop="@dimen/size_10"
                android:textSize="@dimen/font_16"
                tools:text="2,345 người đang theo dõi bạn" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_follow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/size_8"
                android:layout_marginEnd="@dimen/size_8"
                android:paddingTop="@dimen/size_6" />

        </LinearLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>
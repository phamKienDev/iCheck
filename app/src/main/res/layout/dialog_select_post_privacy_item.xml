<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutPublic"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingTop="@dimen/size_8"
    android:paddingBottom="@dimen/size_8">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgPublic"
        app:layout_constraintBottom_toBottomOf="@id/tvPublicContent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvPublicName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_12"
        android:layout_marginLeft="@dimen/size_12"
        android:src="@drawable/ic_radio_on_24dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPublicName"
        app:layout_constraintStart_toEndOf="@id/imgPublic"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_8"
        android:layout_marginLeft="@dimen/size_8"
        android:fontFamily="@font/barlow_medium"
        android:includeFontPadding="false"
        android:lineSpacingExtra="6sp"
        android:text="@string/cong_khai"
        android:textColor="#212121"
        android:textSize="14sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPublicContent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvPublicName"
        app:layout_constraintTop_toBottomOf="@id/tvPublicName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_6"
        android:includeFontPadding="false"
        android:lineSpacingExtra="6sp"
        android:text="@string/tat_ca_moi_nguoi_deu_xem_duoc"
        android:textColor="#757575"
        android:textSize="14sp" />
</androidx.constraintlayout.widget.ConstraintLayout>
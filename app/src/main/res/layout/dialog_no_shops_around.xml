<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/size_12"
        android:layout_marginEnd="@dimen/size_12"
        android:background="@drawable/bg_white_corners_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:visibility="visible"
            android:id="@id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_26_corners_top_10">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/appCompatImageView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_16"
                android:layout_marginTop="@dimen/size_12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/img_seller" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/appCompatTextView36"
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:includeFontPadding="false"
                android:paddingStart="@dimen/size_12"
                android:paddingEnd="@dimen/size_12"
                android:singleLine="true"
                android:text="@string/khong_co_diem_ban_nao_gan_ban"
                android:textAlignment="center"
                android:textColor="@color/colorSecondary"
                android:textSize="@dimen/font_14"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/appCompatImageView11"
                app:layout_constraintTop_toTopOf="@+id/appCompatImageView11" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtContent"
                android:layout_width="@dimen/size_0"
                android:layout_height="@dimen/size_0"
                android:fontFamily="sans-serif"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:minLines="2"
                android:paddingStart="@dimen/size_50"
                android:paddingTop="@dimen/size_7"
                android:paddingEnd="@dimen/size_50"
                android:textAlignment="center"
                android:textColor="@color/darkGray1"
                android:textSize="@dimen/font_12"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@+id/appCompatImageView11"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/appCompatImageView11"
                app:layout_constraintTop_toBottomOf="@+id/appCompatTextView36"
                tools:text="@string/hay_tu_ban_nhung_san_pham_tot_nhat" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgSeller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size_12"
                android:paddingBottom="@dimen/size_12"
                app:layout_constraintEnd_toEndOf="@+id/txtContent"
                app:layout_constraintStart_toStartOf="@+id/txtContent"
                app:layout_constraintTop_toBottomOf="@+id/txtContent"
                tools:src="@drawable/ic_seller_google_play" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_7"
            android:layout_marginStart="@dimen/size_16"
            app:layout_constraintStart_toStartOf="@+id/constraintLayout"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/appCompatImageView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:srcCompat="@drawable/ic_product_detail_chat_40px" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/appCompatTextView38"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_20"
                android:fontFamily="sans-serif"
                android:textColor="@color/darkGray1"
                android:textSize="@dimen/font_14"
                android:textStyle="normal"
                app:layout_constraintStart_toEndOf="@+id/appCompatImageView12"
                app:layout_constraintTop_toTopOf="@+id/appCompatImageView12"
                android:text="Bạn muốn mua sản phẩm này?" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@id/txtChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_4"
                android:fontFamily="sans-serif-medium"
                android:textColor="#057dda"
                android:textSize="@dimen/font_14"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="@+id/appCompatTextView38"
                app:layout_constraintTop_toBottomOf="@+id/appCompatTextView38"
                android:text="Đặt hàng với iCheck để được tư vấn!" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="@dimen/size_18"
    android:layout_marginEnd="@dimen/size_18">

    <LinearLayout
        android:id="@+id/layoutTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_corner_white_10"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_19"
            tools:src="@drawable/ic_emty_box_shake" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_30"
            android:fontFamily="@font/barlow_semi_bold"
            android:lineSpacingExtra="@dimen/font_6"
            android:textColor="#212121"
            android:textSize="@dimen/font_14"
            tools:text="Bạn chưa có lượt mở quà nào!" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_29"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginEnd="@dimen/size_29"
            android:fontFamily="@font/barlow_medium"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/font_6"
            android:text="@string/hoan_thanh_cac_thu_thach_sau_de_nhan_them_luot_mo_qua_moi_nao"
            android:textColor="#757575"
            android:textSize="@dimen/font_14" />

        <LinearLayout
            android:id="@+id/containerMission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_20"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginRight="@dimen/size_20"
            android:background="@drawable/bg_border_gray_dotted_10_radius_10"
            android:orientation="vertical"
            android:paddingBottom="@dimen/size_12"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_14"
            android:layout_marginLeft="@dimen/size_14"
            android:layout_marginTop="@dimen/size_16"
            android:layout_marginEnd="@dimen/size_18"
            android:layout_marginRight="@dimen/size_18"
            android:layout_marginBottom="@dimen/size_20"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnAction"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_8"
                android:layout_marginLeft="@dimen/size_8"
                android:background="@drawable/bg_corners_4_light_blue_no_solid"
                android:fontFamily="@font/barlow_semi_bold"
                android:gravity="center"
                android:paddingTop="@dimen/size_10"
                android:paddingBottom="@dimen/size_10"
                android:text="@string/thuc_hien_thu_thach"
                android:textColor="@color/light_blue"
                android:textSize="@dimen/font_16"
                android:visibility="visible" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnMoreEvent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_8"
                android:layout_marginLeft="@dimen/size_8"
                android:layout_weight="4"
                android:background="@drawable/bg_corners_4_light_blue_solid"
                android:fontFamily="@font/barlow_semi_bold"
                android:gravity="center"
                android:paddingTop="@dimen/size_10"
                android:paddingBottom="@dimen/size_10"
                android:text="@string/danh_sach_qua"
                android:textColor="#ffffff"
                android:textSize="@dimen/font_16" />
        </LinearLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_20"
        android:src="@drawable/ic_cancel_popup_32px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutTop" />


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="18dp"
    android:layout_marginEnd="18dp">

    <LinearLayout
        android:id="@+id/layoutTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_corner_white_10"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            tools:src="@drawable/ic_emty_box_shake" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/barlow_semi_bold"
            android:lineSpacingExtra="@dimen/font_6"
            android:textColor="#212121"
            android:textSize="@dimen/font_14"
            tools:text="Bạn chưa có lượt mở quà nào!" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="29dp"
            android:fontFamily="@font/barlow_medium"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/font_6"
            android:text="Hoàn thành các thử thách sau để nhận thêm lượt mở quà mới nào:"
            android:textColor="#757575"
            android:textSize="@dimen/font_14" />

        <LinearLayout
            android:id="@+id/containerMission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_20"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginRight="@dimen/size_20"
            android:background="@drawable/bg_border_gray_dotted_10_radius_10"
            android:orientation="vertical"
            android:paddingBottom="@dimen/size_12"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_14"
            android:layout_marginLeft="@dimen/size_14"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnAction"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_8"
                android:layout_marginLeft="@dimen/size_8"
                android:background="@drawable/bg_corners_4_light_blue_no_solid"
                android:fontFamily="@font/barlow_semi_bold"
                android:gravity="center"
                android:paddingTop="@dimen/size_10"
                android:paddingBottom="@dimen/size_10"
                android:text="Thực hiện thử thách"
                android:textColor="@color/light_blue"
                android:textSize="@dimen/font_16"
                android:visibility="visible" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnMoreEvent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_8"
                android:layout_marginLeft="@dimen/size_8"
                android:layout_weight="4"
                android:background="@drawable/bg_corners_4_light_blue_solid"
                android:fontFamily="@font/barlow_semi_bold"
                android:gravity="center"
                android:paddingTop="@dimen/size_10"
                android:paddingBottom="@dimen/size_10"
                android:text="Danh sách quà"
                android:textColor="#ffffff"
                android:textSize="@dimen/font_16" />
        </LinearLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_cancel_popup_32px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutTop" />


</androidx.constraintlayout.widget.ConstraintLayout>
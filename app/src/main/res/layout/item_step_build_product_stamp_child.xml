<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/size_80">

    <View
        android:id="@id/viewLine"
        android:layout_width="@dimen/size_8"
        android:layout_height="@dimen/size_1"
        android:layout_marginEnd="@dimen/size_5"
        android:layout_marginRight="@dimen/size_5"
        android:background="#1aa7dc"
        app:layout_constraintBottom_toBottomOf="@id/imgIcon"
        app:layout_constraintEnd_toStartOf="@id/imgIcon"
        app:layout_constraintTop_toTopOf="@id/imgIcon" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@id/imgBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_egg_selected"
        app:layout_constraintBottom_toBottomOf="@id/imgIcon"
        app:layout_constraintEnd_toEndOf="@id/imgIcon"
        app:layout_constraintStart_toStartOf="@id/imgIcon"
        app:layout_constraintTop_toTopOf="@id/imgIcon" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@id/imgIcon"
        android:layout_width="@dimen/size_52"
        android:layout_height="@dimen/size_67"
        android:layout_marginEnd="@dimen/size_6"
        android:layout_marginRight="@dimen/size_6"
        android:layout_marginBottom="@dimen/size_7"
        android:paddingStart="@dimen/size_3"
        android:paddingTop="@dimen/size_4"
        android:paddingEnd="@dimen/size_3"
        android:paddingBottom="@dimen/size_4"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@id/tvChecked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_egg_checked"
        android:drawableRight="@drawable/ic_egg_checked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
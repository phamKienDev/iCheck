<?xml version="1.0" encoding="utf-8"?>
<vn.icheck.android.ichecklibs.view.appbackground.whitebackground.ICLinearLayoutWhite xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="vn.icheck.android.screen.user.detail_stamp_v5.detail_history_guarantee_v5.DetaiHistoryGuaranteeV5Activity">

    <include layout="@layout/toolbar_blue" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="@drawable/shadow_bottom" />

    <vn.icheck.android.ichecklibs.view.secondary.TextSansSerifSecondary
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_12"
        android:layout_marginTop="@dimen/size_20"
        android:text="@string/thong_tin_khach_hang"
        android:textSize="@dimen/font_18"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_12"
        android:layout_marginTop="@dimen/size_8"
        android:layout_marginEnd="@dimen/size_12"
        android:background="@drawable/bg_corner_gray_10"
        android:orientation="vertical"
        android:paddingStart="@dimen/size_8"
        android:paddingEnd="@dimen/size_8">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNameCustomer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8"
            android:drawableStart="@drawable/ic_outline_person_blue_18px"
            android:drawablePadding="@dimen/size_8"
            android:fontFamily="sans-serif"
            android:textColor="#000000"
            android:textSize="@dimen/font_14"
            android:textStyle="normal"
            tools:text="Họ và tên: Đặng Trung Đức" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPhoneCustomer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8"
            android:layout_marginBottom="@dimen/size_12"
            android:drawableStart="@drawable/ic_outline_phone_blue_18px"
            android:drawablePadding="@dimen/size_8"
            android:fontFamily="sans-serif"
            android:textColor="#000000"
            android:textSize="@dimen/font_14"
            android:textStyle="normal"
            tools:text="Số điện thoại: 098 123 ***" />

    </LinearLayout>

    <vn.icheck.android.ichecklibs.view.secondary.TextSansSerifSecondary
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_12"
        android:layout_marginTop="@dimen/size_20"
        android:text="@string/thong_tin_bao_hanh"
        android:textSize="@dimen/font_18"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_12"
        android:layout_marginTop="@dimen/size_8"
        android:layout_marginEnd="@dimen/size_12"
        android:background="@drawable/bg_corner_gray_10"
        android:orientation="vertical"
        android:paddingStart="@dimen/size_8"
        android:paddingEnd="@dimen/size_8">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTimeGuarantee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8"
            android:drawablePadding="@dimen/size_8"
            android:drawableStart="@drawable/ic_time_start_blue_18_px"
            android:fontFamily="sans-serif"
            android:textColor="#000000"
            android:textSize="@dimen/font_14"
            android:textStyle="normal"
            tools:text="Thời gian: 5h30 24/12/2018" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNameStoreGuarantee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_store_blue_18px"
            android:fontFamily="sans-serif"
            android:layout_marginTop="@dimen/size_8"
            android:drawablePadding="@dimen/size_8"
            android:textColor="#000000"
            android:textSize="@dimen/font_14"
            android:textStyle="normal"
            tools:text="Điểm bảo hành: Cơ sở 1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_outline_person_blue_18px"
            android:fontFamily="sans-serif"
            android:textColor="#000000"
            android:layout_marginTop="@dimen/size_8"
            android:drawablePadding="@dimen/size_8"
            android:textSize="@dimen/font_14"
            android:textStyle="normal"
            android:visibility="gone"
            tools:text="Nhân viên phụ trách: Phạm Lệ Mỹ" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvStateGuarantee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_warranty_blue_18px"
            android:fontFamily="sans-serif"
            android:layout_marginTop="@dimen/size_8"
            android:drawablePadding="@dimen/size_8"
            android:textColor="#000000"
            android:textSize="@dimen/font_14"
            android:textStyle="normal"
            tools:text="Tình trạng: Kích hoạt bảo hành lần 1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNguoiPhuTrach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_time_start_blue_18_px"
            android:fontFamily="sans-serif"
            android:textColor="#000000"
            android:layout_marginTop="@dimen/size_8"
            android:drawablePadding="@dimen/size_8"
            android:layout_marginBottom="@dimen/size_12"
            android:textSize="@dimen/font_14"
            android:textStyle="normal"
            tools:text="Ngày hẹn trả: 27/12/2017" />

    </LinearLayout>

    <vn.icheck.android.ichecklibs.view.secondary.TextSansSerifSecondary
        android:id="@+id/tvSubInforGuarantee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/noi_dung_bao_hanh"
        android:textSize="@dimen/font_18"
        android:textStyle="normal"
        android:layout_marginStart="@dimen/size_12"
        android:layout_marginTop="@dimen/size_20"/>

    <LinearLayout
        android:id="@+id/layoutInforGuarantee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8"
        android:layout_marginStart="@dimen/size_12"
        android:layout_marginEnd="@dimen/size_12"
        android:background="@drawable/bg_corner_gray_10"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNoteGuarantee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textColor="#434343"
            android:layout_marginTop="@dimen/size_12"
            android:layout_marginBottom="@dimen/size_12"
            android:layout_marginStart="@dimen/size_8"
            android:layout_marginEnd="@dimen/size_8"
            android:textSize="@dimen/font_14"
            android:textStyle="normal"
            tools:text="Nội dung bảo hành được nhập khi tiếp nhận khi tiếp nhận bảo hành hoặc trả bảo hành.Không nhập ẩn cả mục này đi nhé" />

    </LinearLayout>

</vn.icheck.android.ichecklibs.view.appbackground.whitebackground.ICLinearLayoutWhite>

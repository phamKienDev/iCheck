<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="vn.icheck.android.screen.user.detail_stamp_v5.detail_history_guarantee_v5.DetaiHistoryGuaranteeV5Activity">

    <include layout="@layout/toolbar_blue" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/shadow_bottom" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif"
        android:text="Thông tin khách hàng"
        android:textColor="#3c5a99"
        android:textSize="18sp"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/bg_corner_gray_10"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNameCustomer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/ic_outline_person_blue_18px"
            android:drawablePadding="8dp"
            android:fontFamily="sans-serif"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="normal"
            tools:text="Họ và tên: Đặng Trung Đức" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPhoneCustomer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:drawableStart="@drawable/ic_outline_phone_blue_18px"
            android:drawablePadding="8dp"
            android:fontFamily="sans-serif"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="normal"
            tools:text="Số điện thoại: 098 123 ***" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif"
        android:text="Thông tin bảo hành"
        android:textColor="#3c5a99"
        android:textSize="18sp"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/bg_corner_gray_10"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTimeGuarantee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_time_start_blue_18_px"
            android:fontFamily="sans-serif"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="normal"
            tools:text="Thời gian: 5h30 24/12/2018" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNameStoreGuarantee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_store_blue_18px"
            android:fontFamily="sans-serif"
            android:layout_marginTop="8dp"
            android:drawablePadding="8dp"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="normal"
            tools:text="Điểm bảo hành: Cơ sở 1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_outline_person_blue_18px"
            android:fontFamily="sans-serif"
            android:textColor="#000000"
            android:layout_marginTop="8dp"
            android:drawablePadding="8dp"
            android:textSize="14sp"
            android:textStyle="normal"
            android:visibility="gone"
            tools:text="Nhân viên phụ trách: Phạm Lệ Mỹ" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvStateGuarantee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_warranty_blue_18px"
            android:fontFamily="sans-serif"
            android:layout_marginTop="8dp"
            android:drawablePadding="8dp"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="normal"
            tools:text="Tình trạng: Kích hoạt bảo hành lần 1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNguoiPhuTrach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_time_start_blue_18_px"
            android:fontFamily="sans-serif"
            android:textColor="#000000"
            android:layout_marginTop="8dp"
            android:drawablePadding="8dp"
            android:layout_marginBottom="12dp"
            android:textSize="14sp"
            android:textStyle="normal"
            tools:text="Ngày hẹn trả: 27/12/2017" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSubInforGuarantee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Nội dung bảo hành"
        android:textColor="#3c5a99"
        android:textSize="18sp"
        android:textStyle="normal"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:id="@+id/layoutInforGuarantee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/bg_corner_gray_10"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNoteGuarantee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textColor="#434343"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="14sp"
            android:textStyle="normal"
            tools:text="Nội dung bảo hành được nhập khi tiếp nhận khi tiếp nhận bảo hành hoặc trả bảo hành.Không nhập ẩn cả mục này đi nhé" />

    </LinearLayout>

</LinearLayout>

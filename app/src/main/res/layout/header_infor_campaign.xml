<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@id/imgBannerCampaign"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="H, 375:200"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_12"
        android:layout_marginTop="-30dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/size_4">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNameCampaign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/barlow_semi_bold"
                android:textColor="#212121"
                android:textSize="@dimen/font_16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Săn Xu tiền tỷ - Hý hửng sắm nhà - Samsung luôn sát cánh cùng gia đình bạn (tối đa 2 dòng)" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutTimeStart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/view"
                app:layout_constraintStart_toStartOf="@id/tvNameCampaign"
                app:layout_constraintTop_toBottomOf="@id/tvNameCampaign">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvSubTimeEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/barlow_medium"
                    android:lineSpacingExtra="@dimen/font_14"
                    android:text="Thời gian diễn ra"
                    android:textColor="#757575"
                    android:textSize="@dimen/font_12"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTimeEnd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/barlow_semi_bold"
                    android:lineSpacingExtra="@dimen/font_6"
                    android:textColor="#057dda"
                    android:textSize="@dimen/font_14"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/tvSubTimeEnd"
                    app:layout_constraintStart_toStartOf="@id/tvSubTimeEnd"
                    app:layout_constraintTop_toBottomOf="@id/tvSubTimeEnd"
                    tools:text="Đến 31/12" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@id/view"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:background="#f5f5f5"
                app:layout_constraintBottom_toBottomOf="@id/layoutTimeStart"
                app:layout_constraintEnd_toStartOf="@id/layoutUserJoin"
                app:layout_constraintStart_toEndOf="@id/layoutTimeStart"
                app:layout_constraintTop_toTopOf="@id/layoutTimeStart" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutUserJoin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/layoutTimeStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/view"
                app:layout_constraintTop_toTopOf="@id/layoutTimeStart">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvSubUserJoin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/barlow_medium"
                    android:lineSpacingExtra="@dimen/font_14"
                    android:text="Người tham gia"
                    android:textColor="#757575"
                    android:textSize="@dimen/font_12"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvUserJoin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:drawableEnd="@drawable/ic_fire_18px"
                    android:drawablePadding="4dp"
                    android:fontFamily="@font/barlow_semi_bold"
                    android:lineSpacingExtra="@dimen/font_6"
                    android:textColor="#057dda"
                    android:textSize="@dimen/font_14"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tvSubUserJoin"
                    app:layout_constraintTop_toBottomOf="@id/tvSubUserJoin"
                    tools:text="27,254" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
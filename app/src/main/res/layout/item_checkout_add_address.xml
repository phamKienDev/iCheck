<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/size_12"
    android:layout_marginTop="@dimen/size_10"
    android:layout_marginEnd="@dimen/size_12"
    android:background="@drawable/bg_checkout_gray_corner_10"
    android:padding="@dimen/size_8">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:includeFontPadding="false"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:textColor="#3c5a99"
        android:textSize="@dimen/font_14"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Phạm Văn Bách" />

    <View
        android:layout_width="@dimen/size_1"
        android:layout_height="@dimen/size_0"
        android:layout_marginStart="@dimen/size_5"
        android:background="#828282"
        app:layout_constraintBottom_toBottomOf="@id/tvName"
        app:layout_constraintStart_toEndOf="@id/tvName"
        app:layout_constraintTop_toTopOf="@id/tvName" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@id/tvPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_11"
        android:fontFamily="sans-serif-medium"
        android:includeFontPadding="false"
        android:textColor="#3c5a99"
        android:textSize="@dimen/font_14"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@id/tvName"
        app:layout_constraintStart_toEndOf="@id/tvName"
        app:layout_constraintTop_toTopOf="@id/tvName"
        tools:text="0987 654 321" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8"
        android:background="@drawable/btn_white_outline_blue_1_corners_36"
        android:drawableStart="@drawable/ic_outline_place_blue_18px"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:paddingStart="@dimen/size_6"
        android:paddingTop="@dimen/size_6"
        android:paddingEnd="@dimen/size_16"
        android:paddingBottom="@dimen/size_6"
        android:text="@string/them_dia_chi"
        android:textColor="#3c5a99"
        android:textSize="@dimen/font_14"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@id/tvName"
        app:layout_constraintTop_toBottomOf="@id/tvName" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingBottom="20dp"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_dialog">

    <ImageView
        android:id="@+id/img_cancel"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_cancel_blue_24px" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:fontFamily="@font/barlow_semi_bold"
        android:text="Thiết lập trang cá nhân"
        android:textColor="#057DDA"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_cancel"
        app:layout_constraintTop_toTopOf="@+id/img_cancel" />

    <View
        android:id="@+id/divider8"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#D8D8D8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_cancel" />

    <TextView
        android:id="@+id/tv_edit_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:drawableStart="@drawable/ic_edit_public_infor_40px"
        android:drawableLeft="@drawable/ic_edit_public_infor_40px"
        android:drawablePadding="8dp"
        android:fontFamily="@font/barlow_medium"
        android:gravity="center_vertical"
        android:text="Chỉnh sửa thông tin công khai"
        android:textColor="#757575"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider8" />

    <TextView
        android:id="@+id/tv_edit_personal_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:drawableStart="@drawable/ic_edit_review_40px"
        android:drawableLeft="@drawable/ic_edit_review_40px"
        android:drawablePadding="8dp"
        android:fontFamily="@font/barlow_medium"
        android:gravity="center_vertical"
        android:text="Chỉnh sửa thông tin cá nhân"
        android:textColor="#757575"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_edit_info" />

     <TextView
        android:id="@+id/tv_edit_privacy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:drawableStart="@drawable/ic_privacy_40px"
        android:drawableLeft="@drawable/ic_privacy_40px"
        android:drawablePadding="8dp"
        android:fontFamily="@font/barlow_medium"
        android:gravity="center_vertical"
        android:text="Cài đặt quyền riêng tư"
        android:textColor="#757575"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_edit_personal_info" />

    <TextView
        android:id="@+id/tv_edit_following"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:drawablePadding="8dp"
        android:textColor="#757575"
        android:fontFamily="@font/barlow_medium"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/ic_group_40px"
        android:layout_marginRight="12dp"
        android:text="Quản lý danh sách đang theo dõi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_edit_followed"
        android:drawableLeft="@drawable/ic_group_40px" />

    <TextView
        android:id="@+id/tv_edit_followed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:drawablePadding="8dp"
        android:textColor="#757575"
        android:fontFamily="@font/barlow_medium"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/ic_group_40px"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:text="Quản lý danh sách người theo dõi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_edit_privacy"
        android:drawableLeft="@drawable/ic_group_40px" />

    <TextView
        android:id="@+id/tv_edit_pw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_change_password_40px"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="16dp"
        android:drawablePadding="8dp"
        android:textColor="#757575"
        android:fontFamily="@font/barlow_medium"
        android:gravity="center_vertical"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:text="Thay đổi mật khẩu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_edit_following"
        android:drawableLeft="@drawable/ic_change_password_40px" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/layoutContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/size_12"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgSuggesVerified"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_default_square" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNameSuggestVerified"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_6"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:maxLines="1"
        android:textColor="#434343"
        android:textSize="@dimen/font_14"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/imgSuggesVerified"
        app:layout_constraintStart_toStartOf="@+id/imgSuggesVerified"
        app:layout_constraintTop_toBottomOf="@+id/imgSuggesVerified"
        tools:text="Nước hoa hồng, dưỡng da Langege" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPrice"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8"
        android:fontFamily="sans-serif-medium"
        tools:text="157,200,000đ"
        android:textColor="#3c5a99"
        android:textSize="@dimen/font_14"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tvNameSuggestVerified"
        app:layout_constraintStart_toStartOf="@+id/tvNameSuggestVerified"
        app:layout_constraintTop_toBottomOf="@+id/tvNameSuggestVerified" />


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_nation_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:fontFamily="@font/barlow_medium"
        android:textColor="#212121"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_code"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Ả Rập Xê-út" />

    <TextView
        android:id="@+id/tv_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#757575"
        android:textSize="16sp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        tools:text="+966"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:fontFamily="@font/barlow_medium"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#D8D8D8"
        app:layout_constraintEnd_toEndOf="@+id/tv_code"
        app:layout_constraintStart_toStartOf="@+id/tv_nation_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_nation_name" />
</androidx.constraintlayout.widget.ConstraintLayout>
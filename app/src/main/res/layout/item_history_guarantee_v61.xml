<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="@dimen/size_12"
    android:paddingTop="@dimen/size_10"
    android:paddingEnd="@dimen/size_0">

    <vn.icheck.android.ichecklibs.view.TextBody2
        android:id="@id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_12"
        android:ellipsize="end"
        android:hint="@string/dang_cap_nhat"
        android:singleLine="true"
        android:textColor="@color/darkGray1"
        android:textColorHint="@color/darkGray1"
        tools:includeFontPadding="false"
        tools:text="Kích hoạt" />

    <vn.icheck.android.ichecklibs.view.TextBody1
        android:id="@id/tvState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_3"
        android:layout_marginEnd="@dimen/size_8"
        android:drawableEnd="@drawable/ic_next_blue_18px"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@color/darkGray3"
        tools:includeFontPadding="false"
        tools:text="Tình trạng" />

    <vn.icheck.android.ichecklibs.view.TextBody1
        android:id="@id/tvDateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_3"
        android:layout_marginEnd="@dimen/size_12"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/darkGray3"
        tools:includeFontPadding="false"
        tools:text="9h30 23/10/2017" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:layout_marginTop="@dimen/size_10"
        android:layout_marginEnd="@dimen/size_12"
        android:background="@color/colorLine" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vn.icheck.android.screen.user.voucher.VoucherActivity">

    <include
        android:id="@id/toolbar"
        layout="@layout/toolbar_blue"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@id/viewShadow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_4"
        android:background="@drawable/shadow_bottom"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView13"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_0"
        android:src="@drawable/img_voucher_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H, 160:160"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewShadow"
        app:layout_constraintVertical_bias="0.342" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_16"
        android:fontFamily="sans-serif"
        android:text="@string/ban_chua_co_voucher_nao"
        android:textColor="#828282"
        android:textSize="@dimen/font_14"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/appCompatImageView13"
        app:layout_constraintStart_toStartOf="@+id/appCompatImageView13"
        app:layout_constraintTop_toBottomOf="@+id/appCompatImageView13" />

</androidx.constraintlayout.widget.ConstraintLayout>

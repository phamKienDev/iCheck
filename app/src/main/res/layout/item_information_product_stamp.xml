<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:fontFamily="sans-serif"
        tools:text="Mô tả sản phẩm"
        android:textColor="#3c5a99"
        android:textSize="18sp"
        android:textStyle="normal" />

    <LinearLayout
        android:id="@+id/layoutInformaion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_corner_gray_10"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/expandTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:maxLines="5"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscingsed do eiusmod tempor. Lorem ipsum dolor sit amet,consectetur adipiscing elit, sed do eiusmod temporut labore et dolore magna aliqua. Lorem ipsum dolorconsectetur adipiscing elit, sed do eiusmod temporut labore et dolore magna aliqua. Lorem ipsum dolorconsectetur adipiscing elit, sed do eiusmod tempor i ut labore et dolore magna aliqua. Lorem ipsum dolorut labore et dolore magna aliqua.ut labore et dolore magna aliqua. Lorem ipsum dolor  ut labore et dolore magna aliqua... " />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/toggle_expand"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="4dp"
            app:srcCompat="@drawable/ic_down_dark_blue_18px" />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <vn.icheck.android.ichecklibs.view.app_background.white_background.ICViewBgWhiteRadius4
        android:id="@id/viewTop"
        android:layout_width="@dimen/size_50"
        android:layout_height="@dimen/size_6"
        android:layout_gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <vn.icheck.android.ichecklibs.view.app_background.white_background.ICLinearLayoutBgWhiteRadiusTop16
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8"
        android:orientation="vertical"
        android:paddingBottom="@dimen/size_12">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/tvAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:drawableStart="@drawable/ic_share_user_40dp"
            android:drawableLeft="@drawable/ic_share_user_40dp"
            android:drawablePadding="@dimen/size_10"
            android:fontFamily="@font/barlow_medium"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingStart="@dimen/size_4"
            android:paddingTop="@dimen/size_8"
            android:paddingEnd="@dimen/size_4"
            android:paddingBottom="@dimen/size_8"
            android:text="@string/tra_loi"
            android:textAlignment="gravity"
            android:textColor="@color/darkGray1"
            android:textSize="@dimen/font_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgDelete"
            app:layout_constraintTop_toTopOf="@id/imgDelete" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/tvEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:drawableStart="@drawable/ic_edit_review_40dp"
            android:drawableLeft="@drawable/ic_edit_review_40dp"
            android:drawablePadding="@dimen/size_10"
            android:fontFamily="@font/barlow_medium"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingStart="@dimen/size_4"
            android:paddingTop="@dimen/size_8"
            android:paddingEnd="@dimen/size_4"
            android:paddingBottom="@dimen/size_8"
            android:text="@string/chinh_sua_binh_luan"
            android:textAlignment="gravity"
            android:textColor="@color/darkGray1"
            android:textSize="@dimen/font_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgDelete"
            app:layout_constraintTop_toTopOf="@id/imgDelete" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/tvDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:drawableStart="@drawable/ic_delete_more_40dp"
            android:drawableLeft="@drawable/ic_delete_more_40dp"
            android:drawablePadding="@dimen/size_10"
            android:fontFamily="@font/barlow_medium"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingStart="@dimen/size_4"
            android:paddingTop="@dimen/size_8"
            android:paddingEnd="@dimen/size_4"
            android:paddingBottom="@dimen/size_8"
            android:text="@string/xoa_binh_luan"
            android:textAlignment="gravity"
            android:textColor="@color/darkGray1"
            android:textSize="@dimen/font_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgDelete"
            app:layout_constraintTop_toTopOf="@id/imgDelete" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/tvCopy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:drawableStart="@drawable/ic_copy_40dp"
            android:drawableLeft="@drawable/ic_copy_40dp"
            android:drawablePadding="@dimen/size_10"
            android:fontFamily="@font/barlow_medium"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingStart="@dimen/size_4"
            android:paddingTop="@dimen/size_8"
            android:paddingEnd="@dimen/size_4"
            android:paddingBottom="@dimen/size_8"
            android:text="@string/sao_chep_binh_luan"
            android:textAlignment="gravity"
            android:textColor="@color/darkGray1"
            android:textSize="@dimen/font_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgDelete"
            app:layout_constraintTop_toTopOf="@id/imgDelete" />
    </vn.icheck.android.ichecklibs.view.app_background.white_background.ICLinearLayoutBgWhiteRadiusTop16>
</LinearLayout>
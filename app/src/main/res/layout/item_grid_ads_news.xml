<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="6dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="6dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/bg_corner_gray_solid_white"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgVerticalNews"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        tools:background="@color/light_blue" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitleVertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/barlow_semi_bold"
        android:lineSpacingExtra="@dimen/font_6"
        android:maxLines="3"
        android:paddingStart="6dp"
        android:paddingTop="8dp"
        android:paddingEnd="6dp"
        android:paddingBottom="10dp"
        android:textColor="#212121"
        android:textSize="@dimen/font_14"
        tools:text="Sự kiện đáng mong đợi nhất năm: Mừng iCheck (tối đa 3 dòng)..." />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/root"
    android:layout_height="@dimen/size_50">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_49"
        android:orientation="horizontal" >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_avar"
            android:layout_width="@dimen/size_30"
            android:layout_height="@dimen/size_30"
            android:layout_marginStart="@dimen/size_12"
            android:layout_marginTop="@dimen/size_8"
            android:layout_weight="0"
            android:src="@drawable/user_placeholder" />

        <TextView
            android:id="@+id/tv_contact_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_14"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@android:color/black"
            android:layout_marginStart="@dimen/size_12"
            android:layout_marginTop="@dimen/size_13"
            android:layout_marginEnd="@dimen/size_20"
             />

        <TextView
            android:id="@+id/btn_invite_user"
            android:layout_width="@dimen/size_50"
            android:layout_height="@dimen/size_26"
            android:layout_marginTop="@dimen/size_12"
            android:layout_weight="0"
            android:background="@drawable/bg_invite_btn"
            android:paddingTop="@dimen/size_2"
            android:text="@string/moi"
            android:textAlignment="center"
            android:textColor="#3C5A99"
            android:visibility="gone" />
    </LinearLayout>
    <View
        android:layout_marginStart="@dimen/size_12"
        android:layout_marginEnd="@dimen/size_12"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="@color/gray"
        />
</LinearLayout>
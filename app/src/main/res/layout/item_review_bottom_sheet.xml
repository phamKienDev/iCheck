<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size_10"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <vn.icheck.android.ichecklibs.view.normal_text.TextNormal
        android:id="@+id/tvVote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_list_blue_12dp"
        android:drawableLeft="@drawable/ic_list_blue_12dp"
        android:drawablePadding="@dimen/size_2"
        android:ellipsize="end"
        android:fontFamily="@font/barlow_medium"
        android:textSize="@dimen/font_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ratingReview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Chất lượng sản phẩm" />

    <com.willy.ratingbar.ScaleRatingBar
        android:id="@+id/ratingReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvVote"
        app:layout_constraintTop_toTopOf="parent"
        app:srb_clickable="false"
        app:srb_drawableEmpty="@drawable/ic_star_empty_36px"
        app:srb_drawableFilled="@drawable/star_active_36px"
        app:srb_isIndicator="false"
        app:srb_numStars="5"
        app:srb_rating="0"
        app:srb_scrollable="false"
        app:srb_starHeight="@dimen/size_36"
        app:srb_starPadding="@dimen/size_0"
        app:srb_starWidth="@dimen/size_36" />
</androidx.constraintlayout.widget.ConstraintLayout>
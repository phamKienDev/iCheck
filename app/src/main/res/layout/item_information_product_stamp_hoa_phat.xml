<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_12"
        android:layout_marginEnd="@dimen/size_12"
        android:background="@drawable/bg_corner_top_gray_10"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_11"
            android:layout_marginTop="@dimen/size_8"
            android:fontFamily="@font/barlow_semi_bold"
            android:textColor="@color/colorSecondary"
            android:textSize="@dimen/font_18"
            tools:text="Giới thiệu thông tin sản phẩm" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:layout_marginStart="@dimen/size_12"
                android:layout_marginEnd="@dimen/size_12"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@id/tvContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_14"
                    android:fontFamily="@font/barlow_medium"
                    android:textColor="#434343"
                    android:maxHeight="220dp"
                    tools:text="Năm 2015 đánh dấu bước ngoặt của Hòa Phát khi Tập đoàn chính thức đầu tư và lĩnh vực nông nghiệp công nghệ cao quy mô lớn. Các nhà máy sản xuất Thức ăn chăn nuôi, trang trại chăm nuôi heo, bò..."
                    />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_12"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"/>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvGradient"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxHeight="@dimen/size_102"
                android:gravity="bottom"
                android:background="@drawable/bg_gra_bottom_to_top_white"
                android:layout_gravity="bottom"/>

        </FrameLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@id/tv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_14"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/size_4"
        android:paddingStart="@dimen/size_12"
        android:paddingEnd="@dimen/size_12"
        android:paddingBottom="@dimen/size_12"
        android:fontFamily="@font/barlow_semi_bold"
        android:drawableEnd="@drawable/ic_next_blue_18px"
        android:layout_gravity="center"
        android:textColor="@color/colorSecondary"
        android:lineSpacingExtra="@dimen/font_6"
        android:text="@string/xem_chi_tiet"
        />

</LinearLayout>
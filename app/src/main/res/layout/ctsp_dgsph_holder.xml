<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/size_12"
    android:paddingEnd="@dimen/size_12"
    android:paddingBottom="@dimen/size_6"
    android:layout_marginTop="@dimen/size_6"
    android:background="@color/white"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/tv_dgsp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/danh_gia_san_pham"
        android:textColor="#3C5A99"
        android:textSize="@dimen/font_18" />

    <TextView
        android:id="@+id/tv_xtcrv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/xem_tat_ca" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/size_12"
    android:paddingTop="@dimen/size_12"
    android:paddingEnd="@dimen/size_12"
    android:paddingBottom="@dimen/size_8">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:includeFontPadding="false"
        android:text="@string/thong_tin_van_chuyen"
        android:textColor="#3c5a99"
        android:textSize="14sp"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8"
        android:background="@drawable/bg_f1f1f1_corners_10"
        android:orientation="vertical"
        android:paddingStart="@dimen/size_10"
        android:paddingTop="@dimen/size_8"
        android:paddingEnd="@dimen/size_10"
        android:paddingBottom="@dimen/size_8">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_car_shipping_blue_18dp"
            android:drawableLeft="@drawable/ic_car_shipping_blue_18dp"
            android:drawablePadding="@dimen/size_10"
            android:fontFamily="sans-serif-medium"
            android:includeFontPadding="false"
            android:text="@string/don_vi_van_chuyen"
            android:textColor="#3c5a99"
            android:textSize="14sp"
            android:textStyle="normal" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/tvShippingUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_28"
            android:layout_marginLeft="@dimen/size_28"
            android:layout_marginTop="@dimen/size_4"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:textColor="#434343"
            android:textSize="14sp"
            android:textStyle="normal"
            tools:text="Giao HÃ ng Nhanh" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/tvFollow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/size_12"
            android:layout_marginBottom="@dimen/size_4"
            android:background="?android:attr/selectableItemBackground"
            android:drawableEnd="@drawable/ic_next_blue_18px"
            android:drawableRight="@drawable/ic_next_blue_18px"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:padding="@dimen/size_0"
            android:textAlignment="gravity"
            android:textColor="#f2994a"
            android:textSize="14sp"
            android:textStyle="normal"
            android:text="@string/theo_doi_don_hang" />
    </LinearLayout>
</LinearLayout>
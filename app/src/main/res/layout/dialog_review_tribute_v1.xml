<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_popup_review"
        android:orientation="vertical"
        android:paddingBottom="@dimen/size_20">

        <ImageView
            android:id="@+id/imageView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:adjustViewBounds="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_popup_review_success" />

        <TextView
            android:id="@+id/textView69"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_16"
            android:text="Cảm ơn đánh giá của bạn!"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_16"
            app:layout_constraintEnd_toEndOf="@+id/imageView28"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView28" />

        <TextView
            android:id="@+id/textView70"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_32"
            android:layout_marginEnd="@dimen/size_32"
            android:padding="@dimen/size_8"
            android:text="Hãy chia sẻ đánh giá này với người thân, bạn bè, đóng góp cho cộng đồng sử dụng sản phẩm chính hãng nhé"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@id/imageView28"
            app:layout_constraintStart_toStartOf="@id/imageView28"
            app:layout_constraintTop_toBottomOf="@id/textView69" />

        <vn.icheck.android.ichecklibs.view.accent.accent_blue.ButtonAccentBlueBorder20
            android:id="@+id/btn_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="@dimen/size_16"
            android:paddingTop="@dimen/size_8"
            android:paddingEnd="@dimen/size_16"
            android:paddingBottom="@dimen/size_8"
            app:layout_constraintTop_toBottomOf="@id/textView70"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/imageView28"
            android:text="Chia sẻ ngay"
            android:textColor="@android:color/white"
            android:visibility="visible" />

        <ProgressBar
            android:id="@+id/progressBarShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:layout_constraintTop_toTopOf="@id/btn_share"
            app:layout_constraintStart_toStartOf="@id/btn_share"
            app:layout_constraintEnd_toEndOf="@id/btn_share"
            app:layout_constraintBottom_toBottomOf="@id/btn_share"
            android:layout_marginTop="@dimen/size_8"
            android:layout_marginBottom="@dimen/size_8"
            android:visibility="gone" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/btn_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/size_20"
        android:background="@null"
        app:srcCompat="@drawable/ic_cancel_popup_32px" />
</LinearLayout>

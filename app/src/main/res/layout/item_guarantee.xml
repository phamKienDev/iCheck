<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size_10"
    android:background="@color/white"
    android:paddingStart="@dimen/size_12"
    android:paddingTop="@dimen/size_16"
    android:paddingEnd="@dimen/size_12"
    android:paddingBottom="@dimen/size_16"
    android:shrinkColumns="*"
    android:stretchColumns="*">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <vn.icheck.android.ichecklibs.view.secondary.TextHeaderSecondary
            android:id="@id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:text="@string/thong_tin_bao_hanh"
            app:layout_constraintTop_toTopOf="parent" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_10">

        <vn.icheck.android.ichecklibs.view.second_text.TextBody1Second
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_12"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_clock_blue_14dp"
            android:drawablePadding="@dimen/size_12"
            android:text="@string/thoi_gian_bao_hanh_v2"
            android:textSize="@dimen/font_14"
            app:layout_constraintTop_toTopOf="parent" />

        <vn.icheck.android.ichecklibs.view.normal_text.TextBody1Normal
            android:id="@id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:hint="@string/dang_cap_nhat"
            android:textAlignment="gravity"
            android:textSize="@dimen/font_14"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="3 năm" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_10">

        <vn.icheck.android.ichecklibs.view.second_text.TextBody1Second
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_12"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_warranty_blue_14dp"
            android:drawablePadding="@dimen/size_12"
            android:text="@string/han_bao_hanh_v2"
            android:textSize="@dimen/font_14"
            app:layout_constraintTop_toTopOf="parent" />

        <vn.icheck.android.ichecklibs.view.normal_text.TextBody1Normal
            android:id="@id/tvEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:hint="@string/dang_cap_nhat"
            android:text="29/04/2020"
            android:textAlignment="gravity"
            android:textSize="@dimen/font_14"
            app:layout_constraintTop_toTopOf="parent" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_10">

        <vn.icheck.android.ichecklibs.view.second_text.TextBody1Second
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_12"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_calendar_blue_14dp"
            android:drawablePadding="@dimen/size_12"
            android:text="@string/so_ngay_bao_hanh_con_lai_v2"
            android:textSize="@dimen/font_14"
            app:layout_constraintTop_toTopOf="parent" />

        <vn.icheck.android.ichecklibs.view.accent.accentred.TextBody1AccentRed
            android:id="@id/tvRemaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:hint="@string/dang_cap_nhat"
            android:text="15 ngày"
            android:textAlignment="gravity"
            android:textSize="@dimen/font_14"
            app:layout_constraintTop_toTopOf="parent" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_10">

        <vn.icheck.android.ichecklibs.view.second_text.TextBody1Second
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_12"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_clock_blue_14dp"
            android:drawablePadding="@dimen/size_12"
            android:text="@string/ngay_kich_hoat_bao_hanh_v2"
            android:textSize="@dimen/font_14"
            app:layout_constraintTop_toTopOf="parent" />

        <vn.icheck.android.ichecklibs.view.normal_text.TextBody1Normal
            android:id="@id/tvActivate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:hint="@string/dang_cap_nhat"
            android:text="20/11/2018"
            android:textAlignment="gravity"
            android:textSize="@dimen/font_14"
            app:layout_constraintTop_toTopOf="parent" />
    </TableRow>
</TableLayout>
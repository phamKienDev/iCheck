<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".screen.user.pvcombank.confirmunlockcard.ConfirmUnlockPVCardActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_44"
        android:background="@color/white"
        android:elevation="@dimen/size_4">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@id/imgBack"
            android:layout_width="@dimen/size_44"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            app:srcCompat="@drawable/ic_back_blue_v2_24px" />

        <vn.icheck.android.ichecklibs.view.primary.TextHeaderPrimary
            android:id="@id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Xác nhận mở thẻ" />
    </FrameLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <vn.icheck.android.ichecklibs.view.normal_text.TextNormalBarlowSemiBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_40"
                android:fontFamily="@font/barlow_semi_bold"
                android:gravity="center"
                android:text="Nhập mã OTP"
                android:textSize="@dimen/font_20" />

            <vn.icheck.android.ichecklibs.view.second_text.TextSecondBarlowMedium
                android:id="@+id/tvOtpToPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/size_10"
                android:layout_marginStart="@dimen/size_63"
                android:layout_marginEnd="@dimen/size_63"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/font_6"
                android:textSize="@dimen/font_14"
                android:textStyle="normal"
                tools:text="@string/ma_xac_nhan_otp_da_duoc_gui_den_sdt" />

            <vn.icheck.android.ui.OtpEditText
                android:id="@+id/edt_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:layout_marginStart="@dimen/size_88"
                android:layout_marginTop="@dimen/size_46"
                android:layout_marginEnd="@dimen/size_88" />

            <vn.icheck.android.ichecklibs.view.secondary.TextBarlowSemiBoldSecondary
                android:id="@+id/btnResend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/size_20"
                android:lineSpacingExtra="@dimen/font_6"
                android:paddingStart="@dimen/size_10"
                android:paddingTop="@dimen/size_5"
                android:paddingEnd="@dimen/size_10"
                android:paddingBottom="@dimen/size_5"
                android:text="Gửi lại mã (60s)"
                android:textSize="@dimen/font_14" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/btnConfirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_36"
            android:layout_marginStart="@dimen/size_16"
            android:layout_marginEnd="@dimen/size_16"
            android:layout_marginBottom="@dimen/size_16"
            android:background="@drawable/bg_corner_gray_topup_4"
            android:fontFamily="@font/barlow_semi_bold"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/font_16"
            android:text="Xác nhận" />

    </LinearLayout>
</LinearLayout>
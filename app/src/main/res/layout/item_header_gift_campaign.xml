<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgBanner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/colorPrimary" />

    <vn.icheck.android.ichecklibs.view.TextSecondary
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0"
        android:layout_marginTop="@dimen/size_180"
        android:background="@drawable/bg_corner_top_20"
        android:fontFamily="@font/barlow_semi_bold"
        android:paddingStart="@dimen/size_10"
        android:paddingTop="@dimen/size_10"
        android:text="@string/lich_su_mo_qua"
        android:textSize="@dimen/font_16"
        app:layout_constraintBottom_toBottomOf="@id/imgBanner"
        tools:ignore="RtlSymmetry" />
</androidx.constraintlayout.widget.ConstraintLayout>
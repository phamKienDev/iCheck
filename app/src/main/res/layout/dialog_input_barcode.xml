<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_corners_top_10">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@id/tvClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_close_blue_24"
        android:padding="@dimen/size_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nhap_ma_bang_tay"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/tvClose"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvClose" />

    <View
        style="@style/Line_Gray.Horizontal"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/tvClose" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@id/edtBarcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_16"
        android:layout_marginTop="@dimen/size_30"
        android:layout_marginEnd="@dimen/size_16"
        android:background="@android:color/transparent"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:hint="@string/ma_san_pham"
        android:includeFontPadding="false"
        android:paddingTop="@dimen/size_6"
        android:paddingBottom="@dimen/size_6"
        android:singleLine="true"
        android:textColor="@color/blue"
        android:textColorHint="#d8d8d8"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@id/tvClose" />

    <View
        style="@style/Line_Gray.Horizontal"
        android:layout_width="@dimen/size_0"
        android:background="@color/blue"
        app:layout_constraintEnd_toEndOf="@id/edtBarcode"
        app:layout_constraintStart_toStartOf="@id/edtBarcode"
        app:layout_constraintTop_toBottomOf="@id/edtBarcode" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@id/txtMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_6"
        android:fontFamily="sans-serif"
        android:text="@string/nha_ma_duoc_in_tren_san_pham"
        android:textColor="#b4b4b4"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtBarcode" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@id/btnConfirm"
        android:layout_width="@dimen/size_0"
        android:layout_height="@dimen/size_40"
        android:layout_marginTop="@dimen/size_12"
        android:layout_marginBottom="@dimen/size_16"
        android:background="@drawable/btn_blue_corners_10"
        android:enabled="false"
        android:text="@string/gui_ma_upcase"
        android:textColor="#ffffff"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/edtBarcode"
        app:layout_constraintStart_toStartOf="@id/edtBarcode"
        app:layout_constraintTop_toBottomOf="@id/txtMessage" />
</androidx.constraintlayout.widget.ConstraintLayout>
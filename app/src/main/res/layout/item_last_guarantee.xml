<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size_10"
    android:background="@color/white"
    android:paddingStart="@dimen/size_12"
    android:paddingTop="@dimen/size_16"
    android:paddingEnd="@dimen/size_12"
    android:shrinkColumns="*"
    android:stretchColumns="*">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <vn.icheck.android.ichecklibs.view.TextHeader
            android:id="@id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:text="@string/lich_su_bao_hanh_gan_nhat"
            android:textColor="@color/colorSecondary"
            app:layout_constraintTop_toTopOf="parent" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_10">

        <vn.icheck.android.ichecklibs.view.TextBody1
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_12"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_clock_blue_14dp"
            android:drawablePadding="@dimen/size_12"
            android:text="@string/thoi_gian_v2"
            android:textColor="@color/darkGray3"
            android:textSize="@dimen/font_14"
            app:layout_constraintTop_toTopOf="parent" />

        <vn.icheck.android.ichecklibs.view.TextBody1
            android:id="@id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:hint="@string/dang_cap_nhat"
            android:textAlignment="gravity"
            android:textColor="@color/black2"
            android:textColorHint="@color/black2"
            android:textSize="@dimen/font_14"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="3 năm" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_10">

        <vn.icheck.android.ichecklibs.view.TextBody1
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_12"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_warranty_blue_14dp"
            android:drawablePadding="@dimen/size_12"
            android:text="@string/dia_diem_bao_hanh"
            android:textColor="@color/darkGray3"
            android:textSize="@dimen/font_14"
            app:layout_constraintTop_toTopOf="parent" />

        <vn.icheck.android.ichecklibs.view.TextBody1
            android:id="@id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:hint="@string/dang_cap_nhat"
            android:text="29/04/2020"
            android:textAlignment="gravity"
            android:textColor="@color/black2"
            android:textColorHint="@color/black2"
            android:textSize="@dimen/font_14"
            app:layout_constraintTop_toTopOf="parent" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_10">

        <vn.icheck.android.ichecklibs.view.TextBody1
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_12"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_calendar_blue_14dp"
            android:drawablePadding="@dimen/size_12"
            android:text="@string/trang_thai_v2"
            android:textColor="@color/darkGray3"
            android:textSize="@dimen/font_14"
            app:layout_constraintTop_toTopOf="parent" />

        <vn.icheck.android.ichecklibs.view.TextBody1
            android:id="@id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:hint="@string/dang_cap_nhat"
            android:text="20/11/2018"
            android:textAlignment="gravity"
            android:textColor="@color/black2"
            android:textColorHint="@color/black2"
            android:textSize="@dimen/font_14"
            app:layout_constraintTop_toTopOf="parent" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_10">

        <vn.icheck.android.ichecklibs.view.TextBody1
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_12"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_clock_blue_14dp"
            android:drawablePadding="@dimen/size_12"
            android:text="@string/tinh_trang_v2"
            android:textColor="@color/darkGray3"
            android:textSize="@dimen/font_14"
            app:layout_constraintTop_toTopOf="parent" />

        <vn.icheck.android.ichecklibs.view.TextBody1
            android:id="@id/tvState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:hint="@string/dang_cap_nhat"
            android:text="15 ngày"
            android:textAlignment="gravity"
            android:textColor="@color/black2"
            android:textColorHint="@color/black2"
            android:textSize="@dimen/font_14"
            app:layout_constraintTop_toTopOf="parent" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_15">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_0_5"
            android:layout_span="2"
            android:background="@color/colorLine" />
    </TableRow>

    <TableRow>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="2">

            <vn.icheck.android.ichecklibs.view.TextBody2
                android:id="@id/tvViewMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/font_12"
                android:text="@string/xem_them"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_14" />
        </FrameLayout>
    </TableRow>
</TableLayout>
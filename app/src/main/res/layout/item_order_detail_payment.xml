<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/size_12"
    android:paddingTop="@dimen/size_12"
    android:paddingEnd="@dimen/size_12"
    android:paddingBottom="@dimen/size_8">

    <vn.icheck.android.ichecklibs.view.TextSecondary
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:includeFontPadding="false"
        android:text="@string/thong_tin_thanh_toan"
        android:textSize="@dimen/font_14"
        android:textStyle="normal" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8"
        android:background="@drawable/bg_f1f1f1_corners_10"
        android:orientation="vertical"
        android:paddingStart="@dimen/size_10"
        android:paddingTop="@dimen/size_8"
        android:paddingEnd="@dimen/size_10"
        android:paddingBottom="@dimen/size_12"
        android:stretchColumns="2">

        <TableRow>

            <vn.icheck.android.ichecklibs.view.TextSecondary
                android:id="@id/tvName"
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_history_money_blue_18dp"
                android:drawableLeft="@drawable/ic_history_money_blue_18dp"
                android:drawablePadding="@dimen/size_10"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="@string/tong_thanh_toan"
                android:textSize="@dimen/font_14"
                android:textStyle="normal" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@id/tvTotalMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:gravity="end"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textAlignment="gravity"
                android:textColor="@color/colorAccentRed"
                android:textSize="@dimen/font_16"
                android:textStyle="normal"
                tools:text="400,000₫" />
        </TableRow>

        <TableRow
            android:layout_marginStart="@dimen/size_2"
            android:layout_marginTop="@dimen/size_8"
            android:layout_marginEnd="@dimen/size_2">

            <vn.icheck.android.ichecklibs.view.ViewSecondary
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_1"
                android:layout_span="2"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_marginStart="@dimen/size_28"
            android:layout_marginLeft="@dimen/size_28"
            android:layout_marginTop="@dimen/size_12">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@id/tvCountProduct"
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:textColor="#434343"
                android:textSize="@dimen/font_14"
                android:textStyle="normal"
                tools:text="Số lượng: 3 sản phẩm" />

            <vn.icheck.android.ichecklibs.view.TextSecondary
                android:id="@id/tvProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:gravity="end"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:textAlignment="gravity"
                android:textSize="@dimen/font_14"
                android:textStyle="normal"
                tools:text="0đ" />
        </TableRow>

        <TableRow
            android:layout_marginStart="@dimen/size_28"
            android:layout_marginLeft="@dimen/size_28"
            android:layout_marginTop="@dimen/size_8">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:text="@string/phi_van_chuyen_"
                android:textColor="#434343"
                android:textSize="@dimen/font_14"
                android:textStyle="normal" />

            <vn.icheck.android.ichecklibs.view.TextSecondary
                android:id="@id/tvShippingPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:gravity="end"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:textAlignment="gravity"
                android:textSize="@dimen/font_14"
                android:textStyle="normal"
                tools:text="0đ" />
        </TableRow>
    </TableLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_corners_top_16"
    android:orientation="vertical"
    android:paddingBottom="@dimen/size_12">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutFollow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:paddingStart="@dimen/size_4"
        android:paddingTop="@dimen/size_8"
        android:paddingEnd="@dimen/size_4"
        android:paddingBottom="@dimen/size_8">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgFollow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_unfollow_40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <vn.icheck.android.ichecklibs.view.normal_text.TextNormal
            android:id="@+id/tvFollowTitle"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_10"
            android:layout_marginLeft="@dimen/size_10"
            android:fontFamily="@font/barlow_medium"
            android:includeFontPadding="false"
            android:textSize="@dimen/font_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/imgFollow"
            app:layout_constraintTop_toTopOf="@id/imgFollow"
            android:text="@string/bo_theo_doi" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvFollowContent"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_4"
            android:ellipsize="end"
            android:fontFamily="@font/barlow_medium"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:textColor="@color/colorSecondText"
            android:textSize="@dimen/font_14"
            app:layout_constraintEnd_toEndOf="@id/tvFollowTitle"
            app:layout_constraintStart_toStartOf="@id/tvFollowTitle"
            app:layout_constraintTop_toBottomOf="@id/tvFollowTitle"
            android:text="@string/feed_option_off_notification_message" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutPin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:paddingStart="@dimen/size_4"
        android:paddingTop="@dimen/size_8"
        android:paddingEnd="@dimen/size_4"
        android:paddingBottom="@dimen/size_8">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgPin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_pin_post_40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <vn.icheck.android.ichecklibs.view.normal_text.TextNormal
            android:id="@+id/tvPinTitle"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_10"
            android:layout_marginLeft="@dimen/size_10"
            android:ellipsize="end"
            android:fontFamily="@font/barlow_medium"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textSize="@dimen/font_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/imgPin"
            app:layout_constraintTop_toTopOf="@id/imgPin"
            android:text="@string/review_pin_option_title" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPinContent"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_4"
            android:ellipsize="end"
            android:fontFamily="@font/barlow_medium"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:textColor="@color/colorSecondText"
            android:textSize="@dimen/font_14"
            app:layout_constraintEnd_toEndOf="@id/tvPinTitle"
            app:layout_constraintStart_toStartOf="@id/tvPinTitle"
            app:layout_constraintTop_toBottomOf="@id/tvPinTitle"
            android:text="@string/post_pin_option_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:paddingStart="@dimen/size_4"
        android:paddingTop="@dimen/size_8"
        android:paddingEnd="@dimen/size_4"
        android:paddingBottom="@dimen/size_8">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit_review_40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <vn.icheck.android.ichecklibs.view.normal_text.TextNormal
            android:id="@+id/tvEditTitle"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_10"
            android:layout_marginLeft="@dimen/size_10"
            android:ellipsize="end"
            android:fontFamily="@font/barlow_medium"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text="@string/chinh_sua_bai_viet"
            android:textSize="@dimen/font_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgEdit"
            app:layout_constraintTop_toTopOf="@id/imgEdit" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvEditContent"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_4"
            android:ellipsize="end"
            android:fontFamily="@font/barlow_medium"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:text="@string/feed_option_edit"
            android:textColor="@color/colorSecondText"
            android:textSize="@dimen/font_14"
            app:layout_constraintEnd_toEndOf="@id/tvEditTitle"
            app:layout_constraintStart_toStartOf="@id/tvEditTitle"
            app:layout_constraintTop_toBottomOf="@id/tvEditTitle" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutNotify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:paddingStart="@dimen/size_4"
        android:paddingTop="@dimen/size_8"
        android:paddingEnd="@dimen/size_4"
        android:paddingBottom="@dimen/size_8">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgNotify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_turn_off_notification_40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <vn.icheck.android.ichecklibs.view.normal_text.TextNormal
            android:id="@+id/tvNotifyTitle"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_10"
            android:layout_marginLeft="@dimen/size_10"
            android:ellipsize="end"
            android:fontFamily="@font/barlow_medium"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text="@string/post_turn_off_notification_option_title"
            android:textSize="@dimen/font_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgNotify"
            app:layout_constraintTop_toTopOf="@id/imgNotify" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNotifyContent"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_4"
            android:ellipsize="end"
            android:fontFamily="@font/barlow_medium"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:text="@string/post_turn_off_notification_option_content"
            android:textColor="@color/colorSecondText"
            android:textSize="@dimen/font_14"
            app:layout_constraintEnd_toEndOf="@id/tvNotifyTitle"
            app:layout_constraintStart_toStartOf="@id/tvNotifyTitle"
            app:layout_constraintTop_toBottomOf="@id/tvNotifyTitle" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutPrivacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/size_4"
        android:paddingTop="@dimen/size_8"
        android:paddingEnd="@dimen/size_4"
        android:paddingBottom="@dimen/size_8">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgPrivacy"
            android:layout_width="@dimen/size_40"
            android:layout_height="@dimen/size_40"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_privacy_40px" />

        <vn.icheck.android.ichecklibs.view.normal_text.TextNormal
            android:id="@+id/tv_privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_10"
            android:layout_marginLeft="@dimen/size_10"
            android:fontFamily="@font/barlow_medium"
            android:text="Chỉnh sửa quyền riêng tư"
            android:textSize="@dimen/font_14"
            app:layout_constraintStart_toEndOf="@id/imgPrivacy"
            app:layout_constraintTop_toTopOf="@id/imgPrivacy" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPrivacyContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/barlow_regular"
            android:text="Quyền riêng tư cho phép bạn có thể hiển thị bài đánh giá với người bạn chọn"
            android:textColor="#757575"
            android:textSize="@dimen/font_14"
            android:visibility="visible"
            app:fontFamily="@font/barlow_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_privacy"
            app:layout_constraintTop_toBottomOf="@id/tv_privacy" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/layoutReport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:paddingStart="@dimen/size_4"
        android:paddingTop="@dimen/size_8"
        android:paddingEnd="@dimen/size_4"
        android:paddingBottom="@dimen/size_8">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_report_40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <vn.icheck.android.ichecklibs.view.normal_text.TextNormal
            android:id="@+id/tvReportTitle"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_10"
            android:layout_marginLeft="@dimen/size_10"
            android:ellipsize="end"
            android:fontFamily="@font/barlow_medium"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text="@string/post_report_option_title"
            android:textSize="@dimen/font_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgReport"
            app:layout_constraintTop_toTopOf="@id/imgReport" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvReportContent"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_4"
            android:ellipsize="end"
            android:fontFamily="@font/barlow_medium"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:text="@string/bao_cao_bai_viet_content"
            android:textColor="@color/colorSecondText"
            android:textSize="@dimen/font_14"
            app:layout_constraintEnd_toEndOf="@id/tvReportTitle"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/tvReportTitle"
            app:layout_constraintTop_toBottomOf="@id/tvReportTitle" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/layoutDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:paddingStart="@dimen/size_4"
        android:paddingTop="@dimen/size_8"
        android:paddingEnd="@dimen/size_4"
        android:paddingBottom="@dimen/size_8">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete_more_40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <vn.icheck.android.ichecklibs.view.normal_text.TextNormal
            android:id="@+id/tvDeleteTitle"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_10"
            android:layout_marginLeft="@dimen/size_10"
            android:ellipsize="end"
            android:fontFamily="@font/barlow_medium"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text="@string/post_delete_option_title"
            android:textSize="@dimen/font_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgDelete"
            app:layout_constraintTop_toTopOf="@id/imgDelete" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDeleteContent"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_4"
            android:ellipsize="end"
            android:fontFamily="@font/barlow_medium"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:text="@string/post_delete_option_content"
            android:textColor="@color/colorSecondText"
            android:textSize="@dimen/font_14"
            app:layout_constraintEnd_toEndOf="@id/tvDeleteTitle"
            app:layout_constraintStart_toStartOf="@id/tvDeleteTitle"
            app:layout_constraintTop_toBottomOf="@id/tvDeleteTitle" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
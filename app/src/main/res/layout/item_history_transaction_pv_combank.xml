<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size_1"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingTop="@dimen/size_14">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_xu_add_20px" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginRight="@dimen/size_14"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgType"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/barlow_semi_bold"
            android:text="2000"
            android:textColor="@color/colorAccentGreen"
            android:textSize="@dimen/font_16" />

        <vn.icheck.android.ichecklibs.view.normal_text.TextNormal
            android:id="@+id/tvMission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_2"
            android:fontFamily="@font/barlow_medium"
            android:text="Hoàn thành nhiệm vụ"
            android:textSize="@dimen/font_14" />

        <vn.icheck.android.ichecklibs.view.second_text.TextSecondBarlowMedium
            android:id="@+id/tvContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_2"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Bạn nhận được từ nhiệm vụ Đăng nhập (2 dòng)...Bạn nhận được từ nhiệm vụ Đăng nhập Bạn nhận được từ nhiệm vụ Đăng nhập (2 dòng)...Bạn nhận được từ nhiệm vụ Đăng nhập (2 dòng)...(2 dòng)..."
            android:textSize="@dimen/font_14" />

        <vn.icheck.android.ichecklibs.view.second_text.TextSecondBarlowMedium
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_6"
            android:layout_marginBottom="@dimen/size_10"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="15:12, 24/5/2018"
            android:textSize="@dimen/font_12" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/gray_e5" />
</androidx.constraintlayout.widget.ConstraintLayout>
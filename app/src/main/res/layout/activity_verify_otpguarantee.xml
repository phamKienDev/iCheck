<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <include
        android:id="@id/layoutToolbar"
        layout="@layout/toolbar_blue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_38"
            android:layout_marginTop="@dimen/size_70"
            android:layout_marginEnd="@dimen/size_38">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@id/txtOtp"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_42"
                android:layout_gravity="center"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textColor="#66000000"
                android:textSize="14sp"
                android:textStyle="normal" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@id/layoutInputOtp"
                style="@style/Account_TextInputLayout.Register"
                android:layout_margin="@dimen/size_0"
                android:background="@android:color/transparent"
                app:hintEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@id/edtOtp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_42"
                    android:background="@drawable/under_line_1dp_gray"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="8"
                    android:textColor="#3c5a99"
                    android:textSize="36sp"
                    android:textStyle="bold" />
            </com.google.android.material.textfield.TextInputLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_38"
            android:layout_marginTop="@dimen/size_24"
            android:layout_marginEnd="@dimen/size_38">

            <LinearLayout
                android:id="@id/layoutStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:visibility="invisible">

                <ProgressBar
                    android:id="@id/progressBar"
                    android:layout_width="@dimen/size_12"
                    android:layout_height="@dimen/size_12"
                    android:theme="@style/Theme_Blue"
                    android:visibility="invisible" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@id/txtStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:fontFamily="sans-serif-medium"
                    android:paddingStart="@dimen/size_8"
                    android:paddingTop="@dimen/size_4"
                    android:paddingEnd="@dimen/size_8"
                    android:paddingBottom="@dimen/size_4"
                    android:textColor="#3c5a99"
                    android:textSize="14sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@id/txtTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textAlignment="gravity"
                android:textColor="#66000000"
                android:textSize="14sp"
                android:textStyle="normal" />
        </FrameLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/txtContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_38"
            android:layout_marginTop="@dimen/size_32"
            android:layout_marginEnd="@dimen/size_38"
            android:fontFamily="sans-serif"
            android:textColor="#b4b4b4"
            android:textSize="14sp"
            android:textStyle="normal" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@id/btnConfirm"
        style="@style/Button_Blue_Corners_26"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40"
        android:layout_marginStart="@dimen/size_38"
        android:layout_marginTop="@dimen/size_32"
        android:layout_marginEnd="@dimen/size_38"
        android:layout_marginBottom="@dimen/size_32" />
</LinearLayout>
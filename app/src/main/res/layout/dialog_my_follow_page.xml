<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <vn.icheck.android.ichecklibs.view.appbackground.whitebackground.ICViewBgWhiteRadius10
        android:layout_width="@dimen/size_50"
        android:layout_height="@dimen/size_6"
        android:layout_gravity="center" />

    <vn.icheck.android.ichecklibs.view.appbackground.whitebackground.ICLinearLayoutBgWhiteRadiusTop16
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8"
        android:orientation="vertical"
        android:paddingBottom="@dimen/size_12">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutFollow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:paddingStart="@dimen/size_4"
            android:paddingTop="@dimen/size_8"
            android:paddingEnd="@dimen/size_4"
            android:paddingBottom="@dimen/size_8">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgFollow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_unfollow_40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <vn.icheck.android.ichecklibs.view.normal_text.TextNormal
                android:id="@+id/tvFollowTitle"
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_10"
                android:layout_marginLeft="@dimen/size_10"
                android:ellipsize="end"
                android:fontFamily="@font/barlow_medium"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textSize="@dimen/font_14"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/imgFollow"
                app:layout_constraintTop_toTopOf="@id/imgFollow"
                android:text="@string/bo_theo_doi" />

            <vn.icheck.android.ichecklibs.view.second_text.TextSecondBarlowMedium
                android:id="@+id/tvFollowContent"
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_4"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:textSize="@dimen/font_14"
                app:layout_constraintEnd_toEndOf="@id/tvFollowTitle"
                app:layout_constraintStart_toStartOf="@id/tvFollowTitle"
                app:layout_constraintTop_toBottomOf="@id/tvFollowTitle"
                android:text="@string/feed_option_off_follow_this_page_message" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@id/layoutReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:paddingStart="@dimen/size_4"
            android:paddingTop="@dimen/size_8"
            android:paddingEnd="@dimen/size_4"
            android:paddingBottom="@dimen/size_8">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_report_40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <vn.icheck.android.ichecklibs.view.normal_text.TextNormal
                android:id="@+id/tvReportTitle"
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_10"
                android:layout_marginLeft="@dimen/size_10"
                android:ellipsize="end"
                android:fontFamily="@font/barlow_medium"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="@string/bao_cao_trang"
                android:textSize="@dimen/font_14"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/imgReport"
                app:layout_constraintTop_toTopOf="@id/imgReport" />

            <vn.icheck.android.ichecklibs.view.second_text.TextSecondBarlowMedium
                android:id="@+id/tvReportContent"
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_4"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:text="@string/post_report_option_content"
                android:textSize="@dimen/font_14"
                app:layout_constraintEnd_toEndOf="@id/tvReportTitle"
                app:layout_constraintStart_toStartOf="@id/tvReportTitle"
                app:layout_constraintTop_toBottomOf="@id/tvReportTitle" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </vn.icheck.android.ichecklibs.view.appbackground.whitebackground.ICLinearLayoutBgWhiteRadiusTop16>
</LinearLayout>
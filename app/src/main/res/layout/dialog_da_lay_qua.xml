<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_corner_vani_10"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_20"
                android:src="@drawable/ic_speaker_124px" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_16"
                android:layout_marginStart="@dimen/size_25"
                android:layout_marginEnd="@dimen/size_25"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="Bạn cần đến địa điểm nhận quà để nhân viên kiểm tra trạng thái trực tiếp trước khi trao quà."
                android:textAlignment="center"
                android:textColor="#434343"
                android:textSize="@dimen/font_14"
                android:textStyle="normal" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_9"
                android:layout_marginStart="@dimen/size_25"
                android:layout_marginEnd="@dimen/size_25"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text=" Việc bạn tự chuyển trạng thái quà sẽ khiến phần quà này không còn hiệu lực!"
                android:textAlignment="center"
                android:textColor="#434343"
                android:textSize="@dimen/font_14"
                android:textStyle="normal" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnComfirmDaLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_21"
                android:layout_marginStart="@dimen/size_28"
                android:layout_marginEnd="@dimen/size_28"
                android:layout_marginBottom="@dimen/size_12"
                android:paddingTop="@dimen/size_8"
                android:paddingBottom="@dimen/size_8"
                android:gravity="center"
                android:background="@drawable/bg_corner_brown_40"
                android:textSize="@dimen/font_16"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="#ffffff"
                android:text="Xác nhận đã trao quà" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>
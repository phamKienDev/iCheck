<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ship"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back_blue_24px_new" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:fontFamily="@font/barlow_medium"
        android:text="Thêm mới địa chỉ"
        android:textColor="#057DDA"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_back"
        app:layout_constraintTop_toTopOf="@+id/btn_back" />

    <View
        android:id="@+id/divider10"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_back" />

    <TextView
        android:id="@+id/btn_confirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/background_button_enable"
        android:fontFamily="@font/barlow_medium"
        android:gravity="center"
        android:padding="8dp"
        android:text="Hoàn tất"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/divider16"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toTopOf="@+id/btn_confirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/divider16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="12dp"
            android:id="@+id/content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView84"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/barlow_medium"
                android:text="Họ (*)"
                android:textColor="#212121"
                android:textSize="12sp" />

            <vn.icheck.android.ui.edittext.CornerErrorEditText
                android:id="@+id/edt_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:padding="8dp"
                android:fontFamily="@font/barlow_medium"
                android:textColor="#212121"
                android:background="@drawable/gray_stroke_corner_4"
                android:hint="Nhập họ người nhận"
                android:inputType="textPersonName" />
            <TextView
                android:layout_marginTop="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/barlow_medium"
                android:text="Tên đệm và tên (*)"
                android:textColor="#212121"
                android:textSize="12sp" />

            <vn.icheck.android.ui.edittext.CornerErrorEditText
                android:id="@+id/edt_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:padding="8dp"
                android:fontFamily="@font/barlow_medium"
                android:textColor="#212121"
                android:background="@drawable/gray_stroke_corner_4"
                android:hint="Nhập tên đệm và tên người nhận"
                android:inputType="textPersonName" />

            <TextView
                android:layout_marginTop="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số điện thoại (*)"
                android:textColor="#212121"
                android:textSize="12sp" />
            <vn.icheck.android.ui.edittext.CornerErrorEditText
                android:id="@+id/edt_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:padding="8dp"
                android:digits="0123456789"
                android:fontFamily="@font/barlow_medium"
                android:textColor="#212121"
                android:background="@drawable/gray_stroke_corner_4"
                android:hint="Nhập số điện thoại người nhận"
                android:inputType="phone" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp">

                <TextView
                    android:id="@+id/textView86"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/barlow_medium"
                    android:text="Tỉnh thành (*)"
                    android:textColor="#212121"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@+id/textView87"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView87"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/barlow_medium"
                    android:text="Quận huyện (*)"
                    android:textColor="#212121"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/textView86"
                    app:layout_constraintTop_toTopOf="parent" />

                <vn.icheck.android.ui.edittext.CornerErrorEditText
                    android:id="@+id/edt_quan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/gray_stroke_corner_4"
                    android:ems="10"
                    android:focusable="false"

                    android:fontFamily="@font/barlow_medium"
                    android:hint="Tùy chọn"
                    android:inputType="textPersonName"
                    android:padding="8dp"
                    android:textColor="#212121"
                    android:textSize="14sp"
                    app:drawableRightCompat="@drawable/ic_arrow_down_blue_24px_vector"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/edt_tinh_thanh"
                    app:layout_constraintTop_toBottomOf="@+id/textView87" />

                <vn.icheck.android.ui.edittext.CornerErrorEditText
                    android:id="@+id/edt_tinh_thanh"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"

                    android:layout_marginRight="8dp"
                    android:background="@drawable/gray_stroke_corner_4"
                    android:ems="10"
                    android:focusable="false"
                    android:fontFamily="@font/barlow_medium"
                    android:hint="Tùy chọn"
                    android:inputType="textPersonName"
                    android:padding="8dp"
                    android:textColor="#212121"
                    android:textSize="14sp"
                    app:drawableRightCompat="@drawable/ic_arrow_down_blue_24px_vector"
                    app:layout_constraintEnd_toStartOf="@+id/edt_quan"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView86" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_marginTop="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Xã phường (*)"
                android:textColor="#212121"
                android:textSize="12sp" />
            <vn.icheck.android.ui.edittext.CornerErrorEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:padding="8dp"
                android:fontFamily="@font/barlow_medium"
                android:textColor="#212121"
                android:id="@+id/edt_phuong_xa"
                android:focusable="false"
                android:background="@drawable/gray_stroke_corner_4"
                android:hint="Tùy chọn"
                android:inputType="textPersonName"
                app:drawableRightCompat="@drawable/ic_arrow_down_blue_24px_vector" />
            <TextView
                android:layout_marginTop="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Địa chỉ (*)"
                android:textColor="#212121"
                android:textSize="12sp" />
            <vn.icheck.android.ui.edittext.CornerErrorEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/edt_address"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:padding="8dp"
                android:fontFamily="@font/barlow_medium"
                android:textColor="#212121"
                android:background="@drawable/gray_stroke_corner_4"
                android:hint="Nhập địa chỉ cụ thể"
                android:inputType="textPersonName" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
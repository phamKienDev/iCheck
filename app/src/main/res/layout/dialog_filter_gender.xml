<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_dialog"
    android:paddingBottom="@dimen/size_20">

    <include
        android:id="@+id/layoutHeader"
        layout="@layout/layout_title_filter_search" />

    <View
        android:id="@id/divider31"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#D8D8D8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@id/tvAll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50"
        android:background="?android:attr/selectableItemBackground"
        android:fontFamily="@font/barlow_medium"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:paddingStart="@dimen/size_12"
        android:paddingEnd="@dimen/size_12"
        android:text="@string/tat_ca"
        android:textColor="@color/collection_product_name"
        android:textSize="@dimen/font_14"
        app:layout_constraintTop_toBottomOf="@id/divider31" />

    <View
        android:id="@id/divider32"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/size_12"
        android:layout_marginEnd="@dimen/size_12"
        android:background="#D8D8D8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAll" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@id/tvFemale"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50"
        android:background="?android:attr/selectableItemBackground"
        android:fontFamily="@font/barlow_medium"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/size_12"
        android:paddingTop="@dimen/size_14"
        android:paddingEnd="@dimen/size_12"
        android:paddingBottom="@dimen/size_14"
        android:text="@string/nu"
        android:textColor="@color/collection_product_name"
        android:textSize="@dimen/font_14"
        app:layout_constraintTop_toBottomOf="@id/divider32" />


    <View
        android:id="@id/divider33"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/size_12"
        android:layout_marginEnd="@dimen/size_12"
        android:background="#D8D8D8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvFemale" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@id/tvMale"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50"
        android:background="?android:attr/selectableItemBackground"
        android:fontFamily="@font/barlow_medium"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/size_12"
        android:paddingEnd="@dimen/size_12"
        android:text="@string/nam"
        android:textColor="@color/collection_product_name"
        android:textSize="@dimen/font_14"
        app:layout_constraintTop_toBottomOf="@id/divider33" />

    <View
        android:id="@id/divider34"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/size_12"
        android:layout_marginEnd="@dimen/size_12"
        android:background="#D8D8D8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMale" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@id/tvOther"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50"
        android:background="?android:attr/selectableItemBackground"
        android:fontFamily="@font/barlow_medium"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/size_12"
        android:paddingTop="@dimen/size_14"
        android:paddingEnd="@dimen/size_12"
        android:paddingBottom="@dimen/size_14"
        android:text="@string/khac"
        android:textColor="@color/collection_product_name"
        android:textSize="@dimen/font_14"
        app:layout_constraintTop_toBottomOf="@id/divider34" />

    <View
        android:id="@+id/divider30"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="12dp"
        android:background="#D8D8D8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvOther" />

    <TextView
        android:id="@+id/tvClear"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_20"
        android:layout_marginEnd="@dimen/size_12"
        android:background="@drawable/bg_corners_4_light_blue_no_solid"
        android:fontFamily="@font/barlow_semi_bold"
        android:gravity="center"
        android:paddingTop="@dimen/size_8"
        android:paddingBottom="@dimen/size_8"
        android:text="@string/thiet_lap_lai"
        android:textColor="@color/light_blue"
        android:textSize="@dimen/font_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider30" />
</androidx.constraintlayout.widget.ConstraintLayout>

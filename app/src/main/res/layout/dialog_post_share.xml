<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_corners_top_16"
    android:orientation="vertical"
    android:paddingBottom="@dimen/size_22">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutShareMyPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:paddingStart="@dimen/size_4"
        android:paddingTop="@dimen/size_8"
        android:paddingEnd="@dimen/size_4"
        android:paddingBottom="@dimen/size_8">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgShareMyPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_share_user_40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <vn.icheck.android.ichecklibs.view.normal_text.TextNormal
            android:id="@+id/tvShareMyPageTitle"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_10"
            android:layout_marginLeft="@dimen/size_10"
            android:ellipsize="end"
            android:fontFamily="@font/barlow_medium"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text="@string/share_to_my_page_title"
            android:textSize="@dimen/font_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/imgShareMyPage"
            app:layout_constraintTop_toTopOf="@id/imgShareMyPage" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_4"
            android:ellipsize="end"
            android:fontFamily="@font/barlow_medium"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:text="@string/share_to_my_page_content"
            android:textColor="@color/colorSecondText"
            android:textSize="@dimen/font_14"
            app:layout_constraintEnd_toEndOf="@id/tvShareMyPageTitle"
            app:layout_constraintStart_toStartOf="@id/tvShareMyPageTitle"
            app:layout_constraintTop_toBottomOf="@id/tvShareMyPageTitle" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutSharePage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="?android:attr/selectableItemBackground"
        android:paddingStart="@dimen/size_4"
        android:paddingTop="@dimen/size_8"
        android:paddingEnd="@dimen/size_4"
        android:paddingBottom="@dimen/size_8">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgSharePage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_share_user_40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <vn.icheck.android.ichecklibs.view.normal_text.TextNormal
            android:id="@+id/tvSharePageTitle"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_10"
            android:layout_marginLeft="@dimen/size_10"
            android:ellipsize="end"
            android:fontFamily="@font/barlow_medium"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text="@string/share_page_title"
            android:textSize="@dimen/font_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgSharePage"
            app:layout_constraintTop_toTopOf="@id/imgSharePage" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_4"
            android:ellipsize="end"
            android:fontFamily="@font/barlow_medium"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:text="@string/share_page_content"
            android:textColor="@color/colorSecondText"
            android:textSize="@dimen/font_14"
            app:layout_constraintEnd_toEndOf="@id/tvSharePageTitle"
            app:layout_constraintStart_toStartOf="@id/tvSharePageTitle"
            app:layout_constraintTop_toBottomOf="@id/tvSharePageTitle" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutShareChat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:paddingStart="@dimen/size_4"
        android:paddingTop="@dimen/size_8"
        android:paddingEnd="@dimen/size_4"
        android:paddingBottom="@dimen/size_8">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgShareChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_share_chat_40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <vn.icheck.android.ichecklibs.view.normal_text.TextNormal
            android:id="@+id/tvShareChatTitle"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_10"
            android:layout_marginLeft="@dimen/size_10"
            android:ellipsize="end"
            android:fontFamily="@font/barlow_medium"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text="@string/share_chat_title"
            android:textSize="@dimen/font_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgShareChat"
            app:layout_constraintTop_toTopOf="@id/imgShareChat" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_4"
            android:ellipsize="end"
            android:fontFamily="@font/barlow_medium"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:text="@string/share_chat_content"
            android:textColor="@color/colorSecondText"
            android:textSize="@dimen/font_14"
            app:layout_constraintEnd_toEndOf="@id/tvShareChatTitle"
            app:layout_constraintStart_toStartOf="@id/tvShareChatTitle"
            app:layout_constraintTop_toBottomOf="@id/tvShareChatTitle" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutShareMore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:paddingStart="@dimen/size_4"
        android:paddingTop="@dimen/size_8"
        android:paddingEnd="@dimen/size_4"
        android:paddingBottom="@dimen/size_8">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgShareMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_share_more_40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <vn.icheck.android.ichecklibs.view.normal_text.TextNormal
            android:id="@+id/tvShareMoreTitle"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_10"
            android:layout_marginLeft="@dimen/size_10"
            android:ellipsize="end"
            android:fontFamily="@font/barlow_medium"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text="@string/share_more_title"
            android:textSize="@dimen/font_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgShareMore"
            app:layout_constraintTop_toTopOf="@id/imgShareMore" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_4"
            android:ellipsize="end"
            android:fontFamily="@font/barlow_medium"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:text="@string/share_more_content"
            android:textColor="@color/colorSecondText"
            android:textSize="@dimen/font_14"
            app:layout_constraintEnd_toEndOf="@id/tvShareMoreTitle"
            app:layout_constraintStart_toStartOf="@id/tvShareMoreTitle"
            app:layout_constraintTop_toBottomOf="@id/tvShareMoreTitle" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
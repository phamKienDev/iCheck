<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/size_12"
    android:layout_marginTop="@dimen/size_18"
    android:layout_marginEnd="@dimen/size_12"
    android:orientation="vertical">

    <vn.icheck.android.ichecklibs.view.TextCaption
        android:id="@+id/tvTitleTextArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorNormalText" />

    <vn.icheck.android.ui.view.EditTextBody1
        android:id="@+id/edtTextArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_6"
        android:background="@drawable/bg_transparent_corners_4"
        android:gravity="start|top"
        android:minLines="4"
        android:paddingStart="@dimen/size_10"
        android:paddingTop="@dimen/size_8"
        android:paddingEnd="@dimen/size_10"
        android:paddingBottom="@dimen/size_8"
        android:textColor="@color/colorNormalText"
        android:textColorHint="@color/colorSecondText" />
</LinearLayout>
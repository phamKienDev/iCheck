<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:background="@drawable/bg_gray_corners_3_solid_white"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <vn.icheck.android.ichecklibs.view.secondary.TextSecondary
        android:id="@+id/tv_pick_gallery"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:padding="@dimen/size_12"
        android:layout_height="wrap_content"
        android:text="Chọn ảnh từ thư viện" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="@color/grayLoyalty" />

    <vn.icheck.android.ichecklibs.view.secondary.TextSecondary
        android:textAlignment="center"
        android:id="@+id/tv_pick_camera"
        android:padding="@dimen/size_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chụp ảnh" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="@color/grayLoyalty" />

    <vn.icheck.android.ichecklibs.view.secondary.TextSecondary
        android:textAlignment="center"
        android:id="@+id/tv_cancel"
        android:padding="@dimen/size_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hủy" />
</LinearLayout>
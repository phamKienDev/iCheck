<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <vn.icheck.android.ichecklibs.view.second_text.CheckBoxSecondText
        android:id="@+id/check_box"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_12"
        android:layout_marginLeft="@dimen/size_12"
        android:layout_marginTop="@dimen/size_4"
        android:layout_marginEnd="@dimen/size_12"
        android:layout_marginRight="@dimen/size_12"
        android:button="@drawable/custom_checkbox"
        android:fontFamily="@font/barlow_medium"
        android:padding="@dimen/size_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Đăng nội dung người lớn" />

    <vn.icheck.android.ichecklibs.view.normal_text.EditTextNormalText
        android:id="@+id/edt_report"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_12"
        android:layout_marginLeft="@dimen/size_12"
        android:layout_marginTop="@dimen/size_10"
        android:layout_marginEnd="@dimen/size_12"
        android:layout_marginRight="@dimen/size_12"
        android:background="@drawable/gray_stroke_corner_4"
        android:ems="10"
        android:fontFamily="@font/barlow_medium"
        android:gravity="start|top"
        android:hint="Mô tả nội dung báo cáo"
        android:inputType="textMultiLine"
        android:lines="3"
        android:padding="@dimen/size_8"
        android:textColorHint="#b4b4b4"
        android:textSize="@dimen/font_14"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/check_box"
        tools:visibility="gone" />
</androidx.constraintlayout.widget.ConstraintLayout>
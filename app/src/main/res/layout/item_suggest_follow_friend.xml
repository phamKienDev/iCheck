<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingStart="@dimen/size_30"
    android:paddingEnd="@dimen/size_30">

    <vn.icheck.android.component.view.ListAvatar
        android:id="@+id/img_list_avatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />

    <vn.icheck.android.component.view.text_view.TextViewBarlowMedium
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_6"
        android:includeFontPadding="false"
        android:textColor="@color/fast_survey_gray"
        android:textSize="@dimen/font_14"
        tools:text="11 Bạn bè Facebook đang sử dụng iCheck" />

</LinearLayout>
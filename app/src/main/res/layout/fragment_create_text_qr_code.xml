<?xml version="1.0" encoding="utf-8"?>
<vn.icheck.android.ichecklibs.view.appbackground.white_background.ICLinearLayoutWhite xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <vn.icheck.android.ichecklibs.view.appbackground.white_background.ICFrameLayoutWhite
        android:id="@+id/layoutToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/size_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@id/imgBack"
            android:layout_width="@dimen/size_44"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            app:srcCompat="@drawable/ic_back_blue_v2_24px" />

        <vn.icheck.android.ichecklibs.view.primary.TextHeaderPrimary
            android:id="@id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_44"
            android:layout_marginStart="@dimen/size_44"
            android:layout_marginEnd="@dimen/size_44"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textStyle="normal"
            tools:text="Tiêu đề" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@id/imgAction"
            android:layout_width="@dimen/size_44"
            android:layout_height="@dimen/size_44"
            android:layout_gravity="end"
            android:background="?android:attr/selectableItemBackground"
            android:visibility="gone" />
    </vn.icheck.android.ichecklibs.view.appbackground.white_background.ICFrameLayoutWhite>

    <vn.icheck.android.ichecklibs.view.appbackground.white_background.ICLinearLayoutWhite
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <vn.icheck.android.ichecklibs.view.normal_text.TextNormalBarlowMedium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_12"
            android:layout_marginLeft="@dimen/size_12"
            android:layout_marginTop="@dimen/size_16"
            android:lineSpacingExtra="@dimen/font_14"
            android:text="Nội dung bạn muốn chia sẻ"
            android:textSize="@dimen/font_12" />

        <vn.icheck.android.ichecklibs.view.line_color.EdittextNormalHintDisableBgWhiteRadius4Stroke05
            android:id="@id/edtContent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_76"
            android:layout_marginStart="@dimen/size_12"
            android:layout_marginTop="@dimen/size_6"
            android:layout_marginEnd="@dimen/size_12"
            android:fontFamily="@font/barlow_medium"
            android:gravity="top|start"
            android:hint="Nội dung"
            android:paddingStart="@dimen/size_10"
            android:paddingTop="@dimen/size_6"
            android:paddingEnd="@dimen/size_10"
            android:textSize="@dimen/font_14" />

        <vn.icheck.android.ichecklibs.view.accent.accent_red.TextAccentRed
            android:id="@id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_12"
            android:layout_marginTop="@dimen/size_6"
            android:layout_marginEnd="@dimen/size_12"
            android:drawableStart="@drawable/ic_error_red_18dp"
            android:drawableLeft="@drawable/ic_error_red_18dp"
            android:drawablePadding="@dimen/size_4"
            android:fontFamily="@font/barlow_medium"
            android:lineSpacingExtra="@dimen/font_14"
            android:textSize="@dimen/font_12"
            android:visibility="gone"
            tools:text="Nhập sai định dạng. Thử lại!" />


    </vn.icheck.android.ichecklibs.view.appbackground.white_background.ICLinearLayoutWhite>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@id/btnCreate"
        style="@style/Button_Blue_Corners_6"
        android:layout_margin="@dimen/size_12"
        android:text="@string/tao_ma_qr" />
</vn.icheck.android.ichecklibs.view.appbackground.white_background.ICLinearLayoutWhite>
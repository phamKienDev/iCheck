<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/bg_corners_white_4_border_05">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@id/imgAvatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="#03A9F4" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNameShop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/barlow_regular"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="#212121"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgAvatar"
        app:layout_constraintTop_toTopOf="@+id/imgAvatar"
        tools:text="Giày Việt" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCountRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:drawableStart="@drawable/ic_start_alone_15_dp"
        android:drawablePadding="5dp"
        android:fontFamily="@font/barlow_medium"
        android:textColor="#4f4f4f"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tvNameShop"
        app:layout_constraintTop_toBottomOf="@+id/tvNameShop"
        tools:text="8,9" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@id/tvCountReview"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="5.2dp"
        android:fontFamily="@font/barlow_medium"
        android:textColor="#828282"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/tvCountRating"
        app:layout_constraintStart_toEndOf="@id/tvCountRating"
        app:layout_constraintTop_toTopOf="@id/tvCountRating"
        tools:text="(999+)" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView10"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="18.8dp"
        android:layout_marginTop="3dp"
        android:src="@drawable/ic_barcode_blue_18px"
        app:layout_constraintBottom_toBottomOf="@+id/tvCountReview"
        app:layout_constraintStart_toEndOf="@+id/tvCountReview"
        app:layout_constraintTop_toTopOf="@+id/tvCountReview" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvBarcodeProduct"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/barlow_medium"
        android:gravity="center"
        android:textColor="#bdbdbd"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvCountReview"
        app:layout_constraintStart_toEndOf="@+id/appCompatImageView10"
        app:layout_constraintTop_toTopOf="@+id/tvCountReview"
        tools:text="8930123456789" />

</androidx.constraintlayout.widget.ConstraintLayout>
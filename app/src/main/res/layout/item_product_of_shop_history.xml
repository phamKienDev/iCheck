<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/size_12"
    android:layout_marginTop="@dimen/size_8"
    android:layout_marginEnd="@dimen/size_12"
    android:layout_marginBottom="@dimen/size_8"
    android:background="@drawable/bg_corners_white_4_border_05">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@id/imgAvatar"
        android:layout_width="@dimen/size_60"
        android:layout_height="@dimen/size_60"
        android:layout_marginStart="@dimen/size_11"
        android:layout_marginTop="@dimen/size_13"
        android:layout_marginBottom="@dimen/size_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="#03A9F4" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNameShop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_8"
        android:layout_marginEnd="@dimen/size_8"
        android:ellipsize="end"
        android:fontFamily="@font/barlow_regular"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="#212121"
        android:textSize="@dimen/font_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgAvatar"
        app:layout_constraintTop_toTopOf="@+id/imgAvatar"
        tools:text="Giày Việt" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCountRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_7"
        android:drawableStart="@drawable/ic_start_alone_15_dp"
        android:drawablePadding="@dimen/size_5"
        android:fontFamily="@font/barlow_medium"
        android:textColor="#4f4f4f"
        android:textSize="@dimen/font_12"
        app:layout_constraintStart_toStartOf="@id/tvNameShop"
        app:layout_constraintTop_toBottomOf="@+id/tvNameShop"
        tools:text="8,9" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@id/tvCountReview"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="5.2dp"
        android:fontFamily="@font/barlow_medium"
        android:textColor="#828282"
        android:textSize="@dimen/font_12"
        app:layout_constraintBottom_toBottomOf="@id/tvCountRating"
        app:layout_constraintStart_toEndOf="@id/tvCountRating"
        app:layout_constraintTop_toTopOf="@id/tvCountRating"
        tools:text="(999+)" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView10"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="18.8dp"
        android:layout_marginTop="@dimen/size_3"
        android:src="@drawable/ic_barcode_gray_18px"
        app:layout_constraintBottom_toBottomOf="@+id/tvCountReview"
        app:layout_constraintStart_toEndOf="@+id/tvCountReview"
        app:layout_constraintTop_toTopOf="@+id/tvCountReview" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvBarcodeProduct"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/size_4"
        android:fontFamily="@font/barlow_medium"
        android:gravity="center"
        android:textColor="#bdbdbd"
        android:textSize="@dimen/font_12"
        app:layout_constraintBottom_toBottomOf="@+id/tvCountReview"
        app:layout_constraintStart_toEndOf="@+id/appCompatImageView10"
        app:layout_constraintTop_toTopOf="@+id/tvCountReview"
        tools:text="8930123456789" />

</androidx.constraintlayout.widget.ConstraintLayout>
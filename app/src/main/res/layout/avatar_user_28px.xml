<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ava"
        android:layout_width="@dimen/size_28"
        android:layout_height="@dimen/size_28"
        android:src="@drawable/ic_avatar_default_84dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_verified"
        android:layout_width="@dimen/size_12"
        android:layout_height="@dimen/size_12"
        android:layout_marginStart="@dimen/size_16"
        android:layout_marginTop="@dimen/size_16"
        android:padding="0dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/ava"
        app:layout_constraintTop_toTopOf="@+id/ava"
        app:srcCompat="@drawable/ic_verified_18px" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgAvatar"
            android:layout_width="@dimen/size_50"
            android:layout_height="@dimen/size_50"
            android:layout_marginTop="@dimen/size_12"
            app:civ_border_color="#D8D8D8"
            app:civ_border_width="@dimen/size_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_44"
        android:layout_marginLeft="@dimen/size_44"
        android:layout_marginTop="@dimen/size_10"
        android:layout_marginEnd="@dimen/size_44"
        android:layout_marginRight="@dimen/size_44"
        android:drawablePadding="@dimen/size_5"
        android:fontFamily="@font/barlow_medium"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textColor="@color/colorNormalText"
        android:textSize="@dimen/font_16"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgAvatar"
        tools:drawableEnd="@drawable/ic_verified_16px"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textView71"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_24"
        android:layout_marginLeft="@dimen/size_24"
        android:layout_marginTop="@dimen/size_6"
        android:layout_marginEnd="@dimen/size_24"
        android:layout_marginRight="@dimen/size_24"
        android:fontFamily="@font/barlow_medium"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/moi_them_ban_be_de_cung_cap_nhap_cac_thong_tin_moi_nhat_tu_trang_nay"
        android:textColor="@color/colorSecondText"
        android:textSize="@dimen/font_14"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvName" />

    <TextView
        android:id="@+id/tvInvite"
        android:layout_width="@dimen/size_150"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_16"
        android:background="@drawable/btn_light_blue_corners_4"
        android:fontFamily="@font/barlow_semi_bold"
        android:gravity="center"
        android:paddingTop="@dimen/size_8"
        android:paddingBottom="@dimen/size_8"
        android:text="@string/moi_ban_be"
        android:textColor="@color/white"
        android:textSize="@dimen/font_16"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView71" />

    <TextView
        android:id="@+id/tvSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_10"
        android:layout_marginBottom="@dimen/size_10"
        android:fontFamily="@font/barlow_semi_bold"
        android:includeFontPadding="false"
        android:text="@string/bo_qua"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/font_16"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvInvite" />
</LinearLayout>
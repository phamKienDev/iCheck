<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_20">

    <FrameLayout
        android:id="@id/layoutContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0"
        android:background="@color/black_35"
        app:layout_constraintBottom_toTopOf="@id/layoutStart"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@id/layoutStart"
        android:layout_width="@dimen/size_46"
        android:layout_height="@dimen/size_0"
        android:layout_marginTop="@dimen/size_20"
        android:layout_marginBottom="@dimen/size_20"
        android:background="@color/black_35"
        app:layout_constraintBottom_toBottomOf="@id/imgIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/imgIcon" />

    <View
        android:id="@id/layoutEnd"
        android:layout_width="@dimen/size_48"
        android:layout_height="@dimen/size_0"
        android:background="@color/black_35"
        app:layout_constraintBottom_toBottomOf="@id/layoutStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/layoutStart" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0"
        android:background="@color/black_35"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutStart" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@id/imgIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_27"
        android:layout_marginEnd="@dimen/size_27"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_scan_buy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@id/layoutError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@id/imgClose"
        android:layout_width="@dimen/size_24"
        android:layout_height="@dimen/size_24"
        android:layout_marginStart="@dimen/size_12"
        android:layout_marginLeft="@dimen/size_12"
        android:background="?android:attr/selectableItemBackground"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@id/tvInputByHand"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvInputByHand"
        app:srcCompat="@drawable/ic_close_white_20" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@id/tvInputByHand"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_36"
        android:background="@drawable/bg_outline_white_1_corners_4"
        android:drawableStart="@drawable/ic_keyboard_gray_18dp"
        android:drawableLeft="@drawable/ic_keyboard_gray_18dp"
        android:drawablePadding="@dimen/size_10"
        android:fontFamily="@font/barlow_semi_bold"
        android:gravity="center"
        android:includeFontPadding="false"
        android:paddingStart="@dimen/size_16"
        android:paddingEnd="@dimen/size_16"
        android:text="@string/nhap_ma_bang_tay"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@id/imgHelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_5"
        android:src="@drawable/ic_scan_help_24px"
        app:layout_constraintBottom_toBottomOf="@id/tvInputByHand"
        app:layout_constraintEnd_toStartOf="@id/imgFlash"
        app:layout_constraintTop_toTopOf="@id/tvInputByHand" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@id/imgFlash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_7"
        android:layout_marginRight="@dimen/size_7"
        android:padding="@dimen/size_5"
        android:src="@drawable/ic_flash_off_24px"
        app:layout_constraintBottom_toBottomOf="@id/tvInputByHand"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvInputByHand" />

    <View
        android:id="@id/viewHelp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_25"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvHelp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_18"
        android:layout_marginEnd="@dimen/size_70"
        android:layout_marginRight="@dimen/size_70"
        android:clickable="false"
        android:drawableStart="@drawable/ic_scan_product_help_1"
        android:drawableLeft="@drawable/ic_scan_product_help_1"
        android:focusable="false"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/tvInputByHand"
        app:layout_constraintTop_toTopOf="@id/tvInputByHand" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvHelp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:drawableEnd="@drawable/ic_scan_product_help_2"
        android:drawableRight="@drawable/ic_scan_product_help_2"
        android:focusable="false"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvInputByHand" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvHelp3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_77"
        android:layout_marginLeft="@dimen/size_77"
        android:clickable="false"
        android:drawableEnd="@drawable/ic_scan_product_help_3"
        android:drawableRight="@drawable/ic_scan_product_help_3"
        android:focusable="false"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgIcon" />
</androidx.constraintlayout.widget.ConstraintLayout>
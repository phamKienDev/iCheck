<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vg_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="vn.icheck.android.activities.product.contribute.ContributeProductActivity">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:visibility="visible"
        tools:visibility="visible">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:padding="14dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_back_blue_24px" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Đóng góp thông tin"
            android:textAlignment="center"
            android:textColor="@color/darkBlue"
            android:textSize="18sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:text="Thông tin sản phẩm"
                android:textColor="#3C5A99"
                android:textSize="18sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_product_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(*)Ảnh sản phẩm là bắt buộc. Vui lòng chụp đúng theo mô tả."
                android:textColor="#828282"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/edt_no_edit_barcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_edt_no_edit"
                android:ems="10"
                android:enabled="false"
                android:inputType="textPersonName"
                android:paddingStart="12dp"
                android:paddingTop="8dp"
                android:paddingEnd="12dp"
                android:paddingBottom="8dp"
                android:textColor="#828282"
                android:textSize="14sp"
                tools:text="8931234567890" />

            <EditText
                android:id="@+id/edt_product_name"
                style="@style/contribute_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Nhập tên sản phẩm (bắt buộc) "
                android:inputType="textPersonName"
                android:textColor="@color/darkGray1" />

            <EditText
                android:id="@+id/edt_product_price"
                style="@style/contribute_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="0123456789"
                android:textColor="@color/darkGray1"
                android:hint="Nhập giá sản phẩm"
                android:inputType="number" />

            <TextView
                android:id="@+id/spn_dm"
                style="@style/contribute_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:drawableEnd="@drawable/ic_down_blue_18px"
                android:text="Chọn danh mục"
                android:textColor="#434343" />

            <LinearLayout
                android:id="@+id/btn_add_description"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_60"
                android:orientation="vertical"
                android:visibility="gone"
                android:gravity="center"
                tools:visibility="visible"
                android:background="@drawable/bg_border_dotted_10_gray">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text="Thêm mô tả sản phẩm"
                    android:drawableStart="@drawable/ic_add_gray_24px"
                    android:drawablePadding="@dimen/size_13"
                    android:textColor="@color/darkGray3" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_add_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/btn_search_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/search_by_google" />

            <TextView
                android:id="@+id/tv_hour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:text="Thông tin doanh nghiệp"
                android:textColor="#3C5A99"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edt_name_dn"
                style="@style/contribute_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="@color/darkGray1"
                android:hint="Tên doanh nghiệp"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edt_address_dn"
                style="@style/contribute_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="@color/darkGray1"
                android:hint="Địa chỉ doanh nghiệp"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edt_phone_dn"
                style="@style/contribute_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="0123456789"
                android:ems="10"
                android:textColor="@color/darkGray1"
                android:hint="Số điện thoại"
                android:inputType="number" />

            <EditText
                android:id="@+id/edt_email"
                style="@style/contribute_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="@color/darkGray1"
                android:hint="Email"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/edt_tax"
                style="@style/contribute_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="0123456789"
                android:ems="10"
                android:textColor="@color/darkGray1"
                android:hint="Mã số thuế"
                android:inputType="number" />

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="32dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_gray_corner_20dp"
                android:text="Hoàn tất"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>

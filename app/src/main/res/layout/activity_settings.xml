<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    android:orientation="vertical"
    tools:context="vn.icheck.android.screen.user.setting.SettingsActivity"
    tools:viewBindingIgnore="true">

    <include layout="@layout/toolbar_blue_v2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_4"
        android:background="@drawable/shadow_bottom" />

    <vn.icheck.android.ui.view.TextHeader
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_12"
        android:layout_marginTop="@dimen/size_10"
        android:text="@string/thong_bao"
        android:textColor="@color/colorSecondary" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8"
        android:background="@color/white">

        <vn.icheck.android.ichecklibs.view.normal_text.TextNormalBarlowMedium
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/size_12"
            android:layout_marginTop="@dimen/size_15"
            android:layout_marginBottom="@dimen/size_15"
            android:text="Tin tức"
            android:textSize="@dimen/font_14" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/switchNews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginRight="@dimen/size_12"
            app:srcCompat="@drawable/ic_switch_off_24px" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tv"
            android:layout_marginLeft="@dimen/size_12"
            android:background="#D8D8D8" />

        <vn.icheck.android.ichecklibs.view.normal_text.TextNormalBarlowMedium
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/size_12"
            android:layout_marginTop="@dimen/size_15"
            android:layout_marginBottom="@dimen/size_15"
            android:text="Chương trình mới"
            android:textSize="@dimen/font_14" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/switchCampaign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginRight="@dimen/size_12"
            app:srcCompat="@drawable/ic_switch_off_24px" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/textView1"
            android:layout_marginLeft="@dimen/size_12"
            android:background="#D8D8D8" />

        <vn.icheck.android.ichecklibs.view.normal_text.TextNormalBarlowMedium
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view1"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/size_12"
            android:layout_marginTop="@dimen/size_15"
            android:layout_marginBottom="@dimen/size_15"
            android:text="Tin nhắn"
            android:textSize="@dimen/font_14" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/switchMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view1"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginRight="@dimen/size_12"
            app:srcCompat="@drawable/ic_switch_off_24px" />
    </RelativeLayout>

    <vn.icheck.android.ui.view.TextHeader
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_12"
        android:layout_marginTop="@dimen/size_20"
        android:text="Hệ thống"
        android:textColor="@color/colorSecondary" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8"
        android:background="@color/white">

        <vn.icheck.android.ichecklibs.view.normal_text.TextNormalBarlowMedium
            android:id="@+id/tvv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/size_12"
            android:layout_marginTop="@dimen/size_15"
            android:layout_marginBottom="@dimen/size_15"
            android:text="Rung"
            android:textSize="@dimen/font_14" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/switchVibrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginRight="@dimen/size_12"
            app:srcCompat="@drawable/ic_switch_off_24px" />

        <View
            android:id="@+id/view12"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tvv"
            android:layout_marginLeft="@dimen/size_12"
            android:background="#D8D8D8" />

        <vn.icheck.android.ichecklibs.view.normal_text.TextNormalBarlowMedium
            android:id="@+id/textView111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view12"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/size_12"
            android:layout_marginTop="@dimen/size_15"
            android:layout_marginBottom="@dimen/size_15"
            android:text="Âm thanh"
            android:textSize="@dimen/font_14" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/switchSound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view12"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginRight="@dimen/size_12"
            app:srcCompat="@drawable/ic_switch_off_24px" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_20"
        android:background="@color/white">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewAbc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_12"
            android:layout_marginTop="@dimen/size_15"
            android:layout_marginBottom="@dimen/size_15"
            android:fontFamily="@font/barlow_medium"
            android:text="Xóa cache"
            android:textColor="@color/black_21_v2"
            android:textSize="@dimen/font_14" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvClearCache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_12"
            android:drawableRight="@drawable/ic_delete_24px"
            android:drawablePadding="@dimen/size_8"
            android:fontFamily="@font/barlow_medium"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/black_21_v2"
            android:textSize="@dimen/font_14"
            tools:text="300Mb" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_7"
        android:visibility="gone"
        android:background="@color/white">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/size_12"
            android:layout_marginTop="@dimen/size_15"
            android:layout_marginBottom="@dimen/size_15"
            android:fontFamily="@font/barlow_medium"
            android:text="Ngôn ngữ:"
            android:textColor="@color/black_21_v2"
            android:textSize="@dimen/font_14" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_8"
            android:layout_marginTop="@dimen/size_15"
            android:layout_marginBottom="@dimen/size_15"
            android:layout_toRightOf="@id/textView"
            android:fontFamily="@font/barlow_semi_bold"
            android:text="Tiếng Việt"
            android:textColor="@color/black_21_v2"
            android:textSize="@dimen/font_14" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_15"
            android:layout_marginRight="@dimen/size_8"
            android:layout_toLeftOf="@id/imgMore"
            android:src="@drawable/ic_language_viet_nam_24" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/size_15"
            android:layout_marginRight="@dimen/size_12"
            android:src="@drawable/ic_arrow_down_light_blue_24px" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_0_5"
            android:layout_below="@+id/textView"
            android:layout_marginLeft="@dimen/size_12"
            android:background="#D8D8D8" />

        <RelativeLayout
            android:id="@+id/layoutEN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line"
            android:layout_marginLeft="@dimen/size_12"
            android:layout_marginTop="@dimen/size_15"
            android:layout_marginRight="@dimen/size_12"
            android:layout_marginBottom="@dimen/size_15"
            android:visibility="gone">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/appCompatTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/barlow_medium"
                android:text="Language:"
                android:textColor="@color/black_21_v2"
                android:textSize="@dimen/font_14" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvLanguageEN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_8"
                android:layout_toRightOf="@id/appCompatTextView"
                android:fontFamily="@font/barlow_semi_bold"
                android:text="English"
                android:textColor="@color/black_21_v2"
                android:textSize="@dimen/font_14" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgLanguageEN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/size_8"
                android:layout_toLeftOf="@id/imageView"
                android:src="@drawable/ic_language_english_24" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_down_light_blue_24px"
                android:visibility="invisible" />
        </RelativeLayout>
    </RelativeLayout>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_38"
        android:layout_marginTop="@dimen/size_30"
        android:layout_marginRight="@dimen/size_38"
        android:background="@drawable/bg_corner_4_light_blue_white"
        android:fontFamily="@font/barlow_semi_bold"
        android:gravity="center"
        android:paddingTop="@dimen/size_9"
        android:paddingBottom="@dimen/size_9"
        android:text="Đặt lại mặc định"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/font_16" />
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="3.5sp"
    android:layout_marginTop="@dimen/size_20"
    android:layout_marginRight="3.5sp"
    android:layout_marginBottom="@dimen/size_20"
    app:cardCornerRadius="@dimen/size_12">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@drawable/bg_card_visa_pvcard"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_logo_pvcbank_icheck_52dp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView9"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_visa_pvcard"
            app:layout_constraintTop_toTopOf="@+id/imageView9" />

        <TextView
            android:id="@+id/tvCardNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:fontFamily="@font/barlow_medium"
            android:includeFontPadding="false"
            android:text="9704 1255 0141 4119"
            android:textColor="@color/white"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="@+id/imageView9"
            app:layout_constraintTop_toBottomOf="@+id/imageView9" />

        <TextView
            android:id="@+id/tvTimeFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/barlow_medium"
            android:includeFontPadding="false"
            android:text="VALID\nFROM"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/tvCardNumber"
            app:layout_constraintTop_toBottomOf="@+id/tvCardNumber" />

        <TextView
            android:id="@+id/tvDateFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:fontFamily="@font/barlow_semi_bold"
            tools:text="06/20"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/tvTimeFrom"
            app:layout_constraintStart_toEndOf="@+id/tvTimeFrom"
            app:layout_constraintTop_toTopOf="@+id/tvTimeFrom" />


        <TextView
            android:id="@+id/tvTimeEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_30"
            android:fontFamily="@font/barlow_medium"
            android:includeFontPadding="false"
            android:text="VALID\nEND"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvTimeFrom"
            app:layout_constraintStart_toEndOf="@+id/tvDateFrom"
            app:layout_constraintTop_toTopOf="@+id/tvTimeFrom" />

        <TextView
            android:id="@+id/tvDateEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:fontFamily="@font/barlow_semi_bold"
            tools:text="06/20"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/tvTimeEnd"
            app:layout_constraintStart_toEndOf="@+id/tvTimeEnd"
            app:layout_constraintTop_toTopOf="@+id/tvTimeEnd" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitleCode"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_30"
            android:fontFamily="@font/barlow_medium"
            android:includeFontPadding="false"
            android:text="CCV\nCODE"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvTimeEnd"
            app:layout_constraintStart_toEndOf="@+id/tvDateEnd"
            app:layout_constraintTop_toTopOf="@+id/tvTimeEnd" />

        <TextView
            android:id="@+id/tvCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:fontFamily="@font/barlow_semi_bold"
            android:text="06/20"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone"

            app:layout_constraintBottom_toBottomOf="@id/tvTimeEnd"
            app:layout_constraintStart_toEndOf="@+id/tvTitleCode"
            app:layout_constraintTop_toTopOf="@+id/tvTimeEnd" />

        <TextView
            android:id="@+id/tvHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8"
            android:fontFamily="@font/barlow_medium"
            android:text="CARD HOLDER"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/tvTimeFrom"
            app:layout_constraintTop_toBottomOf="@+id/tvTimeFrom" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="@dimen/size_16"
            android:fontFamily="@font/barlow_semi_bold"
            android:text="NGUYEN HOANG BAO ANH"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvHolder"
            app:layout_constraintTop_toBottomOf="@+id/tvHolder" />

        <ImageView
            android:id="@+id/btnShowHide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvName"
            app:srcCompat="@drawable/ic_eye_on_white_24dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
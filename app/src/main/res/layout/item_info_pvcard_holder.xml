<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="3.5sp"
    android:layout_marginTop="@dimen/size_20"
    android:layout_marginRight="3.5sp"
    android:layout_marginBottom="@dimen/size_20"
    app:cardCornerRadius="@dimen/size_12">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_history_pv_card">

        <TextView
            android:id="@+id/tvMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_18"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/barlow_semi_bold"
            android:includeFontPadding="false"
            android:text="254.241.000 đ"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCardNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_14"
            android:fontFamily="@font/barlow_semi_bold"
            android:includeFontPadding="false"
            android:text="254.241.000 đ"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/tvMoney"
            app:layout_constraintTop_toBottomOf="@id/tvMoney" />

        <TextView
            android:id="@+id/tvTimeEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/barlow_medium"
            android:includeFontPadding="false"
            android:text="10/24"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/tvCardNumber"
            app:layout_constraintTop_toBottomOf="@id/tvCardNumber" />

        <TextView
            android:id="@+id/tvCCV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_40"
            android:fontFamily="@font/barlow_medium"
            android:includeFontPadding="false"
            android:text="CCV:"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/tvTimeEnd"
            app:layout_constraintStart_toEndOf="@id/tvTimeEnd"
            app:layout_constraintTop_toTopOf="@id/tvTimeEnd" />

        <TextView
            android:id="@+id/tvCCVContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_8"
            android:fontFamily="@font/barlow_medium"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="***"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/tvTimeEnd"
            app:layout_constraintStart_toEndOf="@id/tvCCV"
            app:layout_constraintTop_toTopOf="@id/tvTimeEnd" />


        <ImageView
            android:id="@+id/btnShowHide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_36"
            app:layout_constraintBottom_toBottomOf="@id/tvCCVContent"
            app:layout_constraintStart_toEndOf="@id/tvCCVContent"
            app:layout_constraintTop_toTopOf="@id/tvCCVContent"
            app:srcCompat="@drawable/ic_eye_on_white_24px" />


        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="@dimen/size_16"
            android:fontFamily="@font/barlow_semi_bold"
            android:text="NGUYEN HOANG BAO ANH"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvTimeEnd"
            app:layout_constraintTop_toBottomOf="@id/tvTimeEnd" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
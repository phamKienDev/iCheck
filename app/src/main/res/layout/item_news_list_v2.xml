<?xml version="1.0" encoding="utf-8"?>
<vn.icheck.android.ichecklibs.view.app_background.white_background.ICLinearLayoutWhite xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size_10"
    android:orientation="vertical"
    android:paddingStart="@dimen/size_12"
    android:paddingTop="@dimen/size_10"
    android:paddingEnd="@dimen/size_12"
    android:paddingBottom="@dimen/size_12">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_10"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@id/imgNews"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <vn.icheck.android.ichecklibs.view.normal_text.TextNormalBarlowMedium
            android:id="@id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:drawableLeft="@drawable/ic_new_36dp"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/size_5"
            android:minLines="1"
            android:paddingStart="@dimen/size_0"
            android:paddingEnd="@dimen/size_4"
            tools:text="Các thực phẩm nên bổ sung đầy đủ mùa dịch " />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <vn.icheck.android.ichecklibs.view.second_text.TextSecondBarlowMedium
                android:id="@id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:drawablePadding="@dimen/size_4"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                tools:text="12 phút trước" />

            <vn.icheck.android.ichecklibs.view.TextBarlowSemiBold
                android:id="@id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:background="@drawable/bg_normal_text_color_opacity_25_corners_3"
                android:drawableStart="@drawable/ic_world_12dp"
                android:drawablePadding="@dimen/size_3"
                android:ellipsize="end"
                android:layout_marginStart="@dimen/size_10"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/size_3"
                android:paddingTop="@dimen/size_2"
                android:paddingEnd="@dimen/size_4"
                android:paddingBottom="@dimen/size_2"
                android:singleLine="true"
                android:text="@string/duoc_tai_tro"
                android:textColor="@color/white"
                android:textSize="@dimen/font_10" />
        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgNews"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/size_10"
        android:layout_height="@dimen/trp_flight_dip_175" />

    <vn.icheck.android.ichecklibs.view.second_text.TextSecondBarlowMedium
        android:id="@+id/txtDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_10"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="3"
        android:minLines="1"
        android:textColor="#757575"
        tools:text="Các thực phẩm nên bổ sung đầy đủ mùa dịch Covid. Câu mở đầu của bài tin tức \n(Tối đa 3 dòng)..." />
</vn.icheck.android.ichecklibs.view.app_background.white_background.ICLinearLayoutWhite>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size_10"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="@dimen/size_12"
    android:paddingTop="@dimen/size_10"
    android:paddingEnd="@dimen/size_12"
    android:paddingBottom="@dimen/size_12">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_10"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@id/imgNews"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <vn.icheck.android.ui.view.TextSubheader1
                android:id="@id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:minLines="1"
                android:paddingStart="@dimen/size_0"
                android:paddingEnd="@dimen/size_4"
                android:textColor="#212121"
                tools:text="Các thực phẩm nên bổ sung đầy đủ mùa dịch Covid (Tối đa 2 dòng)...dlkashdlasjdlasjdklas jdklasjdklasjdlask " />

            <vn.icheck.android.ui.view.TextBody1
                android:id="@id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:drawablePadding="@dimen/size_4"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="#757575"
                tools:drawableEnd="@drawable/ic_tag_new_news_32px"
                tools:text="12 phút trước" />

            <vn.icheck.android.ui.view.TextBarlowSemiBold
                android:id="@id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:background="@drawable/bg_normal_text_color_opacity_25_corners_3"
                android:drawableStart="@drawable/ic_world_12dp"
                android:drawablePadding="@dimen/size_3"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/size_3"
                android:paddingTop="@dimen/size_2"
                android:paddingEnd="@dimen/size_4"
                android:paddingBottom="@dimen/size_2"
                android:singleLine="true"
                android:text="@string/duoc_tai_tro"
                android:textColor="@color/white"
                android:textSize="@dimen/font_10" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgNews"
            android:layout_width="@dimen/size_105"
            android:layout_height="@dimen/size_70"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <vn.icheck.android.ui.view.TextBody1
        android:id="@+id/txtDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_10"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="3"
        android:minLines="1"
        android:textColor="#757575"
        tools:text="Các thực phẩm nên bổ sung đầy đủ mùa dịch Covid. Câu mở đầu của bài tin tức \n(Tối đa 3 dòng)..." />
</LinearLayout>
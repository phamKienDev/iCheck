<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/size_12"
    android:layout_marginTop="@dimen/size_18"
    android:layout_marginEnd="@dimen/size_12"
    android:orientation="vertical">

    <vn.icheck.android.ichecklibs.view.TextCaption
        android:id="@+id/tvTitleDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorNormalText" />

    <vn.icheck.android.ichecklibs.view.TextBody1
        android:id="@+id/edtInputDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_6"
        android:drawableEnd="@drawable/ic_outline_date_range_gray_24dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:hint="@string/chon_ngay_thang"
        android:paddingStart="@dimen/size_10"
        android:paddingTop="@dimen/size_6"
        android:paddingEnd="@dimen/size_8"
        android:paddingBottom="@dimen/size_6"
        android:singleLine="true"
        android:textAlignment="gravity"
        android:textColor="@color/colorNormalText"
        android:textColorHint="@color/colorSecondText" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:animateLayoutChanges="true"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/layoutToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="@dimen/size_4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@id/imgBack"
            android:layout_width="@dimen/size_44"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            app:srcCompat="@drawable/ic_back_blue_v2_24px" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_44"
            android:layout_marginStart="@dimen/size_44"
            android:layout_marginEnd="@dimen/size_44"
            android:ellipsize="end"
            android:fontFamily="@font/barlow_semi_bold"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_18"
            android:textStyle="normal"
            tools:text="Tiêu đề" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@id/imgAction"
            android:layout_width="@dimen/size_44"
            android:layout_height="@dimen/size_44"
            android:layout_gravity="end"
            android:background="?android:attr/selectableItemBackground"
            android:visibility="gone" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_12"
                android:textColor="#212121"
                android:lineSpacingExtra="@dimen/font_14"
                android:fontFamily="@font/barlow_medium"
                android:text="@string/ten_mang"
                android:layout_marginTop="@dimen/size_16"
                android:layout_marginStart="@dimen/size_12"
                android:layout_marginLeft="@dimen/size_12" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@id/edtName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_36"
                android:layout_marginTop="@dimen/size_6"
                android:layout_marginStart="@dimen/size_12"
                android:layout_marginEnd="@dimen/size_12"
                android:fontFamily="@font/barlow_medium"
                android:hint="@string/bat_buoc"
                android:textSize="@dimen/font_14"
                android:gravity="center|start"
                android:paddingStart="@dimen/size_10"
                android:paddingEnd="@dimen/size_10"
                android:textColorHint="#b4b4b4"
                android:textColor="#212121"
                android:background="@drawable/bg_corner_gray_solid_white" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvMessageName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_12"
                android:textColor="@color/colorAccentRed"
                android:visibility="gone"
                android:fontFamily="@font/barlow_medium"
                android:lineSpacingExtra="@dimen/font_14"
                android:layout_marginTop="@dimen/size_6"
                android:drawablePadding="@dimen/size_4"
                android:drawableStart="@drawable/ic_error_red_18dp"
                android:layout_marginStart="@dimen/size_12"
                android:layout_marginEnd="@dimen/size_12"
                tools:text="Nhập sai định dạng. Thử lại!"
                android:drawableLeft="@drawable/ic_error_red_18dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_12"
                android:textColor="#212121"
                android:lineSpacingExtra="@dimen/font_14"
                android:fontFamily="@font/barlow_medium"
                android:text="@string/mat_khau"
                android:layout_marginTop="@dimen/size_16"
                android:layout_marginStart="@dimen/size_12"
                android:layout_marginLeft="@dimen/size_12" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_36"
                android:layout_marginTop="@dimen/size_6"
                android:layout_marginStart="@dimen/size_12"
                android:layout_marginEnd="@dimen/size_12"
                android:fontFamily="@font/barlow_medium"
                android:hint="@string/bat_buoc"
                android:textSize="@dimen/font_14"
                android:gravity="center|start"
                android:paddingStart="@dimen/size_10"
                android:paddingEnd="@dimen/size_10"
                android:textColorHint="#b4b4b4"
                android:textColor="#212121"
                android:background="@drawable/bg_corner_gray_solid_white" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvMessagePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_12"
                android:textColor="@color/colorAccentRed"
                android:visibility="gone"
                android:lineSpacingExtra="@dimen/font_14"
                android:fontFamily="@font/barlow_medium"
                android:layout_marginTop="@dimen/size_6"
                android:drawablePadding="@dimen/size_4"
                android:drawableStart="@drawable/ic_error_red_18dp"
                android:layout_marginStart="@dimen/size_12"
                android:layout_marginEnd="@dimen/size_12"
                tools:text="Nhập sai định dạng. Thử lại!"
                android:drawableLeft="@drawable/ic_error_red_18dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_12"
                android:textColor="#212121"
                android:lineSpacingExtra="@dimen/font_14"
                android:fontFamily="@font/barlow_medium"
                android:text="@string/kieu_bao_mat"
                android:layout_marginTop="@dimen/size_16"
                android:layout_marginStart="@dimen/size_12"
                android:layout_marginLeft="@dimen/size_12" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_8">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@id/edtType"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_36"
                    android:layout_marginTop="@dimen/size_6"
                    android:layout_marginStart="@dimen/size_12"
                    android:layout_marginEnd="@dimen/size_12"
                    android:hint="@string/chon_kieu_bao_mat"
                    android:textSize="@dimen/font_14"
                    android:drawableEnd="@drawable/ic_arrow_down_light_blue_24px"
                    android:gravity="center|start"
                    android:paddingStart="@dimen/size_10"
                    android:paddingEnd="@dimen/size_10"
                    android:textColorHint="#b4b4b4"
                    android:textColor="#212121"
                    android:background="@drawable/bg_corner_gray_solid_white"
                    android:drawableRight="@drawable/ic_arrow_down_light_blue_24px" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_36"
                    android:background="@null"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="@dimen/size_12"
                    android:layout_marginEnd="@dimen/size_12" />
            </FrameLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvMessageType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_12"
                android:textColor="@color/colorAccentRed"
                android:visibility="gone"
                android:lineSpacingExtra="@dimen/font_14"
                android:layout_marginTop="@dimen/size_6"
                android:drawablePadding="@dimen/size_4"
                android:drawableStart="@drawable/ic_error_red_18dp"
                android:layout_marginStart="@dimen/size_12"
                android:layout_marginEnd="@dimen/size_12"
                tools:text="Nhập sai định dạng. Thử lại!"
                android:drawableLeft="@drawable/ic_error_red_18dp" />

        </LinearLayout>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@id/btnCreate"
        style="@style/Button_Blue_Corners_6"
        android:layout_margin="@dimen/size_12"
        android:text="@string/tao_ma_qr" />
</LinearLayout>
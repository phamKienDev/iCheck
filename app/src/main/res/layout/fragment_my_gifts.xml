<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeLayout"
    android:background="@color/darkGray6"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/total_gifts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_12"
            android:layout_marginTop="@dimen/size_16"
            android:fontFamily="@font/barlow_medium"
            android:textColor="#757575"
            android:visibility="gone"
            tools:text="Sản phẩm quà: 12"
            tools:visibility="visible" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_gifts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:visibility="gone" />

        <ImageView
            android:id="@+id/ic_no_gift"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_120"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_no_gift" />

        <TextView
            android:id="@+id/tv_no_gift"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/barlow_medium"
            android:gravity="center"
            android:text="Bạn chưa có quà tặng nào"
            android:visibility="gone" />
    </LinearLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
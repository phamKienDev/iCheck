<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/size_12"
    android:paddingTop="@dimen/size_12"
    android:paddingEnd="@dimen/size_12"
    android:paddingBottom="@dimen/size_8">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:includeFontPadding="false"
        android:text="@string/thong_tin_nguoi_nhan_hang"
        android:textColor="#3c5a99"
        android:textSize="14sp"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8"
        android:background="@drawable/bg_f1f1f1_corners_10"
        android:orientation="vertical"
        android:paddingStart="@dimen/size_10"
        android:paddingTop="@dimen/size_8"
        android:paddingEnd="@dimen/size_10"
        android:paddingBottom="@dimen/size_8">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_account_blue_18"
            android:drawablePadding="@dimen/size_10"
            android:fontFamily="sans-serif-medium"
            android:includeFontPadding="false"
            android:textColor="#3c5a99"
            android:textSize="14sp"
            android:textStyle="normal"
            tools:text="Trần Văn Lâm" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/tvPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_28"
            android:layout_marginTop="@dimen/size_4"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="#434343"
            android:textSize="14sp"
            android:textStyle="normal"
            tools:text="0365 222 111" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_28"
            android:layout_marginTop="@dimen/size_4"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:textColor="#434343"
            android:textSize="14sp"
            android:textStyle="normal"
            tools:text="Số 50, ngõ 125, Nguyễn Ngọc Vũ, Trung Hòa, Cầu giấy, Hà Nội, Việt Nam" />
    </LinearLayout>
</LinearLayout>
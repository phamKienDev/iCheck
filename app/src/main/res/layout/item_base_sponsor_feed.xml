<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/size_10"
    android:paddingBottom="@dimen/size_10">

    <vn.icheck.android.ichecklibs.view.second_text.TextSecondBarlowRegular
        android:id="@+id/appCompatTextView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_12"
        android:text="@string/co_the_chua_ban_quan_tam"
        android:textSize="@dimen/font_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <vn.icheck.android.ichecklibs.view.line_color.ViewLineColor
        android:id="@+id/view36"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0_5"
        android:layout_marginTop="@dimen/size_10"
        app:layout_constraintTop_toBottomOf="@+id/appCompatTextView18"
        tools:layout_editor_absoluteX="@dimen/size_12" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="@dimen/size_40"
        android:layout_height="@dimen/size_40"
        android:layout_marginTop="@dimen/size_10"
        android:src="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="@+id/appCompatTextView18"
        app:layout_constraintTop_toBottomOf="@+id/view36" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgVerified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_home_verify_16dp"
        app:layout_constraintBottom_toBottomOf="@+id/circleImageView"
        app:layout_constraintEnd_toEndOf="@+id/circleImageView" />

    <vn.icheck.android.ichecklibs.view.normal_text.TextNormalBarlowSemiBold
        android:id="@+id/tvNameEnterprise"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_8"
        android:layout_marginLeft="@dimen/size_8"
        android:layout_marginEnd="@dimen/size_8"
        android:layout_marginRight="@dimen/size_8"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:text="@string/dat_hang_thanh_cong"
        android:textSize="@dimen/font_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/circleImageView"
        app:layout_constraintTop_toTopOf="@+id/circleImageView" />

    <vn.icheck.android.ichecklibs.view.second_text.TextSecondBarlowMedium
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_6"
        android:includeFontPadding="false"
        android:text="@string/duoc_tai_tro"
        android:textSize="@dimen/font_12"
        app:layout_constraintBottom_toBottomOf="@+id/circleImageView"
        app:layout_constraintStart_toStartOf="@+id/tvNameEnterprise"
        app:layout_constraintTop_toBottomOf="@+id/tvNameEnterprise" />

    <vn.icheck.android.ichecklibs.view.normal_text.TextNormal
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_12"
        android:layout_marginTop="@dimen/size_10"
        android:layout_marginEnd="@dimen/size_12"
        android:fontFamily="@font/barlow_medium"
        android:includeFontPadding="false"
        android:lineHeight="@dimen/size_20"
        android:textSize="@dimen/font_14"
        app:layout_constraintEnd_toEndOf="@+id/view36"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circleImageView" />

    <LinearLayout
        android:id="@+id/container_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvDescription">

        <vn.icheck.android.component.postofuser.ProductInPostComponent
            android:id="@+id/container_product_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <vn.icheck.android.ichecklibs.view.second_text.TextSecondBarlowMedium
        android:id="@+id/button_like"
        style="@style/barlow_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_16"
        android:layout_marginLeft="@dimen/size_16"
        android:layout_marginTop="@dimen/size_12"
        android:drawableStart="@drawable/ic_like_off_24dp"
        android:drawablePadding="@dimen/size_8"
        android:text="@string/yeu_thich"
        app:layout_constraintEnd_toStartOf="@+id/button_comment"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container_product" />

    <vn.icheck.android.ichecklibs.view.second_text.TextSecondBarlowMedium
        android:id="@+id/button_comment"
        style="@style/barlow_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_12"
        android:drawableStart="@drawable/ic_comment_24dp"
        android:drawablePadding="@dimen/size_8"
        android:text="@string/binh_luan"
        app:layout_constraintEnd_toStartOf="@+id/button_share"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_like"
        app:layout_constraintTop_toBottomOf="@+id/container_product" />

    <vn.icheck.android.ichecklibs.view.second_text.TextSecondBarlowMedium
        android:id="@+id/button_share"
        style="@style/barlow_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_12"
        android:layout_marginEnd="@dimen/size_16"
        android:layout_marginRight="@dimen/size_16"
        android:drawableStart="@drawable/ic_share_24px"
        android:drawablePadding="@dimen/size_8"
        android:text="@string/chia_se"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_comment"
        app:layout_constraintTop_toBottomOf="@+id/container_product" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_avatar_comment"
        android:layout_width="@dimen/size_24"
        android:layout_height="@dimen/size_24"
        android:layout_marginEnd="@dimen/size_8"
        android:layout_marginRight="@dimen/size_8"
        android:src="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@id/container_comment"
        app:layout_constraintStart_toStartOf="@+id/appCompatTextView18"
        app:layout_constraintTop_toBottomOf="@+id/view36"
        app:layout_constraintTop_toTopOf="@id/container_comment" />

    <LinearLayout
        android:id="@+id/container_comment"
        android:layout_width="0dp"
        android:layout_height="@dimen/size_36"
        android:layout_marginStart="@dimen/size_8"
        android:layout_marginTop="@dimen/size_10"
        android:layout_marginEnd="@dimen/size_12"
        android:layout_marginRight="@dimen/size_12"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/circle_avatar_comment"
        app:layout_constraintTop_toBottomOf="@id/button_share">

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_10"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:fontFamily="@font/barlow_medium"
            android:hint="@string/viet_binh_luan"
            android:singleLine="true"
            android:textSize="@dimen/font_14" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_10"
            app:srcCompat="@drawable/ic_camera_off_24px" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_10"
            android:layout_marginEnd="@dimen/size_10"
            app:srcCompat="@drawable/ic_imoji_24px" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
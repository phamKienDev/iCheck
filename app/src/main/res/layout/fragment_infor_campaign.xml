<?xml version="1.0" encoding="utf-8"?>
<vn.icheck.android.ui.common.LockableNestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutInfor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_12"
            android:layout_marginEnd="@dimen/size_12"
            android:layout_marginTop="@dimen/size_16"
            android:background="@drawable/bg_corner_white_10">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textView15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/cirle_blue"
                android:drawablePadding="@dimen/size_5"
                android:fontFamily="sans-serif"
                android:paddingStart="@dimen/size_8"
                android:paddingTop="@dimen/size_8"
                android:text="Thông tin chương trình"
                android:textColor="#434343"
                android:textSize="@dimen/font_14"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvInfoCampaign"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_8"
                android:layout_marginTop="@dimen/size_4"
                android:layout_marginEnd="@dimen/size_10"
                android:layout_marginBottom="@dimen/size_8"
                android:fontFamily="sans-serif"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#434343"
                android:textSize="@dimen/font_14"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView15" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutGuide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_12"
            android:layout_marginEnd="@dimen/size_12"
            android:layout_marginTop="@dimen/size_12"
            android:background="@drawable/bg_corner_white_10">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textView20"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/cirle_blue"
                android:drawablePadding="@dimen/size_5"
                android:fontFamily="sans-serif"
                android:paddingStart="@dimen/size_8"
                android:paddingTop="@dimen/size_8"
                android:text="Hướng dẫn thực hiện"
                android:textColor="#434343"
                android:textSize="@dimen/font_14"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvGuide"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_8"
                android:layout_marginTop="@dimen/size_4"
                android:layout_marginEnd="@dimen/size_10"
                android:layout_marginBottom="@dimen/size_8"
                android:fontFamily="sans-serif"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#434343"
                android:textSize="@dimen/font_14"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView20" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutConditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_12"
            android:layout_marginEnd="@dimen/size_12"
            android:layout_marginTop="@dimen/size_12"
            android:background="@drawable/bg_corner_white_10">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textView16"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/cirle_blue"
                android:drawablePadding="@dimen/size_5"
                android:fontFamily="sans-serif"
                android:paddingStart="@dimen/size_8"
                android:paddingTop="@dimen/size_8"
                android:text="Điều kiện nhận quà"
                android:textColor="#434343"
                android:textSize="@dimen/font_14"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvConditions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_8"
                android:layout_marginTop="@dimen/size_4"
                android:layout_marginEnd="@dimen/size_10"
                android:layout_marginBottom="@dimen/size_8"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView16" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_12"
            android:layout_marginEnd="@dimen/size_12"
            android:layout_marginTop="@dimen/size_12"
            android:background="@drawable/bg_corner_white_10">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textView17"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/cirle_blue"
                android:drawablePadding="@dimen/size_5"
                android:fontFamily="sans-serif"
                android:paddingStart="@dimen/size_8"
                android:paddingTop="@dimen/size_8"
                android:text="Hạng người dùng được phép tham gia sự kiện"
                android:textColor="#434343"
                android:textSize="@dimen/font_14"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvRank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView17" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutTaiTro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_12"
            android:layout_marginEnd="@dimen/size_12"
            android:layout_marginTop="@dimen/size_12"
            android:layout_marginBottom="@dimen/size_12"
            android:background="@drawable/bg_corner_white_10">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textView18"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/cirle_blue"
                android:drawablePadding="@dimen/size_5"
                android:fontFamily="sans-serif"
                android:paddingStart="@dimen/size_8"
                android:paddingTop="@dimen/size_8"
                android:text="Đơn vị tài trợ"
                android:textColor="#434343"
                android:textSize="@dimen/font_14"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvSponsSors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView18" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnJoinCampaign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_40"
            android:layout_marginTop="@dimen/size_20"
            android:layout_marginEnd="@dimen/size_40"
            android:layout_marginBottom="@dimen/size_32"
            android:background="@drawable/bg_corner_dark_blue_45"
            android:text="Tham gia ngay"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/font_16" />

    </LinearLayout>

</vn.icheck.android.ui.common.LockableNestedScrollView>
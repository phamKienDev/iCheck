<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:id="@+id/constraintLayout"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:maxWidth="335dp"
    android:minWidth="335dp"
    android:orientation="vertical"
    android:paddingStart="@dimen/size_18"
    android:paddingEnd="@dimen/size_18">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@id/imgIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/size_60"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_permission_call" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@id/tvTitle"
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_20"
        android:fontFamily="@font/barlow_semi_bold"
        android:gravity="center_horizontal"
        android:includeFontPadding="false"
        android:textAlignment="gravity"
        android:textColor="#35384b"
        android:textSize="@dimen/font_16"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgIcon"
        tools:text="Cấp quyền truy cập Thông báo" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@id/tvMessage"
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8"
        android:fontFamily="@font/barlow_medium"
        android:gravity="center_horizontal"
        android:includeFontPadding="false"
        android:textAlignment="gravity"
        android:textColor="#828282"
        android:textSize="@dimen/font_14"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        tools:text="Để nhận thông báo từ iCheck, cần được cấp quyền truy cập Thông báo" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@id/tvAllow"
        android:layout_width="@dimen/size_0"
        android:layout_height="@dimen/size_48"
        android:layout_marginTop="@dimen/size_40"
        android:background="@drawable/btn_blue_corners_6"
        android:fontFamily="@font/barlow_semi_bold"
        android:gravity="center"
        android:textAlignment="gravity"
        android:textColor="@color/white"
        android:textSize="@dimen/font_16"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMessage"
        tools:text="Cấp quyền Cuộc gọi" />

    <vn.icheck.android.ichecklibs.view.secondary.TextBarlowSemiBoldSecondary
        android:id="@id/tvSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8"
        android:layout_marginBottom="@dimen/size_12"
        android:includeFontPadding="false"
        android:padding="@dimen/size_8"
        android:text="@string/de_sau"
        android:textSize="@dimen/font_16"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAllow" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/size_12"
    android:layout_marginTop="@dimen/size_10"
    android:layout_marginEnd="@dimen/size_12"
    android:background="@drawable/btn_white_outline_gray_0_5_corners_4"
    android:padding="@dimen/size_10">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@id/imgAvatar"
        android:layout_width="@dimen/size_40"
        android:layout_height="@dimen/size_40"
        android:src="@drawable/ic_business_v2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <vn.icheck.android.component.view.text_view.TextViewBarlowSemiBold
        android:id="@id/tvName"
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_10"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/collection_product_name"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/imgImage"
        app:layout_constraintStart_toEndOf="@id/imgAvatar"
        app:layout_constraintTop_toTopOf="@id/imgAvatar"
        tools:text="Tiki.vn" />

    <LinearLayout
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        app:layout_constraintBottom_toBottomOf="@id/imgAvatar"
        app:layout_constraintEnd_toEndOf="@id/tvName"
        app:layout_constraintStart_toStartOf="@id/tvName">

        <vn.icheck.android.component.view.text_view.TextViewBarlowRegular
            android:id="@id/tvOldPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_10"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/fast_survey_gray"
            android:textSize="14sp"
            tools:text="Tiki.vn" />

        <vn.icheck.android.component.view.text_view.TextViewBarlowSemiBold
            android:id="@id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/red"
            android:textSize="14sp"
            tools:text="Tiki.vn" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@id/imgImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_arrow_right_light_blue_24dp"
        app:layout_constraintBottom_toBottomOf="@id/imgAvatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imgAvatar" />
</androidx.constraintlayout.widget.ConstraintLayout>
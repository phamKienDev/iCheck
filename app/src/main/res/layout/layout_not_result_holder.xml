<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/darkGray6"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_search_90dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_48"
        android:layout_marginTop="@dimen/size_16"
        android:layout_marginRight="@dimen/size_48"
        android:fontFamily="@font/barlow_medium"
        android:gravity="center"
        android:textColor="@color/colorSecondText"
        android:textSize="@dimen/font_14"
        android:text="@string/khong_ket_qua_tim_kiem" />

    <TextView
        android:id="@+id/tvCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_20"
        android:background="@drawable/bg_corners_4_light_blue_solid"
        android:fontFamily="@font/barlow_semi_bold"
        android:paddingLeft="@dimen/size_66"
        android:paddingTop="@dimen/size_10"
        android:paddingRight="@dimen/size_66"
        android:visibility="gone"
        android:paddingBottom="@dimen/size_10"
        android:text="@string/thu_lai_voi_tu_khoa_khac"
        android:textColor="@color/white"
        android:textSize="@dimen/font_16" />
</LinearLayout>
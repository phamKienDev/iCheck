<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/ick_bg_top_corner_20"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="@dimen/size_50"
        android:layout_height="@dimen/size_50"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back_blue_24px_new" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/barlow_semi_bold"
        android:text="Xác thực số điện thoại"
        android:textColor="#057DDA"
        android:textSize="@dimen/font_18"
        app:layout_constraintBottom_toBottomOf="@+id/btn_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_back" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_62"
        android:layout_marginLeft="@dimen/size_62"
        android:layout_marginTop="@dimen/size_16"
        android:layout_marginEnd="@dimen/size_62"
        android:layout_marginRight="@dimen/size_62"
        android:fontFamily="@font/barlow_medium"
        android:gravity="center_horizontal"
        android:lineHeight="@dimen/size_20"
        android:text="Mã xác nhận OTP đã dược gửi đến
số điện thoại của bạn"
        android:textAlignment="center"
        android:textColor="#757575"
        android:textSize="@dimen/font_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider13" />

    <TextView
        android:id="@+id/tv_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_32"
        android:fontFamily="@font/barlow_semi_bold"
        android:text="Gửi lại mã (180s)"
        android:textColor="#757575"
        app:layout_constraintEnd_toEndOf="@+id/edt_otp"
        app:layout_constraintStart_toStartOf="@+id/edt_otp"
        app:layout_constraintTop_toBottomOf="@+id/edt_otp" />

    <View
        android:id="@+id/divider13"
        android:layout_width="409dp"
        android:layout_height="@dimen/size_1"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_back" />

    <vn.icheck.android.ui.OtpEditText
        android:id="@+id/edt_otp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_32"
        app:layout_constraintEnd_toEndOf="@+id/textView25"
        app:layout_constraintStart_toStartOf="@+id/textView25"
        app:layout_constraintTop_toBottomOf="@+id/textView25" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="322dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/size_12"
    android:background="@drawable/bg_white_corners_4">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgProduct"
        android:layout_width="@dimen/size_60"
        android:layout_height="@dimen/size_60"
        android:layout_marginStart="@dimen/size_10"
        android:layout_marginTop="@dimen/size_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <vn.icheck.android.ichecklibs.view.normal_text.TextNormalBarlowMedium
        android:id="@+id/tvNameProduct"
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_8"
        android:layout_marginEnd="@dimen/size_10"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="2"
        android:minLines="1"
        android:textSize="@dimen/font_14"
        app:layout_constraintEnd_toStartOf="@id/imgClose"
        app:layout_constraintStart_toEndOf="@+id/imgProduct"
        app:layout_constraintTop_toTopOf="@id/imgProduct"
        tools:text="Coca Cola chai cao phiên bản UENO và SHIBUYA (250ml) ..." />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgClose"
        android:layout_width="@dimen/size_24"
        android:layout_height="@dimen/size_24"
        android:layout_marginEnd="@dimen/size_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvNameProduct"
        app:srcCompat="@drawable/ic_close_outline_24" />

    <vn.icheck.android.ichecklibs.view.second_text.TextSecondBarlowRegular
        android:id="@+id/tvVariant"
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:textSize="@dimen/font_12"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/tvNameProduct"
        app:layout_constraintStart_toStartOf="@+id/tvNameProduct"
        app:layout_constraintTop_toBottomOf="@+id/tvNameProduct"
        tools:text="Phân loại: Gói 15 ngày" />

    <vn.icheck.android.ichecklibs.view.second_text.TextSecondBarlowMedium
        android:id="@+id/tvPriceNoSale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/font_14"
        android:paddingEnd="@dimen/size_8"
        android:paddingStart="@dimen/size_0"
        app:layout_constraintBottom_toBottomOf="@+id/tvPrice"
        app:layout_constraintEnd_toStartOf="@id/tvPrice"
        app:layout_constraintStart_toStartOf="@+id/tvVariant"
        app:layout_constraintTop_toTopOf="@+id/tvPrice"
        tools:text="23,000 đ" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPrice"
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_4"
        android:ellipsize="end"
        android:fontFamily="@font/barlow_semi_bold"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:textColor="@color/colorAccentRed"
        android:textSize="@dimen/font_18"
        app:layout_constraintEnd_toEndOf="@+id/tvVariant"
        app:layout_constraintStart_toEndOf="@+id/tvPriceNoSale"
        app:layout_constraintTop_toBottomOf="@+id/tvVariant"
        tools:text="20,000 đ" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnUnAdd"
        android:layout_width="@dimen/size_40"
        android:layout_height="@dimen/size_40"
        android:layout_marginTop="@dimen/size_13"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_unadd_cart_40"
        app:layout_constraintStart_toStartOf="@+id/tvPriceNoSale"
        app:layout_constraintTop_toBottomOf="@+id/tvPrice" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCount"
        android:layout_width="@dimen/size_40"
        android:layout_height="@dimen/size_40"
        android:layout_marginLeft="@dimen/size_6"
        android:background="@drawable/bg_corner_gray_4"
        android:ellipsize="end"
        android:fontFamily="@font/barlow_medium"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/black_21_v2"
        app:layout_constraintBottom_toBottomOf="@id/btnUnAdd"
        app:layout_constraintEnd_toStartOf="@id/btnAdd"
        app:layout_constraintStart_toEndOf="@id/btnUnAdd"
        app:layout_constraintTop_toTopOf="@id/btnUnAdd"
        tools:text="1" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnAdd"
        android:layout_width="@dimen/size_40"
        android:layout_height="@dimen/size_40"
        android:layout_marginStart="@dimen/size_6"
        android:src="@drawable/ic_add_cart_40"
        app:layout_constraintBottom_toBottomOf="@id/btnUnAdd"
        app:layout_constraintStart_toEndOf="@+id/tvCount"
        app:layout_constraintTop_toTopOf="@+id/tvCount" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAddToCart"
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_12"
        android:background="@drawable/bg_corners_4_light_blue_solid"
        android:drawableStart="@drawable/ic_add_to_cart"
        android:drawablePadding="@dimen/size_10"
        android:fontFamily="@font/barlow_medium"
        android:gravity="center"
        android:includeFontPadding="false"
        android:paddingStart="@dimen/size_20"
        android:paddingLeft="@dimen/size_20"
        android:paddingTop="@dimen/size_8"
        android:paddingEnd="@dimen/size_20"
        android:paddingRight="@dimen/size_20"
        android:paddingBottom="@dimen/size_8"
        android:text="Thêm vào giỏ hàng"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/tvPrice"
        app:layout_constraintStart_toStartOf="@+id/btnUnAdd"
        app:layout_constraintTop_toBottomOf="@+id/btnUnAdd" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50"
        android:layout_marginTop="@dimen/size_12"
        android:background="@drawable/bg_corner_bottom_4_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAddToCart" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgAvatarShop"
        android:layout_width="@dimen/size_30"
        android:layout_height="@dimen/size_30"
        android:layout_margin="@dimen/size_10"
        app:layout_constraintBottom_toBottomOf="@id/view"
        app:layout_constraintStart_toStartOf="@id/view"
        app:layout_constraintEnd_toStartOf="@id/tvNameShop"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNameShop"
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#4f4f4f"
        android:textSize="@dimen/font_14"
        android:layout_marginEnd="@dimen/size_10"
        android:layout_marginRight="@dimen/size_10"
        android:includeFontPadding="false"
        android:fontFamily="@font/barlow_medium"
        app:layout_constraintBottom_toBottomOf="@+id/imgAvatarShop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgAvatarShop"
        app:layout_constraintTop_toTopOf="@+id/imgAvatarShop"
        tools:text="Tạp hóa Ngọc Lan" />

</androidx.constraintlayout.widget.ConstraintLayout>
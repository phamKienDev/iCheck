<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white_corners_top_16"
    android:orientation="vertical"
    android:paddingStart="@dimen/size_12"
    android:paddingTop="@dimen/size_10"
    android:paddingEnd="@dimen/size_12"
    android:paddingBottom="@dimen/size_10">

    <vn.icheck.android.ui.view.TextHeader
        android:id="@id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAlignment="gravity"
        android:textColor="@color/colorPrimary"
        tools:text="@string/thong_tin_bao_hanh" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:layout_marginTop="@dimen/size_10"
        android:background="@color/colorLine" />

    <androidx.core.widget.NestedScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_outline_place_blue_18px"
                    android:includeFontPadding="false" />

                <vn.icheck.android.ui.view.TextBody1
                    android:id="@id/tvAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_8"
                    android:layout_marginTop="@dimen/size_1"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:singleLine="false"
                    android:textAlignment="gravity"
                    android:textColor="@color/black2"
                    tools:text="Địa chỉ" />
            </LinearLayout>

            <vn.icheck.android.ui.view.TextBody1
                android:id="@id/tvPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:drawableStart="@drawable/ic_outline_phone_blue_18px"
                android:drawablePadding="@dimen/size_8"
                android:textAlignment="gravity"
                android:textColor="@color/black2"
                tools:text="Điện thoại" />

            <vn.icheck.android.ui.view.TextBody1
                android:id="@id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:drawableStart="@drawable/ic_outline_local_blue_18px"
                android:drawablePadding="@dimen/size_8"
                android:textAlignment="gravity"
                android:textColor="@color/black2"
                tools:text="Email" />

            <vn.icheck.android.ui.view.TextBody1
                android:id="@id/tvWebsite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:drawableStart="@drawable/ic_website_blue_18px"
                android:drawablePadding="@dimen/size_8"
                android:textAlignment="gravity"
                android:textColor="@color/black2"
                tools:text="Website" />

            <vn.icheck.android.ui.view.TextBody1
                android:id="@id/tvGln"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:drawableStart="@drawable/ic_barcode_blue_18dp"
                android:drawablePadding="@dimen/size_8"
                android:textAlignment="gravity"
                android:textColor="@color/black2"
                tools:text="GLN" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_8"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_company_blue_18px"
                    android:includeFontPadding="false" />

                <vn.icheck.android.ui.view.TextBody1
                    android:id="@id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_8"
                    android:layout_marginTop="@dimen/size_1"
                    android:includeFontPadding="false"
                    android:textAlignment="gravity"
                    android:textColor="@color/black2"
                    tools:text="Giới thiệu CÔNG TY TNHH L'ORÉAL VIỆT NAM\n\nNgười đại diện: Valery Gaucherand\n\nĐịa chỉ: Tầng 10, Tòa nhà Vincom, Số 45A đường Lý Tự Trọng và số 72 đường Lê Thánh Tôn, P. Bến Nghé, Q. 1, Tp. HCM\n\nĐiện thoại: 02839369142\n\nEmail: lorealvietnam@loreal.com\n\nMSDN: 0102289856 cấp ngày 23/05/2007 tại Hà Nội" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
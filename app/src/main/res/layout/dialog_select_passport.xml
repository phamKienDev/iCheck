<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_dialog"
    android:paddingBottom="@dimen/size_30">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/imgClose"
        android:layout_width="@dimen/size_44"
        android:layout_height="@dimen/size_44"
        android:background="@color/transparent"
        android:src="@drawable/ic_cancel_light_blue_24dp"
        app:layout_constraintBottom_toBottomOf="@id/textView32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/textView32" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_10"
        android:layout_marginBottom="@dimen/size_10"
        android:fontFamily="@font/barlow_semi_bold"
        android:text="Chọn loại giấy tờ"
        android:textColor="@color/lightBlue"
        android:textSize="@dimen/font_18"
        app:layout_constraintBottom_toTopOf="@id/divider31"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/btn_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_12"
        android:layout_marginRight="@dimen/size_12"
        android:fontFamily="@font/barlow_semi_bold"
        android:text="@string/xong"
        android:textColor="@color/lightBlue"
        android:textSize="@dimen/font_18"
        app:layout_constraintBottom_toBottomOf="@id/textView32"
        app:layout_constraintTop_toTopOf="@id/textView32"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/divider31"
        android:layout_width="0dp"
        android:layout_height="@dimen/size_1"
        android:layout_marginTop="@dimen/size_14"
        android:background="#D8D8D8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView32" />

    <TextView
        android:id="@+id/tvCmnd"
        android:layout_width="0dp"
        android:layout_height="@dimen/size_24"
        android:layout_marginStart="@dimen/size_14"
        android:layout_marginLeft="@dimen/size_14"
        android:layout_marginTop="@dimen/size_14"
        android:layout_marginEnd="@dimen/size_14"
        android:layout_marginRight="@dimen/size_14"
        android:fontFamily="@font/barlow_medium"
        android:gravity="center_vertical"
        android:text="@string/chung_minh_nhan_dan"
        android:textColor="#212121"
        android:textSize="@dimen/font_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider31" />

    <View
        android:id="@+id/divider32"
        android:layout_width="0dp"
        android:layout_height="@dimen/size_0_5"
        android:layout_marginStart="@dimen/size_12"
        android:layout_marginLeft="@dimen/size_12"
        android:layout_marginTop="@dimen/size_14"
        android:layout_marginEnd="@dimen/size_12"
        android:layout_marginRight="@dimen/size_12"
        android:background="#D8D8D8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCmnd" />

    <TextView
        android:id="@+id/tvCccd"
        android:layout_width="0dp"
        android:layout_height="@dimen/size_24"
        android:layout_marginStart="@dimen/size_14"
        android:layout_marginLeft="@dimen/size_14"
        android:layout_marginTop="@dimen/size_14"
        android:layout_marginEnd="@dimen/size_14"
        android:layout_marginRight="@dimen/size_14"
        android:fontFamily="@font/barlow_medium"
        android:text="@string/can_cuoc_cong_dan"
        android:textColor="@color/collection_product_name"
        android:textSize="@dimen/font_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider32" />

</androidx.constraintlayout.widget.ConstraintLayout>
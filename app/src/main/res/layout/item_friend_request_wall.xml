<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/size_128"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/size_5"
    android:layout_marginEnd="@dimen/size_5"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@id/imgAvatar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_128" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_4"
        android:drawablePadding="@dimen/size_4"
        android:ellipsize="end"
        android:fontFamily="@font/barlow_semi_bold"
        android:gravity="center_vertical"
        android:textAlignment="gravity"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:textColor="@color/colorNormalText"
        android:textSize="@dimen/font_14"
        tools:text="Xuyến Đỗ" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@id/btnAgree"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_28"
        android:layout_marginTop="@dimen/size_6"
        android:background="@drawable/btn_light_blue_corners_4"
        android:fontFamily="@font/barlow_semi_bold"
        android:gravity="center"
        android:includeFontPadding="false"
        android:minWidth="@dimen/size_100"
        android:paddingStart="@dimen/size_12"
        android:paddingEnd="@dimen/size_12"
        android:text="@string/xac_nhan"
        android:textColor="@color/white"
        android:textSize="@dimen/font_14"
        app:layout_constraintStart_toStartOf="@id/tvName"
        app:layout_constraintTop_toBottomOf="@id/tvName" />
</LinearLayout>
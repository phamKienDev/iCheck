<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <vn.icheck.android.ichecklibs.view.line_color.ICViewLineColor
        android:id="@+id/viewTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0_5"
        android:layout_marginStart="@dimen/size_12"
        android:layout_marginLeft="@dimen/size_12"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgProduct"
        android:layout_width="@dimen/size_60"
        android:layout_height="@dimen/size_60"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/size_12"
        android:layout_marginTop="@dimen/size_10"
        app:layout_constraintStart_toStartOf="@id/viewTop"
        app:layout_constraintTop_toBottomOf="@id/viewTop" />


    <vn.icheck.android.ichecklibs.view.normal_text.TextNormal
        android:id="@+id/tvProduct"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_8"
        android:layout_marginLeft="@dimen/size_8"
        android:ellipsize="end"
        android:fontFamily="@font/barlow_medium"
        android:includeFontPadding="false"
        android:maxLines="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgProduct"
        app:layout_constraintTop_toTopOf="@id/imgProduct" />

    <vn.icheck.android.ichecklibs.view.second_text.TextSecondBarlowMedium
        android:id="@+id/tvCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:text="@string/x1"
        android:layout_marginTop="@dimen/size_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvProduct"
        app:layout_constraintTop_toBottomOf="@id/tvProduct" />

</androidx.constraintlayout.widget.ConstraintLayout>
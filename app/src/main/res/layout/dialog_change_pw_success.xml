<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@android:color/transparent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_20"
        android:layout_marginLeft="@dimen/size_20"
        android:layout_marginEnd="@dimen/size_20"
        android:layout_marginRight="@dimen/size_20"
        app:cardCornerRadius="@dimen/size_4"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/bg_login_required_335x193" />

            <vn.icheck.android.ichecklibs.view.normal_text.TextNormalBarlowMedium
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_20"
                android:gravity="center_horizontal"
                android:text="Bạn đã thay đổi mật khẩu thành công!"
                android:textAlignment="center"
                android:textSize="@dimen/font_16" />

            <vn.icheck.android.ichecklibs.view.second_text.TextSecondBarlowMedium
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Hãy ghi nhớ mật khẩu cận thận nhé!"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_10"
                android:layout_marginTop="@dimen/size_16"
                android:layout_marginEnd="@dimen/size_10"
                android:layout_marginBottom="@dimen/size_10"
                android:orientation="horizontal">

                <vn.icheck.android.ichecklibs.view.primary.TextBarlowMediumPrimary
                    android:id="@+id/btn_home_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/size_10"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/size_12"
                    android:text="Về trang chủ"
                    android:textSize="@dimen/font_16" />

                <TextView
                    android:id="@+id/btn_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/barlow_medium"
                    android:gravity="center"
                    android:padding="@dimen/size_12"
                    android:text="Đăng nhập lại"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_16" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="vn.icheck.android.screen.user.option_manager_user_watching.ManagerUserWatchingActivity">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_44"
                android:background="@color/white"
                android:elevation="4dp">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@id/imgBack"
                    android:layout_width="@dimen/size_44"
                    android:layout_height="match_parent"
                    android:background="?android:attr/selectableItemBackground"
                    app:srcCompat="@drawable/ic_back_blue_v2_24px" />

                <vn.icheck.android.component.view.text_view.TextViewBarlowSemiBold
                    android:id="@id/txtTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/size_44"
                    android:layout_marginEnd="@dimen/size_44"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/lightBlue"
                    android:textSize="@dimen/font_18"
                    tools:text="Tiêu đề" />
            </FrameLayout>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@id/edtSearch"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/bg_corner_f0f0f0_4"
                android:drawableStart="@drawable/ic_search_gray_24dp"
                android:drawableLeft="@drawable/ic_search_gray_24dp"
                android:drawablePadding="8dp"
                android:gravity="start|center"
                android:hint="Tìm kiếm trong danh sách này"
                android:maxLines="1"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:singleLine="true"
                android:textColor="@color/darkGray1"
                android:textColorHint="#b4b4b4" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/barlow_semi_bold"
                android:textColor="@color/blue"
                android:textSize="@dimen/font_16"
                tools:text="2,345 người bạn đang theo dõi" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_follow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:paddingTop="6dp" />

        </LinearLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="vn.icheck.android.screen.user.invite_friend_follow_page.InviteFriendFollowPageActivity">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_12"
        android:layout_marginTop="@dimen/size_12"
        android:layout_marginRight="@dimen/size_12"
        android:background="@drawable/bg_blue_opacity_corners_4"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_12"
            android:layout_marginTop="@dimen/size_5"
            android:layout_marginBottom="@dimen/size_5"
            android:src="@drawable/img_emoji_65dp" />

        <vn.icheck.android.ichecklibs.view.second_text.TextSecondBarlowMedium
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_16"
            android:layout_marginTop="@dimen/size_12"
            android:layout_marginBottom="@dimen/size_12"
            android:layout_weight="1"
            android:gravity="top"
            android:includeFontPadding="false"
            android:text="@string/khi_moi_nguoi_theo_doi_trang_ban_moi_nhung_nguoi_khac_se_de_dang_tim_thay_trang_va_xem_bai_viet_nhieu_hon"
            android:textSize="@dimen/font_14" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/imgClose"
            android:layout_width="@dimen/size_44"
            android:layout_height="@dimen/size_44"
            android:background="@color/transparent"
            app:srcCompat="@drawable/ic_cancel_light_blue_24dp" />
    </LinearLayout>

    <vn.icheck.android.ichecklibs.view.second_text.TextSecondBarlowMedium
        android:id="@+id/tvSpam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_12"
        android:layout_marginTop="@dimen/size_12"
        android:layout_marginRight="@dimen/size_12"
        android:layout_weight="1"
        android:background="@drawable/bg_red_opacity_corners_4"
        android:gravity="top"
        android:includeFontPadding="false"
        android:padding="@dimen/size_12"
        android:text="@string/de_tranh_spam_chung_toi_se_gioi_han_so_loi_moi_co_the_gui_di_trong_ngay_hay_gui_loi_moi_hom_nay_roi_mai_quay_lai_gui_them_nhe"
        android:textSize="@dimen/font_14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container" />

    <vn.icheck.android.ichecklibs.view.secondary.TextBarlowSemiBoldSecondary
        android:id="@+id/tvFriendCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_14"
        android:textSize="@dimen/font_16"
        android:layout_marginLeft="@dimen/size_12"
        android:layout_marginRight="@dimen/size_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSpam" />


    <vn.icheck.android.ichecklibs.view.second_text.TextSecondBarlowMedium
        android:id="@+id/tvNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_2"
        android:layout_marginLeft="@dimen/size_12"
        android:layout_marginRight="@dimen/size_12"
        android:text="@string/de_tranh_spam_chung_toi_se_gioi_han_toi_da_50_loi_moi_co_the_gui_di_trong_ngay_hay_gui_loi_moi_toi_nhung_nguoi_ban_than_thiet_nhe"
        android:textSize="@dimen/font_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFriendCount" />

    <vn.icheck.android.ichecklibs.view.line_color.ICViewLineColor
        android:id="@+id/view45"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_0_5"
        android:layout_marginLeft="@dimen/size_12"
        android:layout_marginTop="@dimen/size_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNote" />


</androidx.constraintlayout.widget.ConstraintLayout>
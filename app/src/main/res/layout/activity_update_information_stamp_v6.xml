<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="vn.icheck.android.screen.user.detail_stamp_v6.update_information_guarantee_v6.UpdateInformationStampV6Activity">

    <include layout="@layout/toolbar_blue" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="@drawable/shadow_bottom" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvViewVerifiedPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_12"
                android:layout_marginTop="@dimen/size_12"
                android:layout_marginEnd="@dimen/size_12"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/cap_nhat_thong_tin_khach_hang_de_nhan_cac_uu_dai_va_cham_soc_tot_nhat"
                android:textAlignment="center"
                android:textColor="#828282"
                android:textSize="@dimen/font_13"
                android:textStyle="normal"
                android:visibility="visible"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvViewForceUpdate"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_12"
                android:layout_marginTop="@dimen/size_12"
                android:layout_marginEnd="@dimen/size_12"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/ban_phai_nhap_thong_tin_ca_nhan_de_kich_hoat_bao_hanh"
                android:textAlignment="center"
                android:textColor="#828282"
                android:textSize="@dimen/font_13"
                android:textStyle="normal" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_24"
                android:layout_marginTop="@dimen/size_20"
                android:fontFamily="sans-serif"
                android:text="@string/so_dien_thoai_bat_buoc"
                android:textColor="#434343"
                android:textSize="@dimen/font_14"
                android:textStyle="normal" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_12"
                android:layout_marginTop="@dimen/size_8"
                android:layout_marginEnd="@dimen/size_12"
                android:background="@drawable/bg_gray_corners_40_solid_white"
                android:fontFamily="sans-serif"
                android:hint="@string/nhap_so_dien_thoai"
                android:paddingStart="@dimen/size_16"
                android:inputType="phone"
                android:paddingTop="@dimen/size_10"
                android:paddingBottom="@dimen/size_10"
                android:textColor="#000000"
                android:textColorHint="#b4b4b4"
                android:textSize="@dimen/font_14"
                android:textStyle="normal" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_24"
                android:layout_marginTop="@dimen/size_20"
                android:fontFamily="sans-serif"
                android:text="@string/ho_va_ten_bat_buoc"
                android:textColor="#434343"
                android:textSize="@dimen/font_14"
                android:textStyle="normal" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_12"
                android:layout_marginTop="@dimen/size_8"
                android:layout_marginEnd="@dimen/size_12"
                android:background="@drawable/bg_gray_corners_40_solid_white"
                android:fontFamily="sans-serif"
                android:hint="@string/nhap_ho_ten"
                android:paddingStart="@dimen/size_16"
                android:paddingTop="@dimen/size_10"
                android:paddingBottom="@dimen/size_10"
                android:textColor="#000000"
                android:textColorHint="#b4b4b4"
                android:textSize="@dimen/font_14"
                android:textStyle="normal" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_24"
                android:layout_marginTop="@dimen/size_20"
                android:fontFamily="sans-serif"
                android:text="@string/email"
                android:textColor="#434343"
                android:textSize="@dimen/font_14"
                android:textStyle="normal" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_12"
                android:layout_marginTop="@dimen/size_8"
                android:layout_marginEnd="@dimen/size_12"
                android:background="@drawable/bg_gray_corners_40_solid_white"
                android:fontFamily="sans-serif"
                android:hint="@string/nhap_email"
                android:paddingStart="@dimen/size_16"
                android:paddingTop="@dimen/size_10"
                android:paddingBottom="@dimen/size_10"
                android:textColor="#000000"
                android:textColorHint="#b4b4b4"
                android:textSize="@dimen/font_14"
                android:textStyle="normal" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvSubTinhThanh"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_20"
                    android:fontFamily="sans-serif"
                    android:paddingStart="@dimen/size_24"
                    android:text="@string/tinh_thanh_bat_buoc"
                    android:textColor="#434343"
                    android:textSize="@dimen/font_14"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toStartOf="@+id/tvSubHuyen"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutSelectCity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_12"
                    android:layout_marginTop="@dimen/size_8"
                    android:layout_marginEnd="4.5dp"
                    android:background="@drawable/bg_gray_corners_40_solid_white"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toStartOf="@+id/layoutSelectDistrict"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvSubTinhThanh">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvCities"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_16"
                        android:layout_marginTop="@dimen/size_10"
                        android:layout_marginBottom="@dimen/size_10"
                        android:fontFamily="sans-serif"
                        android:text="@string/tuy_chon"
                        android:textColor="#434343"
                        android:textSize="@dimen/font_14"
                        android:textStyle="normal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/size_9"
                        android:drawableEnd="@drawable/ic_down_dark_blue_18px"
                        app:layout_constraintBottom_toBottomOf="@+id/tvCities"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tvCities" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvSubHuyen"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:paddingStart="@dimen/size_16"
                    android:text="@string/huyen_bat_buoc"
                    android:textColor="#434343"
                    android:textSize="@dimen/font_14"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tvSubTinhThanh"
                    app:layout_constraintTop_toTopOf="@+id/tvSubTinhThanh" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutSelectDistrict"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4.5dp"
                    android:layout_marginTop="@dimen/size_8"
                    android:layout_marginEnd="@dimen/size_12"
                    android:background="@drawable/bg_gray_corners_40_solid_white"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="@+id/tvSubHuyen"
                    app:layout_constraintStart_toEndOf="@+id/layoutSelectCity"
                    app:layout_constraintTop_toBottomOf="@+id/tvSubHuyen">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvDistricts"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_16"
                        android:layout_marginTop="@dimen/size_10"
                        android:layout_marginBottom="@dimen/size_10"
                        android:fontFamily="sans-serif"
                        android:text="@string/tuy_chon"
                        android:textColor="#434343"
                        android:textSize="@dimen/font_14"
                        android:textStyle="normal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/size_9"
                        android:drawableEnd="@drawable/ic_down_dark_blue_18px"
                        app:layout_constraintBottom_toBottomOf="@+id/tvDistricts"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tvDistricts" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_24"
                android:layout_marginTop="@dimen/size_20"
                android:fontFamily="sans-serif"
                android:text="@string/dia_chi_bat_buoc"
                android:textColor="#434343"
                android:textSize="@dimen/font_14"
                android:textStyle="normal" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_12"
                android:layout_marginTop="@dimen/size_8"
                android:layout_marginEnd="@dimen/size_12"
                android:background="@drawable/bg_gray_corners_40_solid_white"
                android:fontFamily="sans-serif"
                android:hint="@string/nhap_dia_chi"
                android:paddingStart="@dimen/size_16"
                android:paddingTop="@dimen/size_10"
                android:paddingBottom="@dimen/size_10"
                android:textColor="#000000"
                android:textColorHint="#b4b4b4"
                android:textSize="@dimen/font_14"
                android:textStyle="normal" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_24"
                android:layout_marginTop="@dimen/size_20"
                android:fontFamily="sans-serif"
                android:text="@string/noi_mua_san_pham"
                android:textColor="#434343"
                android:textSize="@dimen/font_14"
                android:textStyle="normal" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtShop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_12"
                android:layout_marginTop="@dimen/size_8"
                android:layout_marginEnd="@dimen/size_12"
                android:focusable="false"
                android:background="@drawable/bg_gray_corners_40_solid_white"
                android:fontFamily="sans-serif"
                android:hint="@string/noi_mua_san_pham"
                android:paddingStart="@dimen/size_16"
                android:paddingTop="@dimen/size_10"
                android:paddingBottom="@dimen/size_10"
                android:textColor="#000000"
                android:textColorHint="#b4b4b4"
                android:textSize="@dimen/font_14"
                android:textStyle="normal" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_40"
                android:layout_marginTop="@dimen/size_37"
                android:layout_marginEnd="@dimen/size_40"
                android:layout_marginBottom="@dimen/size_12"
                android:background="@drawable/bg_blue_corners_40"
                android:fontFamily="sans-serif-medium"
                android:text="@string/cap_nhat"
                android:textColor="#ffffff"
                android:textSize="@dimen/font_16"
                android:textStyle="normal" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_corners_top_10">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/imgClose"
        android:layout_width="@dimen/size_44"
        android:layout_height="@dimen/size_44"
        android:background="@color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_cancel_light_blue_24dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8"
        android:fontFamily="@font/barlow_semi_bold"
        android:text="@string/bo_loc"
        android:textColor="@color/light_blue"
        android:textSize="@dimen/font_18"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtFinish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8"
        android:layout_marginEnd="@dimen/size_12"
        android:layout_marginRight="@dimen/size_12"
        android:fontFamily="@font/barlow_semi_bold"
        android:text="@string/xong"
        android:textColor="@color/light_blue"
        android:textSize="@dimen/font_18"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view27"
        style="@style/Line_Gray.Horizontal"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/imgClose" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView62"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_12"
        android:layout_marginLeft="@dimen/size_12"
        android:layout_marginTop="@dimen/size_12"
        android:fontFamily="@font/barlow_semi_bold"
        android:text="@string/thoi_gian"
        android:textColor="@color/darkGray1"
        android:textSize="@dimen/font_14"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view27" />

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8"
        android:orientation="horizontal"
        android:paddingStart="@dimen/size_12"
        android:paddingEnd="@dimen/size_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView62">

        <vn.icheck.android.ichecklibs.view.disable_text.TextDisableHint
            android:id="@+id/txtBegin"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_36"
            android:layout_marginEnd="@dimen/size_6"
            android:layout_marginRight="@dimen/size_6"
            android:layout_weight="1"
            android:drawableEnd="@drawable/ic_calendar_off_24px"
            android:drawableRight="@drawable/ic_calendar_off_24px"
            android:drawablePadding="@dimen/size_8"
            android:fontFamily="@font/barlow_medium"
            android:gravity="center_vertical"
            android:hint="@string/tu_ngay"
            android:paddingStart="@dimen/size_10"
            android:paddingLeft="@dimen/size_10"
            android:paddingEnd="@dimen/size_6"
            android:paddingRight="@dimen/size_6"
            android:textColor="@color/black"
            android:textSize="@dimen/font_14"
            android:textStyle="normal" />


        <vn.icheck.android.ichecklibs.view.disable_text.TextDisableHint
            android:id="@+id/txtEnd"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_36"
            android:layout_marginStart="@dimen/size_6"
            android:layout_marginLeft="@dimen/size_6"
            android:layout_weight="1"
            android:drawableEnd="@drawable/ic_calendar_off_24px"
            android:drawableRight="@drawable/ic_calendar_off_24px"
            android:fontFamily="@font/barlow_medium"
            android:gravity="center_vertical"
            android:hint="@string/den_ngay"
            android:paddingStart="@dimen/size_10"
            android:paddingLeft="@dimen/size_10"
            android:paddingEnd="@dimen/size_6"
            android:paddingRight="@dimen/size_6"
            android:textColor="@color/black"
            android:textSize="@dimen/font_14"
            android:textStyle="normal" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView63"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_16"
        android:fontFamily="@font/barlow_semi_bold"
        android:text="@string/phan_loai_giao_dich"
        android:textColor="@color/darkGray1"
        android:textSize="@dimen/font_14"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@id/textView62"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_12"
        android:layout_marginTop="@dimen/size_10"
        app:layout_constraintStart_toStartOf="@id/textView62"
        app:layout_constraintTop_toBottomOf="@id/textView63">

        <vn.icheck.android.ichecklibs.view.normal_text.RadioButtonNormal
            android:id="@+id/radioAll"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_24"
            android:button="@drawable/radiobutton_checkbox_light_blue_24dp"
            android:fontFamily="@font/barlow_medium"
            android:paddingStart="@dimen/size_12"
            android:paddingLeft="@dimen/size_12"
            android:text="@string/tat_ca" />

        <vn.icheck.android.ichecklibs.view.normal_text.RadioButtonNormal
            android:id="@+id/radioXuVao"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_24"
            android:layout_marginTop="@dimen/size_14"
            android:button="@drawable/radiobutton_checkbox_light_blue_24dp"
            android:checked="true"
            android:fontFamily="@font/barlow_medium"
            android:paddingStart="@dimen/size_12"
            android:paddingLeft="@dimen/size_12"
            android:text="@string/xu_vao"/>

        <vn.icheck.android.ichecklibs.view.normal_text.RadioButtonNormal
            android:id="@+id/radioXuRa"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_24"
            android:layout_marginTop="@dimen/size_14"
            android:button="@drawable/radiobutton_checkbox_light_blue_24dp"
            android:checked="false"
            android:fontFamily="@font/barlow_medium"
            android:paddingStart="@dimen/size_12"
            android:paddingLeft="@dimen/size_12"
            android:text="@string/xu_ra" />
    </RadioGroup>


    <vn.icheck.android.ichecklibs.view.disable_text.TextDisable
        android:id="@+id/txtSettingAgain"
        android:layout_width="@dimen/size_120"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_32"
        android:layout_marginEnd="@dimen/size_12"
        android:layout_marginRight="@dimen/size_12"
        android:layout_marginBottom="@dimen/size_20"
        android:enabled="false"
        android:fontFamily="@font/barlow_semi_bold"
        android:gravity="center"
        android:paddingTop="@dimen/size_8"
        android:paddingBottom="@dimen/size_8"
        android:text="@string/thiet_lap_lai"
        android:textSize="@dimen/font_16"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/radioGroup" />
</androidx.constraintlayout.widget.ConstraintLayout>
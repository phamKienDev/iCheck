<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/layoutContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:fitsSystemWindows="false"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <include
            android:id="@id/layoutToolbar"
            layout="@layout/toolbar_account" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutToolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@id/layoutContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@id/imgIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/size_48"
                    android:src="@drawable/ic_logo_icheck_150_37"
                    app:layout_constraintBottom_toTopOf="@id/layoutInputPhone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@id/layoutInputPhone"
                    style="@style/Account_TextInputLayout.Register"
                    android:layout_marginTop="@dimen/size_48"
                    android:background="@android:color/transparent"
                    app:errorEnabled="true"
                    app:hintEnabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imgIcon">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@id/edtPhone"
                        style="@style/Account_Input"
                        android:drawableStart="@drawable/ic_baseline_phone_24"
                        android:drawableLeft="@drawable/ic_baseline_phone_24"
                        android:hint="@string/so_dien_thoai"
                        android:inputType="phone" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@id/layoutInputLastName"
                    style="@style/Account_TextInputLayout.Register"
                    app:errorEnabled="true"
                    app:hintEnabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layoutInputPhone">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@id/edtLastName"
                        style="@style/Account_Input"
                        android:drawableStart="@drawable/ic_account_blue_18"
                        android:drawableLeft="@drawable/ic_account_blue_18"
                        android:hint="@string/ho"
                        android:inputType="textCapWords" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@id/layoutInputFirstName"
                    style="@style/Account_TextInputLayout.Register"
                    app:errorEnabled="true"
                    app:hintEnabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layoutInputLastName">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@id/edtFirstName"
                        style="@style/Account_Input"
                        android:drawableStart="@drawable/ic_account_blue_18"
                        android:drawableLeft="@drawable/ic_account_blue_18"
                        android:hint="@string/ten"
                        android:inputType="textCapWords" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@id/layoutInputPassword"
                    style="@style/Account_TextInputLayout.Register"
                    app:errorEnabled="true"
                    app:hintEnabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layoutInputFirstName">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@id/edtPassword"
                        style="@style/Account_Input"
                        android:drawableStart="@drawable/ic_password_unlock_blue_18"
                        android:drawableLeft="@drawable/ic_password_unlock_blue_18"
                        android:hint="@string/mat_khau"
                        android:inputType="textPassword"
                        android:paddingStart="@dimen/size_0"
                        android:paddingLeft="@dimen/size_0"
                        android:paddingEnd="@dimen/size_46"
                        android:paddingRight="@dimen/size_46" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@id/imgBackground"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@id/imgShowOrHidePassword"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_48"
                    android:layout_marginEnd="@dimen/size_28"
                    android:layout_marginRight="@dimen/size_28"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:paddingStart="@dimen/size_10"
                    android:paddingEnd="@dimen/size_10"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/layoutInputPassword"
                    app:srcCompat="@drawable/ic_login_eye_gray_18"
                    tools:targetApi="lollipop" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@id/layoutInputRePassword"
                    style="@style/Account_TextInputLayout.Register"
                    app:errorEnabled="true"
                    app:hintEnabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layoutInputPassword">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@id/edtRePassword"
                        style="@style/Account_Input"
                        android:drawableStart="@drawable/ic_password_unlock_blue_18"
                        android:drawableLeft="@drawable/ic_password_unlock_blue_18"
                        android:hint="@string/nhap_lai_mat_khau"
                        android:inputType="textPassword" />
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@id/imgShowOrHideRePassword"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_48"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/size_28"
                    android:layout_marginRight="@dimen/size_28"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:paddingStart="@dimen/size_10"
                    android:paddingEnd="@dimen/size_10"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/layoutInputRePassword"
                    app:srcCompat="@drawable/ic_login_eye_gray_18"
                    tools:targetApi="lollipop" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@id/btnRegister"
                    style="@style/Button_Blue_Corners_26"
                    android:layout_marginStart="@dimen/size_38"
                    android:layout_marginTop="@dimen/size_32"
                    android:layout_marginEnd="@dimen/size_38"
                    android:layout_marginBottom="@dimen/size_50"
                    android:text="@string/dang_ky"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layoutInputRePassword" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
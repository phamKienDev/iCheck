<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/layoutContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/transparent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_20"
        android:layout_marginTop="@dimen/size_6"
        android:layout_marginEnd="@dimen/size_20"
        android:layout_marginBottom="@dimen/size_6"
        android:clickable="true"
        android:focusable="true"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="@dimen/size_6"
        card_view:cardUseCompatPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/bg_login_required_335x193" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_20"
                android:fontFamily="@font/barlow_semi_bold"
                android:gravity="center_horizontal"
                android:includeFontPadding="false"
                android:text="@string/login_reward_title_1"
                android:textColor="@color/colorNormalText"
                android:textSize="@dimen/font_16"
                android:textStyle="normal" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_42"
                android:layout_marginTop="@dimen/size_8"
                android:layout_marginEnd="@dimen/size_42"
                android:fontFamily="@font/barlow_medium"
                android:gravity="center_horizontal"
                android:includeFontPadding="false"
                android:text="@string/login_reward_title_2"
                android:textColor="@color/colorSecondText"
                android:textSize="@dimen/font_14"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_6"
                android:layout_marginBottom="@dimen/size_12"
                android:orientation="horizontal">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@id/btnRegister"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_10"
                    android:layout_marginLeft="@dimen/size_10"
                    android:layout_marginEnd="@dimen/size_5"
                    android:layout_marginRight="@dimen/size_5"
                    android:layout_weight="1"
                    android:background="@drawable/bg_corners_4_light_blue_no_solid"
                    android:fontFamily="@font/barlow_semi_bold"
                    android:gravity="center"
                    android:paddingTop="@dimen/size_8"
                    android:paddingBottom="@dimen/size_8"
                    android:text="@string/dang_ky"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/font_16" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@id/btnLogin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_5"
                    android:layout_marginLeft="@dimen/size_5"
                    android:layout_marginEnd="@dimen/size_10"
                    android:layout_marginRight="@dimen/size_10"
                    android:layout_weight="1"
                    android:background="@drawable/bg_corners_4_light_blue_solid"
                    android:fontFamily="@font/barlow_semi_bold"
                    android:gravity="center"
                    android:paddingTop="@dimen/size_8"
                    android:paddingBottom="@dimen/size_8"
                    android:text="@string/dang_nhap"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_16" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@id/tvClose"
        android:layout_width="@dimen/size_32"
        android:layout_height="@dimen/size_32"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size_12"
        android:background="?android:attr/selectableItemBackground"
        android:drawableTop="@drawable/ic_close_white_border_30dp" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<vn.icheck.android.ichecklibs.view.appbackground.white_background.ICLinearLayoutWhite xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:visibility="visible">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_12"
        android:layout_marginTop="@dimen/size_8"
        android:layout_marginEnd="@dimen/size_12"
        android:layout_marginBottom="@dimen/size_20"
        android:background="@drawable/bg_gray_corner_10"
        android:elevation="@dimen/size_2"
        android:paddingBottom="11.6dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_8"
            android:layout_marginTop="@dimen/size_8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_home_review_stars" />

        <vn.icheck.android.ichecklibs.view.line_color.ViewLineColor
            android:id="@+id/view23"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_2"
            android:layout_marginStart="@dimen/size_8"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginEnd="@dimen/size_8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView39" />

        <vn.icheck.android.ichecklibs.view.secondary.TextSecondary
            android:id="@+id/textView39"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_8"
            android:layout_marginTop="@dimen/size_8"
            android:layout_marginEnd="@dimen/size_8"
            android:text="Đánh giá khách quan của bạn sẽ là
đóng góp không nhỏ cho cộng đồng!"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView12"
            app:layout_constraintTop_toTopOf="parent" />

        <vn.icheck.android.ichecklibs.view.line_color.ViewLineColor
            android:id="@+id/view25"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_1"
            android:layout_marginTop="@dimen/size_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rcv_image" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_nrv_take_img"
            android:layout_width="@dimen/size_50"
            android:layout_height="@dimen/size_50"
            android:background="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view25"
            app:srcCompat="@drawable/ic_chat_image_18px" />

        <vn.icheck.android.ichecklibs.view.disable_text.EdittextDisableHint
            android:id="@+id/edt_nrv_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8"
            android:layout_marginEnd="@dimen/size_8"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:gravity="start|top"
            android:hint="Viết đánh giá"
            android:inputType="textMultiLine"
            android:lines="3"
            android:padding="@dimen/size_8"
            android:textSize="@dimen/font_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_nrv_take_img"
            app:layout_constraintTop_toBottomOf="@+id/view25" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_nrv_send"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_8"
            android:layout_marginTop="@dimen/size_15"
            android:layout_marginEnd="@dimen/size_8"
            android:background="@drawable/bg_blue_corners_40"
            android:fontFamily="sans-serif-medium"
            android:text="Gửi đánh giá"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_nrv_comment" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_rating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView39" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rcv_rating" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</vn.icheck.android.ichecklibs.view.appbackground.white_background.ICLinearLayoutWhite>
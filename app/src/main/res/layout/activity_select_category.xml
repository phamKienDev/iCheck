<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="vn.icheck.android.activities.product.contribute.SelectCategoryActivity">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:visibility="visible"
        tools:visibility="visible">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:padding="14dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_back_blue_24px" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/Tittle_blue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Chọn danh mục"
            android:textAlignment="center" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_4"
        android:background="@drawable/shadow_bottom" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@id/txtSearch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_34"
        android:layout_marginStart="@dimen/size_12"
        android:layout_marginTop="@dimen/size_4"
        android:layout_marginEnd="@dimen/size_12"
        android:layout_marginBottom="@dimen/size_4"
        android:background="@drawable/bg_border_gray_4dp_shop"
        android:drawableStart="@drawable/ic_search_gray_17"
        android:drawablePadding="@dimen/size_6"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:hint="Tìm kiếm"
        android:imeOptions="actionSearch"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:minLines="1"
        android:paddingStart="@dimen/size_10"
        android:paddingEnd="@dimen/size_10"
        android:singleLine="true"
        android:textColorHint="@color/gray"
        android:textSize="@dimen/font_14"
        android:textStyle="normal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="@color/gray"
        android:layout_marginTop="@dimen/size_2"
        android:layout_marginBottom="@dimen/size_4"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_category"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>

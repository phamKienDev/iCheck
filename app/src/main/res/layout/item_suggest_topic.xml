<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_5">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_topic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_108"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name_topic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_37"
        android:background="@drawable/bg_gradient_sugget_topic"
        android:ellipsize="end"
        android:fontFamily="@font/barlow_semi_bold"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:maxLines="2"
        android:paddingLeft="@dimen/size_7"
        android:paddingRight="@dimen/size_7"
        android:textColor="@color/white"
        android:textSize="@dimen/font_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Thời trang Nữ" />

    <ImageView
        android:id="@+id/img_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_4"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/img_topic"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_checkbox_single_on_24px" />

    <ImageView
        android:id="@+id/bg_selected"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_108"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/img_topic"
        app:layout_constraintEnd_toEndOf="@+id/img_topic"
        app:layout_constraintStart_toStartOf="@+id/img_topic"
        app:layout_constraintTop_toTopOf="@+id/img_topic"
        app:srcCompat="@drawable/bg_stroke_3_green_corners_4" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<vn.icheck.android.ichecklibs.view.app_background.white_background.ICLinearLayoutWhite xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <vn.icheck.android.helper.ViewPagerNoScroll
            android:id="@+id/viewPagerImgProduct"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/product_image_hoa_phat"
            app:layout_constraintBottom_toBottomOf="@id/viewPagerImgProduct"
            app:layout_constraintStart_toStartOf="@id/viewPagerImgProduct"
            app:layout_constraintEnd_toEndOf="@id/viewPagerImgProduct"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgPlayVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center"
            android:src="@mipmap/ic_play"
            app:layout_constraintTop_toTopOf="@id/viewPagerImgProduct"
            app:layout_constraintStart_toStartOf="@id/viewPagerImgProduct"
            app:layout_constraintEnd_toEndOf="@id/viewPagerImgProduct"
            app:layout_constraintBottom_toBottomOf="@id/viewPagerImgProduct"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@id/recyclerViewHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/size_8"
        android:paddingTop="@dimen/size_8"
        android:paddingLeft="@dimen/size_8" />

</vn.icheck.android.ichecklibs.view.app_background.white_background.ICLinearLayoutWhite>
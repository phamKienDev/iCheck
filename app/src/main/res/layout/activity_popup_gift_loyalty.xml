<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/black_20"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="@dimen/size_12"
    android:paddingEnd="@dimen/size_12">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/appCompatImageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_completed_mission_gift" />

        <LinearLayout
            android:id="@+id/linearLayout12"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_yellow_radius_bottom_10"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="@dimen/size_14"
            android:paddingEnd="@dimen/size_14"
            app:layout_constraintBottom_toTopOf="@+id/btnClose"
            app:layout_constraintEnd_toEndOf="@+id/appCompatImageView3"
            app:layout_constraintStart_toStartOf="@+id/appCompatImageView3"
            app:layout_constraintTop_toBottomOf="@+id/appCompatImageView3">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_12"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/font_16"
                tools:text="Chúc mừng bạn nhận được đủ \n 5 hộp quà từ sự kiện..." />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@id/tvMess1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:textAlignment="center"
                android:textColor="@color/darkGray1"
                android:textSize="@dimen/font_14"
                tools:text="Với việc hoàn thành các hạng mục nhiệm vụ trong \n sự kiện “Tuần lễn vàng scan - Thả ga mua sắm”" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_16"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/size_16">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_share"
                    android:layout_width="@dimen/size_101"
                    android:layout_height="@dimen/size_36"
                    android:layout_marginBottom="@dimen/size_20"
                    android:background="@drawable/btn_share_loyalty"
                    android:gravity="center"
                    android:text="Chia sẻ"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_16"
                    android:textStyle="bold"
                    android:elevation="@dimen/size_1"
                    android:textAllCaps="false" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/tvXemKhoQua"
                    android:layout_width="@dimen/size_170"
                    android:layout_height="@dimen/size_36"
                    android:layout_marginBottom="@dimen/size_20"
                    android:background="@drawable/bg_tv_xem_kho_qua_red_notification"
                    android:textAllCaps="false"
                    android:text="Xem kho quà"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_16"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:elevation="@dimen/size_1" />
            </LinearLayout>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cancel_popup_32px"
            android:layout_marginTop="@dimen/size_20"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout12"
            app:layout_constraintStart_toStartOf="@+id/linearLayout12"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout12" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
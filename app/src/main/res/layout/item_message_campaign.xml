<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@id/imgIcon"
            android:layout_width="@dimen/size_0"
            android:layout_height="@dimen/size_0"
            android:scaleType="centerInside"
            app:layout_constraintDimensionRatio="H, 3:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_24"
        android:layout_marginTop="@dimen/size_16"
        android:layout_marginEnd="@dimen/size_24"
        android:fontFamily="@font/barlow_semi_bold"
        android:gravity="center_horizontal"
        android:includeFontPadding="false"
        android:textColor="@color/colorNormalText"
        android:textSize="@dimen/font_16"
        tools:text="Hiện tại đang không có sự kiện nào!" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtMessageDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_38"
        android:layout_marginTop="@dimen/size_10"
        android:layout_marginEnd="@dimen/size_38"
        android:fontFamily="@font/barlow_medium"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="@dimen/size_6"
        android:textColor="@color/colorSecondText"
        android:textSize="@dimen/font_14"
        tools:text="Thường xuyên theo dõi các sự kiện hấp dẫn trên iCheck để tham gia và nhận quà nhé!"/>
</LinearLayout>

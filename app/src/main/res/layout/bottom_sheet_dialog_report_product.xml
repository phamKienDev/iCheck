<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_corners_top_10"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="31.8dp"
        app:srcCompat="@drawable/ic_feed_report_success" />

    <vn.icheck.android.component.view.text_view.TextViewBarlowSemiBold
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18.6dp"
        android:gravity="center"
        android:text="Cảm ơn bạn đã tố cáo sản phẩm này!"
        android:textColor="#212121"
        android:textSize="@dimen/font_16" />

    <vn.icheck.android.component.view.text_view.TextViewBarlowMedium
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_63"
        android:layout_marginTop="@dimen/size_6"
        android:layout_marginEnd="@dimen/size_62"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/font_6"
        android:text="Đội ngũ iCheck sẽ kiểm tra và giải quyết báo cáo của bạn sớm."
        android:textColor="#757575"
        android:textSize="@dimen/font_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/size_12"
        android:layout_marginTop="9.5dp"
        android:layout_marginEnd="@dimen/size_12"
        android:background="#d8d8d8" />

    <vn.icheck.android.component.view.text_view.TextViewBarlowMedium
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_12"
        android:layout_marginTop="@dimen/size_16"
        android:layout_marginEnd="@dimen/size_12"
        android:lineSpacingExtra="@dimen/font_6"
        android:text="Nội dung tố cáo:"
        android:textColor="#757575"
        android:textSize="@dimen/font_14" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_8"
        android:layout_marginStart="@dimen/size_8"/>

    <vn.icheck.android.component.view.ButtonLightBlueCorners4
        android:id="@id/btnCancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_36"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/size_12"
        android:layout_marginTop="@dimen/size_20"
        android:layout_marginEnd="@dimen/size_12"
        android:layout_marginBottom="@dimen/size_20"
        android:fontFamily="@font/barlow_semi_bold"
        android:gravity="center"
        android:text="Xong"
        android:textColor="@color/white" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vn.icheck.android.screen.user.suggest_topic.SuggestTopicActivity">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_gradient_blue"
        android:fontFamily="@font/barlow_semi_bold"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/size_64"
        android:paddingBottom="@dimen/size_50"
        android:text="Tùy chọn chủ đề ưu thích"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/font_18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <vn.icheck.android.ichecklibs.view.second_text.TextSecondBarlowMedium
        android:id="@+id/textView25"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="@dimen/font_6"
        android:paddingTop="@dimen/size_10"
        android:paddingBottom="@dimen/size_10"
        android:textAlignment="center"
        android:textSize="@dimen/font_14"
        app:layout_constraintBottom_toBottomOf="@+id/tv_bg"
        tools:text="@string/chon_it_nhat_3_chu_de" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_suggest_topic"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:paddingLeft="@dimen/size_10"
        android:paddingTop="@dimen/size_15"
        android:paddingRight="@dimen/size_10"
        android:paddingBottom="@dimen/size_70"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_bg" />

    <View
        android:id="@+id/viewShadow"
        style="@style/Shadow_Bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_4"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout7" />

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/size_12"
        android:paddingTop="@dimen/size_10"
        android:paddingRight="@dimen/size_12"
        android:paddingBottom="@dimen/size_20"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent">

        <vn.icheck.android.ichecklibs.view.primary.TextBarlowSemiBoldPrimary
            android:id="@+id/btn_skip"
            android:layout_width="@dimen/size_90"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/size_6"
            android:paddingBottom="@dimen/size_6"
            android:text="@string/bo_qua"
            android:textSize="@dimen/font_16"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_tiep_tuc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_12"
            android:layout_marginLeft="@dimen/size_12"
            android:layout_weight="1"
            android:background="@drawable/bg_darkgray2_corners_4"
            android:enabled="false"
            android:fontFamily="@font/barlow_semi_bold"
            android:gravity="center"
            android:paddingTop="@dimen/size_6"
            android:paddingBottom="@dimen/size_6"
            android:text="@string/tiep_tuc"
            android:textColor="@color/white"
            android:textSize="@dimen/font_16"
            android:visibility="gone" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

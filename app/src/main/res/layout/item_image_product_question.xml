<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/size_8">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgImageMess"
        android:layout_width="@dimen/size_80"
        android:layout_height="@dimen/size_80"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <View
        android:id="@+id/bgCover"
        android:layout_width="@dimen/size_80"
        android:layout_height="@dimen/size_80"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/imgImageMess"
        android:background="@drawable/bg_black_45_corner_10"
        app:layout_constraintBottom_toBottomOf="@id/imgImageMess"
        app:layout_constraintStart_toStartOf="@id/imgImageMess"
        app:layout_constraintEnd_toEndOf="@id/imgImageMess"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCoundImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:textColor="#ffffff"
        android:textSize="@dimen/font_16"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@id/bgCover"
        app:layout_constraintEnd_toEndOf="@id/bgCover"
        app:layout_constraintStart_toStartOf="@id/bgCover"
        app:layout_constraintTop_toTopOf="@id/bgCover" />

</androidx.constraintlayout.widget.ConstraintLayout>
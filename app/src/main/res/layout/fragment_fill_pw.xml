<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="@dimen/size_50"
        android:layout_height="@dimen/size_50"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/textView22"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView22"
        app:srcCompat="@drawable/ic_back_blue_24px_new" />

    <vn.icheck.android.ui.view.TextHeader
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_30"
        android:text="Tạo mật khẩu mới"
        android:textColor="#212121"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="match_parent"

        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_back">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView81"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_63"
                android:layout_marginEnd="@dimen/size_63"
                android:fontFamily="@font/barlow_medium"
                android:gravity="center"
                android:text="Hãy ghi nhớ mật khẩu cận thận nhé!" />

            <vn.icheck.android.ui.edittext.FocusableEditText
                android:id="@+id/edt_pw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_32"
                android:layout_marginTop="@dimen/size_32"
                android:layout_marginEnd="@dimen/size_32"
                android:fontFamily="@font/barlow_semi_bold"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:hint="Nhập mật khẩu"
                android:inputType="numberPassword"
                android:paddingBottom="@dimen/size_20"
                android:textSize="@dimen/font_18" />

            <vn.icheck.android.ui.edittext.FocusableEditText
                android:id="@+id/edt_repw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_32"
                android:focusableInTouchMode="true"
                android:layout_marginTop="@dimen/size_32"
                android:layout_marginEnd="@dimen/size_32"
                android:fontFamily="@font/barlow_semi_bold"
                android:gravity="center"
                android:hint="Nhập lại mật khẩu"
                android:inputType="numberPassword"
                android:paddingBottom="@dimen/size_20"
                android:textSize="@dimen/font_18" />

        </LinearLayout>
    </ScrollView>

    <vn.icheck.android.ui.EnableButton
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_36"
        android:layout_marginStart="@dimen/size_12"
        android:layout_marginEnd="@dimen/size_12"
        android:layout_marginBottom="@dimen/size_12"
        android:fontFamily="@font/barlow_medium"
        android:text="Tạo mật khẩu mới"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@id/layoutKeyboard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <FrameLayout
        android:id="@id/layoutKeyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorBackgroundGray"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/btnKeyboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/size_12"
            android:drawableStart="@drawable/ic_keyboard_black_18dp"
            android:drawablePadding="@dimen/size_8"
            android:paddingTop="@dimen/size_4"
            android:paddingBottom="@dimen/size_4"
            android:text="Bàn phím chữ"
            android:visibility="gone" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
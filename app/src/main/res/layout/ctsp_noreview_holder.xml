<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_12"
    android:background="@drawable/bg_gray_corner_10"
    android:elevation="@dimen/size_2"
    android:orientation="horizontal"
    android:padding="@dimen/size_8">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_home_review_stars" />

    <vn.icheck.android.ichecklibs.view.secondary.TextSecondary
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_8"
        android:layout_weight="1"
        android:drawableEnd="@drawable/ic_right_blue_24px"
        android:text="Sản phẩm chưa có đánh giá. Hãy là người đầu tiên để lại nhận xét"
        android:textAlignment="center" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_group_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/barlow_semi_bold"
            android:textColor="#212121"
            tools:text="1. Ai có thể xem thông tin cá nhân của bạn?" />

        <RadioGroup
            android:id="@+id/privacy_group"
            android:layout_width="match_parent"
            android:layout_marginStart="15dp"
            android:paddingBottom="12dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp">

            <RadioButton
                android:layout_marginTop="12dp"
                android:id="@+id/btn_friends"
                android:textColor="@drawable/radio_text_selected"
                android:fontFamily="@font/barlow_medium"
                android:layout_width="match_parent"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_height="wrap_content"
                tools:checked="true"
                android:text="Bạn bè của tôi" />

            <RadioButton
                android:layout_marginTop="12dp"
                android:id="@+id/btn_everyone"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@drawable/radio_text_selected"
                android:fontFamily="@font/barlow_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tất cả mọi người" />

            <RadioButton
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@drawable/radio_text_selected"
                android:layout_marginTop="12dp"
                android:id="@+id/btn_private"
                android:fontFamily="@font/barlow_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chỉ mình tôi" />
        </RadioGroup>
    </LinearLayout>
</androidx.cardview.widget.CardView>
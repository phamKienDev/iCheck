<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="@dimen/size_10"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <vn.icheck.android.ichecklibs.view.normal_text.TextNormalBarlowSemiBold
            android:id="@+id/tv_group_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_12"
            android:layout_marginLeft="@dimen/size_12"
            android:layout_marginTop="@dimen/size_4"
            tools:text="1. Ai có thể xem thông tin cá nhân của bạn?" />

        <RadioGroup
            android:id="@+id/privacy_group"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/size_15"
            android:paddingBottom="@dimen/size_12"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/size_15">

            <vn.icheck.android.ichecklibs.view.normal_text.RadioButtonCheckedNormal
                android:layout_marginTop="@dimen/size_12"
                android:id="@+id/btn_friends"
                android:fontFamily="@font/barlow_medium"
                android:layout_width="match_parent"
                android:paddingStart="@dimen/size_12"
                android:paddingEnd="@dimen/size_12"
                android:layout_height="wrap_content"
                tools:checked="true"
                android:text="@string/ban_be_cua_toi" />

            <vn.icheck.android.ichecklibs.view.normal_text.RadioButtonCheckedNormal
                android:layout_marginTop="@dimen/size_12"
                android:id="@+id/btn_everyone"
                android:paddingStart="@dimen/size_12"
                android:paddingEnd="@dimen/size_12"
                android:fontFamily="@font/barlow_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tat_ca_moi_nguoi" />

            <vn.icheck.android.ichecklibs.view.normal_text.RadioButtonCheckedNormal
                android:paddingStart="@dimen/size_12"
                android:paddingEnd="@dimen/size_12"
                android:layout_marginTop="@dimen/size_12"
                android:id="@+id/btn_private"
                android:fontFamily="@font/barlow_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/chi_minh_toi" />
        </RadioGroup>
    </LinearLayout>
</androidx.cardview.widget.CardView>
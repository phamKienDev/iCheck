<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_corner_white_10"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgGiftUserReward"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNameUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginEnd="8dp"
            android:textSize="@dimen/font_14"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="#434343"
            tools:text="Mai Lan Nguyễn" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPhoneUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textColor="#434343"
            android:textSize="@dimen/font_12"
            android:textStyle="normal"
            tools:text="+84 97 954 ****"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvGiftReward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:gravity="start|center"
            android:maxLines="1"
            android:textColor="#434343"
            android:textSize="@dimen/font_12"
            android:textStyle="normal"
            tools:text="Điện thoại Iphone 8Plus 128Gb (tên quà)"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvVendor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/blue"
            android:textSize="@dimen/font_12"
            android:textStyle="normal"
            tools:text="Nhà tài trợ: Công ty Cổ Phần iCheck"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvReceive_at"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginBottom="8dp"
            android:gravity="start"
            android:textColor="#828282"
            android:textSize="@dimen/font_12"
            android:textStyle="normal"
            tools:text="12:34, 13/05/2019"/>

    </LinearLayout>

</LinearLayout>
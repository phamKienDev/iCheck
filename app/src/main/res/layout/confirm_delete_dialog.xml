<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_solid_white_corner_5"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView88"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_20"
        android:text="Xoá bookmark?"
        android:textAlignment="center"
        android:textColor="#35384B"
        android:textSize="@dimen/font_18" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_24"
        android:layout_marginTop="@dimen/size_10"
        android:layout_marginEnd="@dimen/size_24"
        android:layout_marginBottom="@dimen/size_20"
        android:text="Bạn có chắc muốn xoá sản phẩm này khỏi danh sách bookmark không?"
        android:textAlignment="center"
        android:textColor="#4F4F4F" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="@color/grayLoyalty" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <vn.icheck.android.ichecklibs.view.secondary.TextSecondary
            android:id="@+id/btn_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/size_12"
            android:paddingBottom="@dimen/size_12"
            android:text="Không"
            android:textAlignment="center"
            android:textSize="@dimen/font_16" />

        <View
            android:layout_width="@dimen/size_1"
            android:layout_height="match_parent"
            android:background="@color/grayLoyalty" />

        <vn.icheck.android.ichecklibs.view.secondary.TextSecondary
            android:id="@+id/btn_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/size_12"
            android:paddingBottom="@dimen/size_12"
            android:text="Có"
            android:textAlignment="center"
            android:textSize="@dimen/font_16" />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_10"
    android:background="@drawable/bg_corner_white_10"
    android:paddingBottom="@dimen/size_16">


    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/img_close"
        android:layout_width="@dimen/size_40"
        android:layout_height="@dimen/size_40"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close_blue_24" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:text="@string/don_vi_van_chuyen"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/view27"
        style="@style/Line_Gray.Horizontal"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/img_close" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitleShipping"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_12"
        android:layout_marginTop="@dimen/size_15"
        android:fontFamily="sans-serif-medium"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:text="@string/hinh_thuc_van_chuyen_cua_hang_van_chuyen"
        android:textColor="@color/blue"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view27" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_shipping_note"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_6"
        android:layout_marginEnd="@dimen/size_8"
        android:fontFamily="sans-serif"
        android:includeFontPadding="false"
        android:text="@string/vui_long_thanh_toan_voi_cua_hang"
        android:textColor="@color/darkGray3"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvTitleShipping"
        app:layout_constraintTop_toBottomOf="@id/tvTitleShipping" />
</androidx.constraintlayout.widget.ConstraintLayout>
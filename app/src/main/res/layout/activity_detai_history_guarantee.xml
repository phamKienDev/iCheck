<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    tools:context="vn.icheck.android.screen.user.detail_stamp_v6_1.detail_history_guarantee.DetailHistoryGuaranteeActivity">

    <include
        android:id="@id/layoutToolbar"
        layout="@layout/toolbar_blue" />

    <vn.icheck.android.ichecklibs.view.appbackground.graybackground.ICNestedScrollViewGray
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0"
        android:descendantFocusability="blocksDescendants"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutToolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical">

            <TableLayout
                android:id="@id/layoutCustomer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingStart="@dimen/size_12"
                android:paddingTop="@dimen/size_16"
                android:paddingEnd="@dimen/size_12"
                android:paddingBottom="@dimen/size_16">

                <TableRow>
                    <vn.icheck.android.ichecklibs.view.secondary.TextBarlowMediumSecondary
                        android:id="@+id/tvCustomerInfor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_span="2"
                        android:layout_weight="1"
                        android:text="@string/thong_tin_khach_hang"
                        android:textSize="@dimen/font_18" />
                </TableRow>

                <TableRow android:layout_marginTop="@dimen/size_8">

                    <vn.icheck.android.ichecklibs.view.second_text.TextBody1Second
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/size_12"
                        android:drawableStart="@drawable/ic_outline_person_blue_18px"
                        android:drawablePadding="@dimen/size_8"
                        android:text="@string/ho_va_ten_v2"
                        android:textSize="@dimen/font_14"
                        app:layout_constraintTop_toTopOf="parent" />

                    <vn.icheck.android.ichecklibs.view.normal_text.TextBody1Normal
                        android:id="@+id/tvNameCustomer"
                        android:layout_width="@dimen/size_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:hint="@string/dang_cap_nhat"
                        android:textAlignment="gravity"
                        android:textSize="@dimen/font_14"
                        app:layout_constraintTop_toTopOf="parent" />
                </TableRow>

                <TableRow android:layout_marginTop="@dimen/size_8">

                    <vn.icheck.android.ichecklibs.view.second_text.TextBody1Second
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/size_12"
                        android:drawableStart="@drawable/ic_outline_person_blue_18px"
                        android:drawablePadding="@dimen/size_8"
                        android:text="@string/so_dien_thoai_v2"
                        android:textSize="@dimen/font_14"
                        app:layout_constraintTop_toTopOf="parent" />

                    <vn.icheck.android.ichecklibs.view.normal_text.TextBody1Normal
                        android:id="@+id/tvPhoneCustomer"
                        android:layout_width="@dimen/size_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:hint="@string/dang_cap_nhat"
                        android:textAlignment="gravity"
                        android:textSize="@dimen/font_14"
                        app:layout_constraintTop_toTopOf="parent" />
                </TableRow>

                <TableRow android:layout_marginTop="@dimen/size_8">

                    <vn.icheck.android.ichecklibs.view.second_text.TextBody1Second
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/size_12"
                        android:drawableStart="@drawable/ic_outline_local_blue_18px"
                        android:drawablePadding="@dimen/size_8"
                        android:text="@string/email_v2"
                        android:textSize="@dimen/font_14"
                        app:layout_constraintTop_toTopOf="parent" />

                    <vn.icheck.android.ichecklibs.view.normal_text.TextBody1Normal
                        android:id="@+id/tvMailCustomer"
                        android:layout_width="@dimen/size_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:hint="@string/dang_cap_nhat"
                        android:textAlignment="gravity"
                        android:textSize="@dimen/font_14"
                        app:layout_constraintTop_toTopOf="parent" />
                </TableRow>

                <TableRow android:layout_marginTop="@dimen/size_8">

                    <vn.icheck.android.ichecklibs.view.second_text.TextBody1Second
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/size_12"
                        android:drawableStart="@drawable/ic_outline_place_blue_18px"
                        android:drawablePadding="@dimen/size_8"
                        android:text="@string/dia_chi_v2"
                        android:textSize="@dimen/font_14"
                        app:layout_constraintTop_toTopOf="parent" />

                    <vn.icheck.android.ichecklibs.view.normal_text.TextBody1Normal
                        android:id="@+id/tvAddressCustomer"
                        android:layout_width="@dimen/size_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:hint="@string/dang_cap_nhat"
                        android:textAlignment="gravity"
                        android:textSize="@dimen/font_14"
                        app:layout_constraintTop_toTopOf="parent" />
                </TableRow>
            </TableLayout>

            <TableLayout
                android:id="@id/layoutContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingStart="@dimen/size_12"
                android:paddingTop="@dimen/size_16"
                android:paddingEnd="@dimen/size_12"
                android:paddingBottom="@dimen/size_16"
                android:shrinkColumns="*"
                android:stretchColumns="*">

                <TableRow>

                    <vn.icheck.android.ichecklibs.view.secondary.TextBarlowMediumSecondary
                        android:id="@+id/tvWarrantyInfor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_span="2"
                        android:text="@string/thong_tin_bao_hanh"
                        android:textSize="@dimen/font_18" />
                </TableRow>

                <TableRow android:layout_marginTop="@dimen/size_8">

                    <vn.icheck.android.ichecklibs.view.second_text.TextBody1Second
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/size_12"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_time_start_blue_18_px"
                        android:drawablePadding="@dimen/size_8"
                        android:text="@string/thoi_gian_v2"
                        android:textSize="@dimen/font_14"
                        app:layout_constraintTop_toTopOf="parent" />

                    <vn.icheck.android.ichecklibs.view.normal_text.TextBody1Normal
                        android:id="@+id/tvTimeGuarantee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:hint="@string/dang_cap_nhat"
                        android:textAlignment="gravity"
                        android:textSize="@dimen/font_14"
                        app:layout_constraintTop_toTopOf="parent" />
                </TableRow>

                <TableRow android:layout_marginTop="@dimen/size_8">

                    <vn.icheck.android.ichecklibs.view.second_text.TextBody1Second
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/size_12"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_store_blue_18px"
                        android:drawablePadding="@dimen/size_8"
                        android:text="@string/diem_bao_hanh_v2"
                        android:textSize="@dimen/font_14"
                        app:layout_constraintTop_toTopOf="parent" />

                    <vn.icheck.android.ichecklibs.view.normal_text.TextBody1Normal
                        android:id="@+id/tvNameStoreGuarantee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:hint="@string/dang_cap_nhat"
                        android:textAlignment="gravity"
                        android:textSize="@dimen/font_14"
                        app:layout_constraintTop_toTopOf="parent" />
                </TableRow>

                <TableRow android:layout_marginTop="@dimen/size_8">

                    <vn.icheck.android.ichecklibs.view.second_text.TextBody1Second
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/size_12"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_warranty_blue_18px"
                        android:drawablePadding="@dimen/size_8"
                        android:text="@string/tinh_trang_v2"
                        android:textSize="@dimen/font_14"
                        app:layout_constraintTop_toTopOf="parent" />

                    <vn.icheck.android.ichecklibs.view.normal_text.TextBody1Normal
                        android:id="@+id/tvStateGuarantee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:hint="@string/dang_cap_nhat"
                        android:textAlignment="gravity"
                        android:textSize="@dimen/font_14"
                        app:layout_constraintTop_toTopOf="parent" />
                </TableRow>

                <TableRow android:layout_marginTop="@dimen/size_8">

                    <vn.icheck.android.ichecklibs.view.second_text.TextBody1Second
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/size_12"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_time_start_blue_18_px"
                        android:drawablePadding="@dimen/size_8"
                        android:text="@string/ngay_hen_tra_v2"
                        android:textSize="@dimen/font_14"
                        app:layout_constraintTop_toTopOf="parent" />

                    <vn.icheck.android.ichecklibs.view.normal_text.TextBody1Normal
                        android:id="@+id/tvReturnTimeGuarantee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:hint="@string/dang_cap_nhat"
                        android:textAlignment="gravity"
                        android:textSize="@dimen/font_14"
                        app:layout_constraintTop_toTopOf="parent" />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:id="@id/layoutImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingStart="@dimen/size_12"
                android:paddingTop="@dimen/size_16"
                android:paddingEnd="@dimen/size_12"
                android:paddingBottom="@dimen/size_16"
                android:visibility="gone"
                tools:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingStart="@dimen/size_12"
                android:paddingTop="@dimen/size_16"
                android:paddingEnd="@dimen/size_12"
                android:paddingBottom="@dimen/size_16">

                <vn.icheck.android.ichecklibs.view.secondary.TextBarlowMediumSecondary
                    android:id="@+id/tvProgressWarranty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tien_do_bao_hanh"
                    android:textSize="@dimen/font_18" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </vn.icheck.android.ichecklibs.view.appbackground.graybackground.ICNestedScrollViewGray>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_4"
        android:background="@drawable/shadow_bottom"
        app:layout_constraintTop_toBottomOf="@id/layoutToolbar" />
</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<vn.icheck.android.ichecklibs.view.line_color.ConstraintLayoutBgWhiteRadius4Stroke05 xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_8">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_logo_page"
        android:layout_width="@dimen/size_60"
        android:layout_height="@dimen/size_60"
        android:layout_marginTop="@dimen/size_18"
        tools:src="@color/colorPrimary"
        app:civ_border_color="@color/grayD8"
        app:civ_border_width="@dimen/size_0_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_verfified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/img_logo_page"
        app:layout_constraintEnd_toEndOf="@+id/img_logo_page"
        app:srcCompat="@drawable/ic_verified_24px" />

    <vn.icheck.android.ichecklibs.view.normal_text.TextNormal
        android:id="@+id/tv_name_page"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_8"
        android:layout_marginTop="@dimen/size_6"
        android:layout_marginRight="@dimen/size_8"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:includeFontPadding="false"
        android:lineSpacingExtra="@dimen/font_6"
        android:fontFamily="@font/barlow_medium"
        android:singleLine="true"
        android:textSize="@dimen/font_14"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_logo_page"
        tools:text="Công ty sữa Việt..." />

    <vn.icheck.android.ichecklibs.view.second_text.TextSecondBarlowMedium
        android:id="@+id/tv_number_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_4"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:textSize="@dimen/font_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_page"
        tools:text="12,549 theo dõi" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_follow"
        style="@style/barlow_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_10"
        android:gravity="center"
        android:paddingTop="@dimen/size_4"
        android:paddingBottom="@dimen/size_4"
        android:text="Theo dõi"
        android:textColor="@color/white"
        android:textSize="@dimen/font_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_number_follow" />
</vn.icheck.android.ichecklibs.view.line_color.ConstraintLayoutBgWhiteRadius4Stroke05>
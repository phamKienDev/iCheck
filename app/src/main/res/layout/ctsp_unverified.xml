<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    tools:visibility="visible">

    <com.yarolegovich.discretescrollview.DiscreteScrollView
        android:id="@+id/imgProduct"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_12"
        android:layout_marginTop="@dimen/size_12"
        android:layout_marginEnd="@dimen/size_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.rd.PageIndicatorView
        android:id="@+id/slide_show_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8"
        android:layout_marginEnd="@dimen/size_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgProduct"
        app:piv_radius="@dimen/size_3"
        app:piv_selectedColor="@color/colorPrimary"
        app:piv_strokeWidth="@dimen/size_1"
        app:piv_unselectedColor="@color/grayD8" />

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_24"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="#434343"
        android:textSize="@dimen/font_16"
        app:layout_constraintEnd_toEndOf="@+id/imgProduct"
        app:layout_constraintStart_toStartOf="@+id/imgProduct"
        app:layout_constraintTop_toBottomOf="@+id/imgProduct"
        tools:text="Nước Hoa Hồng Trị Mụn Nhật Bản Meishoku Bigansui Medicated Skin Lotion"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_12"
        android:text="@string/cap_nhat_ngay_underline"
        android:textColor="#49AA2D"
        android:textStyle="italic"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/imgProduct"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_name"
        tools:visibility="gone" />

    <vn.icheck.android.ichecklibs.view.line_color.ICViewLineColor
        android:id="@+id/view20"
        android:layout_width="0dp"
        android:layout_height="@dimen/size_1"
        android:layout_marginTop="@dimen/size_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_recommend" />

    <ImageView
        android:id="@+id/img_ma_icheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_8"
        android:layout_marginTop="@dimen/size_8"
        app:layout_constraintStart_toStartOf="@+id/imgProduct"
        app:layout_constraintTop_toTopOf="@+id/imgProduct"
        app:srcCompat="@drawable/ma_icheck" />

    <ImageView
        android:id="@+id/img_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_20"
        android:elevation="@dimen/size_2"
        app:layout_constraintBottom_toBottomOf="@+id/imgProduct"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_share" />

    <vn.icheck.android.ichecklibs.view.secondary.TextSecondary
        android:id="@+id/tv_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:singleLine="true"
        android:textSize="@dimen/font_18"
        app:layout_constraintEnd_toStartOf="@+id/tv_sx"
        app:layout_constraintStart_toStartOf="@+id/imgProduct"
        app:layout_constraintTop_toBottomOf="@+id/tv_update"
        tools:text="130,000đ (Giá niêm yết)" />

    <com.willy.ratingbar.ScaleRatingBar
        android:id="@+id/product_rate"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_16"
        android:layout_marginTop="@dimen/size_4"
        app:layout_constraintStart_toStartOf="@+id/tv_price"
        app:layout_constraintTop_toBottomOf="@+id/tv_price"
        app:srb_drawableEmpty="@drawable/ic_star_outline_16px"
        app:srb_drawableFilled="@drawable/ic_star_full_16px"
        app:srb_isIndicator="true"
        app:srb_numStars="5"
        app:srb_starHeight="@dimen/size_12"
        app:srb_starPadding="@dimen/size_2"
        app:srb_starWidth="@dimen/size_12"
        app:srb_stepSize="0.5" />

    <TextView
        android:id="@+id/tv_sx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_8"
        android:drawablePadding="@dimen/size_4"
        android:gravity="end"
        android:paddingTop="@dimen/size_3"
        android:textColor="#434343"
        app:layout_constraintBottom_toBottomOf="@+id/tv_price"
        app:layout_constraintEnd_toStartOf="@id/nation_img"
        app:layout_constraintTop_toTopOf="@+id/tv_price"
        tools:text="Hàn Quốc" />

    <vn.icheck.android.ichecklibs.view.primary.TextPrimary
        android:id="@+id/tv_product_avg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_4"
        android:fontFamily="sans-serif-medium"
        android:textSize="@dimen/font_14"
        app:layout_constraintStart_toStartOf="@+id/product_rate"
        app:layout_constraintTop_toBottomOf="@id/product_rate"
        tools:text="5.6 Điểm nhận xét" />

    <TextView
        android:id="@+id/tv_recommend"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_4"
        android:alpha="0.9"
        android:textColor="#49AA2D"
        android:textSize="@dimen/font_12"
        app:layout_constraintEnd_toStartOf="@+id/tv_xrv"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/tv_price"
        app:layout_constraintTop_toBottomOf="@id/tv_product_avg"
        tools:text="93% Sẽ giới thiệu cho bạn bè" />

    <TextView
        android:id="@+id/tv_xrv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_next_blue_18px_vector"
        android:fontFamily="sans-serif-medium"
        android:textColor="#F2994A"
        android:textSize="@dimen/font_14"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/tv_recommend"
        app:layout_constraintEnd_toEndOf="@+id/imgProduct"
        app:layout_constraintStart_toEndOf="@+id/tv_recommend"
        app:layout_constraintTop_toTopOf="@+id/tv_recommend"
        tools:text="Xem 1.884 đánh giá" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nation_img"
        android:layout_width="@dimen/size_24"
        android:layout_height="@dimen/size_24"
        android:layout_marginEnd="@dimen/size_12"
        android:layout_marginRight="@dimen/size_12"
        app:layout_constraintBottom_toBottomOf="@+id/tv_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_price"
        tools:src="@drawable/vn_flag" />
</androidx.constraintlayout.widget.ConstraintLayout>
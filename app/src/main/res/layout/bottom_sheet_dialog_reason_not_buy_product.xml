<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/layoutContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="@dimen/size_51"
        android:layout_height="@dimen/size_6"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/size_8"
        android:background="@drawable/bg_indicator_selected" />

    <vn.icheck.android.ui.view.TextBarlowSemiBold
        android:id="@id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_red_corners_top_16"
        android:drawableStart="@drawable/ic_warning_white_40px"
        android:drawablePadding="@dimen/size_14"
        android:gravity="start|center"
        android:paddingStart="@dimen/size_15"
        android:paddingTop="@dimen/size_16"
        android:paddingEnd="@dimen/size_14"
        android:paddingBottom="@dimen/size_12"
        android:text="Tiếc quá,\nBạn không thể mua hàng tại nhà sản xuất!"
        android:textColor="#ffffff"
        android:textSize="@dimen/font_14" />

    <FrameLayout
        android:id="@id/layoutContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white">

        <vn.icheck.android.screen.user.reason_not_buy_product.ObservableWebView
            android:id="@id/webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@id/viewCenter"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            app:lottie_autoPlay="true"
            app:lottie_enableMergePathsForKitKatAndAbove="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/loading_short" />
    </FrameLayout>
</LinearLayout>
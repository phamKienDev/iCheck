<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="700dp"
    android:orientation="vertical"
    android:paddingTop="@dimen/size_40">

    <View
        android:id="@id/view"
        android:layout_width="@dimen/size_51"
        android:layout_height="@dimen/size_6"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/size_8" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <vn.icheck.android.ichecklibs.view.TextBarlowSemiBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_15"
            android:layout_marginTop="@dimen/size_16"
            android:layout_marginEnd="@dimen/size_14"
            android:layout_marginBottom="@dimen/size_12"
            android:drawableStart="@drawable/ic_warning_white_40px"
            android:drawablePadding="@dimen/size_14"
            android:gravity="start|center"
            android:text="Tiếc quá,\nBạn không thể mua hàng tại nhà sản xuất!"
            android:textColor="@color/white"
            android:textSize="@dimen/font_14" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="700dp">

        <vn.icheck.android.screen.user.reason_not_buy_product.ObservableWebView
            android:id="@id/webViewUrl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@id/layoutCenter"
            layout="@layout/dialog_loading"
            android:layout_width="@dimen/size_0"
            android:layout_height="@dimen/size_0"
            app:layout_constraintBottom_toBottomOf="@id/webViewUrl"
            app:layout_constraintEnd_toEndOf="@id/webViewUrl"
            app:layout_constraintStart_toStartOf="@id/webViewUrl"
            app:layout_constraintTop_toTopOf="@id/webViewUrl" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
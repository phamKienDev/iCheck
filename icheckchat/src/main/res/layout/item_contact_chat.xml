<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgAvatarFriend"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@color/colorPrimary" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgRank"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/imgAvatarFriend"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@id/imgAvatarFriend"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgAvatarFriend"
        app:layout_constraintTop_toTopOf="@id/imgAvatarFriend">

        <vn.icheck.android.ichecklibs.view.normal_text.TextNormalBarlowSemiBold
            android:id="@+id/tvNameUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="14dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:drawablePadding="@dimen/size_4"
            android:ellipsize="end"
            android:fontFamily="@font/barlow_semi_bold"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:singleLine="true"
            tools:drawableEnd="@drawable/ic_verified_user_16px"
            tools:drawableRight="@drawable/ic_verified_user_16px"
            tools:text="Test asldk lsakdk lsad la;sdl kadl;s ksldak dal;skd a;sk d;askd;Ã¡l" />

    </LinearLayout>

    <vn.icheck.android.ichecklibs.view.line_color.ViewLineColor
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/imgAvatarFriend" />
</androidx.constraintlayout.widget.ConstraintLayout>